<FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

              xmlns:xrd="clr-namespace:CodeReason.Reports.Document;assembly=CodeReason.Reports"
              PageHeight="29.7cm" PageWidth="21cm" ColumnWidth="21cm" FontFamily="Verdana" FontSize="18">

    <FlowDocument.Resources>
        <Style x:Key="HeaderStyle" TargetType="{x:Type Paragraph}">
            <Setter Property="Margin" Value="0,0,0,1cm" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="FontSize" Value="32" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="CellStyle" TargetType="{x:Type TableCell}">
            <Setter Property="FontSize" Value="24" />
        </Style>

        <Style x:Key="MainRowStyle" TargetType="{x:Type Paragraph}">
            <Setter Property="FontSize" Value="32" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </FlowDocument.Resources>
    
    <Section FontFamily="Arial">
        <Paragraph Style="{StaticResource HeaderStyle}">
            Образцы
        </Paragraph>
        <Paragraph Style="{StaticResource HeaderStyle}">
            <xrd:InlineDocumentValue PropertyName="BuyerName" />
        </Paragraph>
        <Paragraph Style="{StaticResource MainRowStyle}">
            <xrd:InlineDocumentValue PropertyName="Sample" />
        </Paragraph>
        
        <Table CellSpacing="0" BorderThickness="1" Margin="0,0,0,1cm" >
            <Table.Columns>
                <TableColumn Width="5*" />
                <TableColumn Width="*" />
            </Table.Columns>

            <TableRowGroup>
                <TableRow>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph>
                            <xrd:InlineDocumentValue  PropertyName="SampleSize"  />
                        </Paragraph>
                        <Paragraph>
                            <xrd:InlineDocumentValue  PropertyName="SampleClass"  />
                        </Paragraph>
                        <Paragraph>
                            <xrd:InlineDocumentValue  PropertyName="SampleCardboard"  />
                        </Paragraph>
                    </TableCell>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph>
                            <xrd:InlineDocumentValue  PropertyName="Qty"  />
                        </Paragraph>
                    </TableCell>
                </TableRow>
            </TableRowGroup>
        </Table>
        
        <Paragraph Style="{StaticResource HeaderStyle}">
            <xrd:InlineDocumentValue PropertyName="Note" />
        </Paragraph>
        
        <Paragraph Style="{StaticResource HeaderStyle}">
            <xrd:InlineDocumentValue PropertyName="Place" />
        </Paragraph>
        
    </Section>
</FlowDocument>