<FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

              xmlns:xrd="clr-namespace:CodeReason.Reports.Document;assembly=CodeReason.Reports"
              PageHeight="29.7cm" PageWidth="21cm" ColumnWidth="21cm" FontFamily="Verdana" FontSize="18">

    <FlowDocument.Resources>

        <Style x:Key="headerFooterRowStyle" TargetType="{x:Type TableRowGroup}">
        </Style>

        <Style x:Key="dataRowStyle" TargetType="{x:Type TableRowGroup}">
        </Style>

        <Style TargetType="{x:Type TableCell}">
            <Setter Property="Padding" Value="0cm,0cm,0cm,0.5cm"/>
        </Style>

    </FlowDocument.Resources>

    <xrd:ReportProperties>
        <xrd:ReportProperties.ReportName>Документ передачи образца от клиента</xrd:ReportProperties.ReportName>
        <xrd:ReportProperties.ReportTitle>Образец от клиента</xrd:ReportProperties.ReportTitle>
    </xrd:ReportProperties>

    <Section FontFamily="Arial" FontSize="16">
        <Paragraph FontWeight="Bold" TextAlignment="Center">
            Информация по образцу
        </Paragraph>

        <Table CellSpacing="0" BorderThickness="1" >
            <Table.Columns>
                <TableColumn Width="2*" />
                <TableColumn Width="3*" />
            </Table.Columns>

            <TableRowGroup>
                <xrd:TableRowForDataTable TableName="Info">
                    <TableCell>
                        <Paragraph TextAlignment="Left">
                            <xrd:InlineTableCellValue PropertyName="RowName"  />
                        </Paragraph>
                    </TableCell>
                    <TableCell>
                        <Paragraph TextAlignment="Left">
                            <xrd:InlineTableCellValue PropertyName="Description"  />
                        </Paragraph>
                    </TableCell>
                </xrd:TableRowForDataTable>
            </TableRowGroup>
        </Table>

        <Paragraph FontWeight="Bold" TextAlignment="Center">
            Цель передачи
        </Paragraph>

        <Table CellSpacing="0" BorderThickness="1" >
            <Table.Columns>
                <TableColumn Width="2*" />
                <TableColumn Width="3*" />
            </Table.Columns>

            <TableRowGroup>
                <xrd:TableRowForDataTable TableName="Purposes">
                    <TableCell>
                        <Paragraph TextAlignment="Left">
                            <xrd:InlineTableCellValue PropertyName="Represence"  />
                        </Paragraph>
                    </TableCell>
                    <TableCell>
                        <Paragraph TextAlignment="Left"  FontStyle="Italic">
                            <xrd:InlineTableCellValue PropertyName="Purpose"  />
                        </Paragraph>
                    </TableCell>
                </xrd:TableRowForDataTable>
            </TableRowGroup>
        </Table>

    </Section>
    
</FlowDocument>