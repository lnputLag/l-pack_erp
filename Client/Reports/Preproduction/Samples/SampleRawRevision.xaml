<FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:xrd="clr-namespace:CodeReason.Reports.Document;assembly=CodeReason.Reports"
              PageHeight="29.7cm" PageWidth="21cm" ColumnWidth="21cm" FontSize="14" FontFamily="Verdana">

    <FlowDocument.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="{x:Type Paragraph}">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="CellStyle" TargetType="{x:Type TableCell}">
            <Setter Property="Padding" Value="0.1cm,0.03cm,0.1cm,0.03cm"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0.02cm"/>
            <Setter Property="TextAlignment" Value="Left"/>
        </Style>
    </FlowDocument.Resources>

    <Section>
        <Paragraph>

        </Paragraph>
        <Table CellSpacing="0" BorderThickness="1" >
            <Table.Columns>
                <TableColumn Width="3*" />
                <TableColumn Width="10*" />
                <TableColumn Width="5*" />
                <TableColumn Width="4*" />
                <TableColumn Width="4*" />
                <TableColumn Width="4*" />
                <TableColumn Width="4*" />
            </Table.Columns>

            <TableRowGroup>
                <TableRow>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph Style="{StaticResource HeaderTextStyle}" >
                            Номер
                        </Paragraph>
                    </TableCell>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph Style="{StaticResource HeaderTextStyle}" >
                            Название
                        </Paragraph>
                    </TableCell>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph Style="{StaticResource HeaderTextStyle}" >
                            Габариты листа
                        </Paragraph>
                    </TableCell>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph Style="{StaticResource HeaderTextStyle}" >
                            Всего
                        </Paragraph>
                    </TableCell>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph Style="{StaticResource HeaderTextStyle}" >
                            Доступно
                        </Paragraph>
                    </TableCell>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph Style="{StaticResource HeaderTextStyle}" >
                            В резерве
                        </Paragraph>
                    </TableCell>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph Style="{StaticResource HeaderTextStyle}" >
                            Место
                        </Paragraph>
                    </TableCell>
                </TableRow>
            </TableRowGroup>

            <TableRowGroup>
                <xrd:TableRowForDataTable TableName="RawList">
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph TextAlignment="Right">
                            <xrd:InlineTableCellValue PropertyName="Num"  />
                        </Paragraph>
                    </TableCell>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph TextAlignment="Left">
                            <xrd:InlineTableCellValue PropertyName="Name"  />
                        </Paragraph>
                    </TableCell>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph TextAlignment="Left">
                            <xrd:InlineTableCellValue PropertyName="RawSize"  />
                        </Paragraph>
                    </TableCell>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph TextAlignment="Right">
                            <xrd:InlineTableCellValue PropertyName="Total"  />
                        </Paragraph>
                    </TableCell>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph TextAlignment="Right">
                            <xrd:InlineTableCellValue PropertyName="Free"  />
                        </Paragraph>
                    </TableCell>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph TextAlignment="Right">
                            <xrd:InlineTableCellValue PropertyName="Reserve"  />
                        </Paragraph>
                    </TableCell>
                    <TableCell Style="{StaticResource CellStyle}">
                        <Paragraph TextAlignment="Left">
                            <xrd:InlineTableCellValue PropertyName="RackPlace"  />
                        </Paragraph>
                    </TableCell>
                </xrd:TableRowForDataTable>
            </TableRowGroup>
        </Table>
    </Section>
</FlowDocument>
