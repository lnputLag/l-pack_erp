<controls:ControlBase x:Class="Client.Interfaces.Сounterparty.Customers.CustomersEditFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800"
             Style="{DynamicResource UserControlCanvas}">
    
    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border Style="{DynamicResource DataGridContainerHolder}" Margin="1" Width="800" HorizontalAlignment="Left">
        <Grid Style="{DynamicResource FromGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                <Button Name="SaveButton" Content="Сохранить" Style="{DynamicResource FButtonPrimary}"/>
                <Button Name="CancelButton" Content="Отмена" Style="{DynamicResource FButtonCancel}"/>
                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />
                <TextBlock Name="FormStatus" TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch"/>
            </StackPanel>
            
            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Grid.Row="2" Grid.Column="0">
                <Grid ShowGridLines="False" Style="{DynamicResource FromGrid}" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205*" />
                        <ColumnDefinition Width="433*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Потребитель: *" Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="Customer" Style="{DynamicResource FormField}"  HorizontalAlignment="Left" Width="250"/>
                    </Border>
                    
                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Группа:  " Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox x:Name="SelectGroupCustomer" Style="{DynamicResource CustomFormField}"  HorizontalAlignment="Left" Width="250" />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Посредник:  " Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="Dealer" Style="{DynamicResource FormField}"  HorizontalAlignment="Left" Width="250"/>
                    </Border>
                    
                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Срок годности потребителя (в месяцах):  " Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="ShelfLife" Style="{DynamicResource FormField}"  HorizontalAlignment="Left" Width="100"/>
                    </Border>
                    
                    <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Единица измерения: *" Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="4"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox x:Name="UnitMeasure" Style="{DynamicResource CustomFormField}"  HorizontalAlignment="Left" Width="125" />
                    </Border>

                    <Border Grid.Row="5"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="TovarDetail" Content="Марка листов в документах" Style="{DynamicResource FormField}" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                    </Border>
                    
                    <Border Grid.Row="6"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="TovarDetailAll" Content="Марка в документах" Style="{DynamicResource FormField}" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</controls:ControlBase>
