<controls:ControlBase x:Class="Client.Interfaces.Сounterparty.Customers.Tabs.CustomersListTab"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:controls="clr-namespace:Client.Interfaces.Main"
                      mc:Ignorable="d"
                      d:DesignHeight="400" d:DesignWidth="800"
                      Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Style="{DynamicResource DataGridContainer}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Style="{DynamicResource GridControlPanel}">
                    <StackPanel HorizontalAlignment="Stretch" Name="CustomersToolbar"
                                Style="{DynamicResource FormHeaderButtonsPanel}">
                        <Button Name="RefreshButton" Content="Обновить" Style="{DynamicResource Button}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}" />
                        <Button Name="EditCustomers" Content="Изменить" Style="{DynamicResource Button}" IsEnabled="False"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}" />
                        <Button Name="ExportToExcel" Content="В Excel" Style="{DynamicResource Button}" IsEnabled="False" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}" />
                        <Label Content="Поиск:" Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="100" TextWrapping="NoWrap"
                                 Name="SearchText" Text="" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Border>
                        <controls:GridBox4 x:Name="CustomersGrid" />
                    </Border>
                </Grid>
            </Grid>
            
            <Border Grid.Column="1"/>

            <Grid Grid.Column="2" Style="{DynamicResource DataGridContainer}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Style="{DynamicResource GridControlPanel}">
                    <StackPanel HorizontalAlignment="Stretch" Name="BuyerToolbar"
                                Style="{DynamicResource FormHeaderButtonsPanel}">
                        <Button Name="RefreshBuyerButton" Content="Обновить" Style="{DynamicResource Button}" IsEnabled="False"/>
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>
                        <Button Name="AddBuyerButton" Content="Добавить" Style="{DynamicResource Button}" IsEnabled="False"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                        <Button Name="DeleteBuyerButton" Content="Удалить" Style="{DynamicResource Button}" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
                
                <Grid Grid.Row="1">
                    <Border>
                        <controls:GridBox4 x:Name="BuyerGrid" />
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>

</controls:ControlBase>