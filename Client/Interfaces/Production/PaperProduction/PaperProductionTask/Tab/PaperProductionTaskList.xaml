<controls:ControlBase
x:Class="Client.Interfaces.Production.PaperProductionTaskList"
xmlns:local="clr-namespace:Client.Interfaces.Production"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:controls="clr-namespace:Client.Interfaces.Main"

mc:Ignorable="d" 
d:DesignWidth="1980"
d:DesignHeight="768" 
Style="{DynamicResource UserControlCanvas}">
    
    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                    <StackPanel Name="TaskGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                        <Label Content="Задания"  Style="{DynamicResource TopLabel}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                        <Button Name="RefreshItemsButton" Content="Обновить"  Style="{DynamicResource Button}"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" MinWidth="100" MaxWidth="150"  TextWrapping="NoWrap" Name="TaskSearchBox" Text=""  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <controls:SelectBox x:Name="ShiftSelectBox" SelectedItemChanged="ShiftSelectBox_SelectedItemChanged"  Style="{DynamicResource CustomFormField}" ListBoxMinHeight="130" Width="125" Autocomplete="False"/>
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                    </StackPanel>
                </Grid>
                
                <Grid Grid.Row="0" Grid.Column="2" Style="{DynamicResource GridControlPanel}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Name="PositionGridToolbar" Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                        <Label Content="Детализация заданий"  Style="{DynamicResource TopLabel}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                        <Button Name="CreateTaskButton" Content="Создать задачу"  Style="{DynamicResource Button}"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" MinWidth="100" MaxWidth="150"  TextWrapping="NoWrap" Name="PositionSearchBox" Text=""  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right">
                        <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?" Style="{DynamicResource Button}" Margin="0"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Column="0" Grid.Row="1" Style="{DynamicResource DataGridMainHolder}" >
                    <controls:GridBox4 x:Name="TaskGrid" />
                </Border>

                <Border Grid.Column="2" Grid.Row="1" Style="{DynamicResource DataGridMainHolder}" >
                    <controls:GridBox4 x:Name="PositionGrid" />
                </Border>
            </Grid>

            <Grid Grid.Row="1"  Grid.Column="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                    <StackPanel Name="CurrentOperationsGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                        <Label Content="Текущие операции"  Style="{DynamicResource TopLabel}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" MinWidth="100" MaxWidth="150"  TextWrapping="NoWrap" Name="CurrentOperationsSearchBox" Text=""  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="2" Style="{DynamicResource GridControlPanel}">
                    <StackPanel Name="CellGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                        <Label Content="Ячейки"  Style="{DynamicResource TopLabel}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" MinWidth="100" MaxWidth="150"  TextWrapping="NoWrap" Name="CellSearchBox" Text=""  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    </StackPanel>
                </Grid>

                <Border Grid.Column="0" Grid.Row="1" Style="{DynamicResource DataGridMainHolder}" >
                    <controls:GridBox4 x:Name="CurrentOperationsGrid" />
                </Border>

                <Border Grid.Column="2" Grid.Row="1" Style="{DynamicResource DataGridMainHolder}" >
                    <controls:GridBox4 x:Name="CellGrid" />
                </Border>
            </Grid>

        </Grid>
    </Border>
    
</controls:ControlBase>
