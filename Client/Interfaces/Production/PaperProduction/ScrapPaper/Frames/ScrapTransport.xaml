<controls:ControlBase 
    x:Class="Client.Interfaces.Production.PaperProduction.ScrapTransport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
    xmlns:local="clr-namespace:Client.Interfaces.Production.PaperProduction"
    xmlns:controls="clr-namespace:Client.Interfaces.Main"
    mc:Ignorable="d"
    d:DesignHeight="1000" d:DesignWidth="1900"      
    Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.RowDefinitions>
                <!--кнопки-->
                <RowDefinition Height="Auto"></RowDefinition>
                <!--разделитель-->
                <RowDefinition Height="Auto"></RowDefinition>
                <!--данные машины-->
                <RowDefinition Height="Auto"></RowDefinition>
                <!--разделитель-->
                <RowDefinition Height="10"></RowDefinition>
                <!--данные машины-->
                <RowDefinition Height="100"></RowDefinition>
            </Grid.RowDefinitions>

            <!--кнопки-->
            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}" >
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Name="FormToolbar">
                            <Button Content="Сохранить" Name="SaveButton" Tag="Save"   Style="{DynamicResource FButtonPrimary}"  ToolTip="Сохранить и закрыть"/>
                            <Button Content="Отмена"    Name="CancelButton" Tag="Close"  Style="{DynamicResource Button}" ToolTip="Закрывает окно без сохранения"/>
                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>

                            <Button Content="Отложить"  Name="PostponeCarButton"  Click="PostponeCarButton_Click" Style="{DynamicResource Button}" ToolTip="Отложить/вернуть разгруженные кипы до поступления документов."/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button Content="Возврат"  Name="ReturningCarButton" Click="ReturningCarButton_Click" Style="{DynamicResource Button}" ToolTip="Возврат/ответственное хранение партии макулатуры"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button Content="Оприходовать"  Name="PrihodCloseButton"  Click="PrihodCloseButton_Click" Style="{DynamicResource Button}" ToolTip="Оприходовать машину. Любые операции с машиной будут недоступны."/>
                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                            <Button Content="Акт приемки" Name="AktPrintButton" Click="AktPrintButton_Click" Width="180" Style="{DynamicResource Button}" ToolTip="Сформировать Акт приемки машины."/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button Content="Акт возврата" Name="ActReturningButton" Click="ActReturningButton_Click" Width="160" Style="{DynamicResource Button}" ToolTip="Сформировать Акт возврата партии макулатуры."/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <TextBlock  Name="StatusBar" Text="" TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <TextBlock  Name="ErrorTxt" Text="Ошибка" TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                        </StackPanel>
                        
                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right" >
                            <Button Name="HelpButton" Width="24" MinWidth="24" Content="?" Tag="Help" Style="{DynamicResource Button}" ToolTip="Вызов справки" />
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>

            <!--разделитель-->
            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"/>

            <!-- данные машины -->
            <Border Grid.Row="2" Grid.Column="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="610"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
            
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" >
                        <Grid Style="{DynamicResource FromGrid}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="230"/>
                                <ColumnDefinition Width="800"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Вид доставки"  FontWeight="Bold" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="SelfshipInfo" Width="370" IsReadOnly="True" Foreground="Yellow" Background="Red" Text="САМОВЫВОЗ, прикрепите водителя после разгрузки" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormFieldStatic}" />
                            </Border>

                            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Статус машины"  Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="StatusInfo" Width="370" Margin="0,2,0,0" Text="Взвешена полная (брутто)" FontWeight="Bold" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormFieldStatic}" />
                            </Border>

                            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Разгружено кип" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Style="{DynamicResource FormFieldContainer}">
                                <Grid Style="{DynamicResource FromGrid}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="125"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Style="{DynamicResource FormFieldContainer}">
                                        <StackPanel Orientation="Horizontal">
                                            <Button Name="DeleteBaleButton" Click="DeleteBaleButton_Click" Width ="20" Height="20" ToolTip="Удалить одну кипу из прихода" Style="{DynamicResource ButtonGlyph}" >
                                                <Image  Style="{DynamicResource DeleteImage}"  />
                                            </Button>
                                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                                            <Label Name="LabelCountBale" Width="30" Content="0" FontWeight="Bold" HorizontalAlignment="Stretch"/>

                                            <Button Name="ButtonAddBale" Click="ButtonAddBale_Click" Width ="20" Height="20" ToolTip="Добавить одну кипу в приход" Style="{DynamicResource ButtonGlyph}" >
                                                <Image Style="{DynamicResource AddImage}"  />
                                            </Button>
                                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                                            <Label Content="Ячейка" />
                                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                                            <Label Name="LabelScrabBale" Width="100" Content="П10-11" FontWeight="Bold"  />
                                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>

                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Style="{DynamicResource FormFieldContainer}">

                                    </Border>

                                    <Border Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Style="{DynamicResource FormFieldContainer}">
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="Возврат/хранение" Foreground="Red" />
                                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                                            <Label Name="LabelQtyReturn" Width="30" Content="999" Foreground="Red" FontWeight="Bold" />
                                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                                            <Label Content="Ячейка" Foreground="Red" />
                                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                                            <Label Name="LabelScrabBaleReturn" Width="50" Content="П5-11" Foreground="Red" FontWeight="Bold" />
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Style="{DynamicResource FormFieldContainer}">

                                    </Border>

                                </Grid>
                            </Border>

                            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Машина*" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="EditName" TextChanged="EditName_TextChanged" Style="{DynamicResource FormField}" Width="370" HorizontalAlignment="Left" IsReadOnly="False" />
                            </Border>

                            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Поставщик*" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Style="{DynamicResource FormFieldContainer}">
                                <StackPanel Orientation="Horizontal">
                                    <controls:SelectBox  x:Name="Postavshic" Width="370" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch"  ListBoxMinWidth="250" SelectedItemChanged="Postavshic_SelectedItemChanged" />

                                </StackPanel>
                            </Border>

                            <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Водитель" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="Driver" Width="370" Style="{DynamicResource CustomFormField}" Autocomplete="False" HorizontalAlignment="Stretch"  ListBoxMinWidth="250" />
                            </Border>

                            <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Счет-фактура" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Style="{DynamicResource FormFieldContainer}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="EditNumDoc" Style="{DynamicResource FormField}" Width="100" HorizontalAlignment="Left" IsReadOnly="False" />
                                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                                    <Label Content="от" />
                                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                                    <controls:DatePicker x:Name="NaklprihDataSf" TextChanged="NaklprihDataSf_TextChanged" Style="{DynamicResource DateEditStyle}"></controls:DatePicker>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Вид макулатуры" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="7" Grid.Column="1"  >
                                <Grid Style="{DynamicResource FromGrid}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="90"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormFieldContainer}">
                                        <RadioButton Name="Mc5BRadioButton" Content="МС-5Б" GroupName="Category" Checked="Mc5BRadioButton_Checked" IsChecked="False" Style="{DynamicResource RadioBox}"></RadioButton>
                                    </Border>

                                    <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                                        <RadioButton Name="Mc6BRadioButton" Content="МС-6Б" GroupName="Category" Checked="Mc6BRadioButton_Checked" IsChecked="False" Style="{DynamicResource RadioBox}"></RadioButton>
                                    </Border>

                                    <Border Grid.Row="0" Grid.Column="4" Style="{DynamicResource FormFieldContainer}">
                                        <RadioButton Name="Mc8BRadioButton" Content="МС-8В" GroupName="Category" Checked="Mc8BRadioButton_Checked" IsChecked="False" Style="{DynamicResource RadioBox}"></RadioButton>
                                    </Border>

                                    <Border Grid.Row="0" Grid.Column="6" Style="{DynamicResource FormFieldContainer}">
                                        <RadioButton Name="Mc11BRadioButton" Content="МС-11В" GroupName="Category" Checked="Mc11BRadioButton_Checked" IsChecked="False" Style="{DynamicResource RadioBox}"></RadioButton>
                                    </Border>
                                </Grid>
                            </Border>

                            <Border Grid.Row="8" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Списание машины" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="8" Grid.Column="1" HorizontalAlignment="Left" >
                                <Grid Style="{DynamicResource FromGrid}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormFieldContainer}" Grid.ColumnSpan="4">
                                        <RadioButton Name="InputControlFlag0RadioButton" Click="InputControlFlag0RadioButton_Click" Content="Обычное" GroupName="ControlFlag" IsChecked="True" Style="{DynamicResource RadioBox}"></RadioButton>
                                    </Border>

                                    <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                                        <RadioButton Name="InputControlFlag1RadioButton" Click="InputControlFlag1RadioButton_Click" Content="Входной контроль" GroupName="ControlFlag" IsChecked="False" Style="{DynamicResource RadioBox}"></RadioButton>
                                    </Border>

                                    <Border Grid.Row="0" Grid.Column="4" Style="{DynamicResource FormFieldContainer}">
                                        <RadioButton Name="InputControlFlag2RadioButton" Click="InputControlFlag2RadioButton_Click" Content="На ленту" GroupName="ControlFlag" IsChecked="False" Style="{DynamicResource RadioBox}"></RadioButton>
                                    </Border>
                                </Grid>
                            </Border>

                            <Border Grid.Row="9" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Масса по документу, кг" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="9" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                <Grid Style="{DynamicResource FromGrid}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="EditWeightDok" Text="0" TextChanged="EditWeightDok_TextChanged" Style="{DynamicResource FormFieldDigit}" Width="150" HorizontalAlignment="Left" IsReadOnly="False" />
                                    </Border>
                                </Grid>
                            </Border>

                            <Border Grid.Row="10" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Количество кип по документу, шт" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="10" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                <Grid Style="{DynamicResource FromGrid}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="EditQuantityBalDoc" Text="0" Style="{DynamicResource FormFieldDigit}" Width="150" HorizontalAlignment="Left" IsReadOnly="False" />
                                    </Border>
                                </Grid>

                            </Border>

                            <Border Grid.Row="11" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Масса брутто, кг" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="11" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                <Grid Style="{DynamicResource FromGrid}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="EditWeightFull" TextChanged="EditWeightDok_TextChanged" Text="0" Style="{DynamicResource FormFieldDigit}" Width="150" HorizontalAlignment="Left" IsReadOnly="False" />
                                    </Border>
                                </Grid>
                            </Border>

                            <Border Grid.Row="12" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Масса нетто, кг"  Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="12" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                <Grid Style="{DynamicResource FromGrid}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="EditWeightEmpty" Text="0" TextChanged="EditWeightDok_TextChanged" Style="{DynamicResource FormFieldDigit}" Width="150" HorizontalAlignment="Left" IsReadOnly="False" />
                                    </Border>
                                </Grid>

                            </Border>

                            <Border Grid.Row="13" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Масса поддонов, кг" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="13" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="EditWeightPoddon" Text="0" TextChanged="EditWeightDok_TextChanged" Style="{DynamicResource FormFieldDigit}" Width="150" HorizontalAlignment="Left" IsReadOnly="False" />
                            </Border>

                            <Border Grid.Row="14" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Фактический вес, кг" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="14" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormLabelContainer}">
                                <Label Name="LabelWeightFact" Margin="0,0,0,0" Content="20000 01.01.2000 00:00" FontWeight="Bold" Style="{DynamicResource FormLabel}" />
                            </Border>

                            <Border Grid.Row="15" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Влажность, %" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="15" Grid.Column="1" HorizontalAlignment="Left" Style="{DynamicResource FormFieldContainer}">
                                <Grid Style="{DynamicResource FromGrid}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="EditHumidity" Text="12" Style="{DynamicResource FormFieldDigit}" Width="150" HorizontalAlignment="Left" IsReadOnly="False" />
                                    </Border>

                                    <Border Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                    </Border>
                                </Grid>
                            </Border>

                            <Border Grid.Row="16" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Загрязнения, %" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="16" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="EditContamination" Text="1" Style="{DynamicResource FormFieldDigit}" Width="150" HorizontalAlignment="Left" IsReadOnly="False" />
                            </Border>


                            <Border Grid.Row="17" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Категория" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="17" Grid.Column="1" HorizontalAlignment="Left" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="ScrapCategory" Width="370" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch"  ListBoxMinWidth="250" SelectedItemChanged="ScrapCategory_SelectedItemChanged" />
                            </Border>

                            <Border Grid.Row="18" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Признаки макулатуры" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="18" Grid.Column="1" HorizontalAlignment="Left" Style="{DynamicResource FormFieldContainer}">
                                <Grid Style="{DynamicResource FromGrid}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                        <Grid Style="{DynamicResource FromGrid}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>

                                            <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormFieldContainer}" Grid.ColumnSpan="4">
                                                <CheckBox Name="WastepaperCelluloseQuality" Content="МЦК" IsEnabled="False" Style="{DynamicResource FormCheckBox}"/>
                                            </Border>

                                            <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource FormFieldContainer}" Grid.ColumnSpan="4">
                                                <CheckBox Name="WastepaperDry" Content="Сухая"  IsEnabled="False" Style="{DynamicResource FormCheckBox}"/>
                                            </Border>

                                            <Border Grid.Row="0" Grid.Column="4" Style="{DynamicResource FormFieldContainer}" Grid.ColumnSpan="4">
                                                <CheckBox Name="WastepaperShredding" Content="Шредирование"  IsEnabled="False" Style="{DynamicResource FormCheckBox}"/>
                                            </Border>

                                            <Border Grid.Row="0" Grid.Column="6" Style="{DynamicResource FormFieldContainer}" Grid.ColumnSpan="4">
                                                <CheckBox Name="RollsFlag" Content="Рулоны"  IsEnabled="False" Style="{DynamicResource FormCheckBox}"/>
                                            </Border>



                                        </Grid>
                                    </Border>

                                    <Border Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                        <Border Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                            <StackPanel Orientation="Horizontal">
                                                <RadioButton Name="BeforeConsumerFlag" Content="До потребителя" GroupName="Consumer"  IsEnabled="False" IsChecked="False" Style="{DynamicResource RadioBox}"></RadioButton>
                                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                                                <RadioButton Name="AfterConsumerFlag" Content="После потребителя" GroupName="Consumer"  IsEnabled="False" IsChecked="False" Style="{DynamicResource RadioBox}"></RadioButton>
                                            </StackPanel>
                                        </Border>
                                    </Border>
                                </Grid>
                            </Border>

                            <Border Grid.Row="19" Grid.Column="0" HorizontalAlignment="Right" Style="{DynamicResource FormFieldContainer}">
                                <!--<Label Content="Принято на склад, кг" Style="{DynamicResource FormLabel}" />-->
                                <Button Name="OnSkladBitBtn" Content="Принято на склад, кг" Click="OnSkladBitBtn_Click" Width="160" HorizontalAlignment="Stretch" Style="{DynamicResource Button}"/>
                            </Border>
