<controls:ControlBase 
    x:Class="Client.Interfaces.Production.PaperProduction.ScrapTransportReturning"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
    xmlns:local="clr-namespace:Client.Interfaces.Production.PaperProduction"
    xmlns:controls="clr-namespace:Client.Interfaces.Main"
    mc:Ignorable="d"
    d:DesignHeight="1000" d:DesignWidth="1900"      
    Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.RowDefinitions>
                <!--кнопки-->
                <RowDefinition Height="Auto"></RowDefinition>
                <!--разделитель-->
                <RowDefinition Height="Auto"></RowDefinition>
                <!--данные машины-->
                <RowDefinition Height="Auto"></RowDefinition>
                <!--разделитель-->
                <RowDefinition Height="10"></RowDefinition>

            </Grid.RowDefinitions>

            <!--кнопки-->
            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}" >
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Name="FormToolbar">
                            <Button Content="Сохранить" Name="SaveButton" Tag="Save"   Style="{DynamicResource FButtonPrimary}"  ToolTip="Сохранить и закрыть"/>
                            <Button Content="Отмена"    Name="CancelButton" Tag="Close"  Style="{DynamicResource Button}" ToolTip="Закрывает окно без сохранения"/>
                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>

                            <Button Content="Оставить на складе"  Name="ScrapBaleButton" Click="ScrapBaleButton_Click" Style="{DynamicResource Button}" ToolTip="Оставить партию на складе для списания в производство."/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button Content="Вернуть поставщику"  Name="ReturnSupplierButton" Click="ReturnSupplierButton_Click" Style="{DynamicResource Button}" ToolTip="Вернуть партию обратно поставщику"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button Content="Описание партии"  Name="ScrapTransportAtrrEditButton" Click="ScrapTransportAtrrEditButton_Click"   Style="{DynamicResource Button}" ToolTip="Описание партии макулатуры."/>
                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>

                            <TextBlock  Name="StatusBar" Text="" TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <TextBlock  Name="ErrorTxt" Text="" TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right" >
                            <Button Name="HelpButton" Width="24" MinWidth="24" Content="?" Tag="Help" Style="{DynamicResource Button}" ToolTip="Вызов справки" />
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>

            <!--разделитель-->
            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"/>

            <!-- данные машины -->
            <Border Grid.Row="2" Grid.Column="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" >
                        <Grid Style="{DynamicResource FromGrid}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="230"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Машина" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="EditName"  Style="{DynamicResource FormField}" Width="370" HorizontalAlignment="Left" IsReadOnly="True" />
                            </Border>

                            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Поставщик" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="EditPostavshic"  Style="{DynamicResource FormField}" Width="370" HorizontalAlignment="Left" IsReadOnly="True" />
                            </Border>

                            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Ряд разгрузки " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="EditSklad" Text=""  Style="{DynamicResource FormField}" Width="150" HorizontalAlignment="Left" IsReadOnly="True" />
                            </Border>

                            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Ячейка разгрузки" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="EditNumPlace" Text="" Style="{DynamicResource FormField}" Width="150" HorizontalAlignment="Left" IsReadOnly="True" />
                            </Border>

                            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Кип в ячейке разгрузки" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="EditBaleCount" Text="0" Style="{DynamicResource FormFieldDigit}" Width="150" HorizontalAlignment="Left" IsReadOnly="True" />
                            </Border>

                            <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Вес кип (фактический), кг"  Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="EditWeightFact" Text="0" Style="{DynamicResource FormFieldDigit}" Width="150" HorizontalAlignment="Left" IsReadOnly="True" />
                            </Border>

                            <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Выберите вид возврата *"  Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="6" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="TypeReturning" SelectedItemChanged ="TypeReturning_SelectedItemChanged"  Width="370" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Left" />
                            </Border>

                            <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Name="LabelQtyReturning" Content="Количество кип к возврату" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="EditQtyReturning" Text="0" Style="{DynamicResource FormFieldDigit}" Width="150" HorizontalAlignment="Left" IsReadOnly="False" />
                            </Border>

                            <Border Grid.Row="8" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Name="LabelSkladKeping" Content="Ряд хранения"  Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="8" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="SkladKeping" SelectedItemChanged ="SkladKeping_SelectedItemChanged"   Width="150" Style="{DynamicResource CustomFormField}" Autocomplete="False" HorizontalAlignment="Left" />
                            </Border>

                            <Border Grid.Row="9" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Name="LabelNumPlaceKeping" Content="Ячейка хранения"  Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="9" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="NumPlaceKeping" Width="150" Style="{DynamicResource CustomFormField}" Autocomplete="False" HorizontalAlignment="Left" />
                            </Border>
                            
                            <Border Grid.Row="10" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Вес кип на хранении, кг" Style="{DynamicResource FormLabel}"/>
                            </Border>
                            <Border Grid.Row="10" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="EditWeightReturning" Text="0" Style="{DynamicResource FormFieldDigit}" Width="150" HorizontalAlignment="Left" IsReadOnly="False" />
                            </Border>

                            <Border Grid.Row="11" Grid.Column="1" HorizontalAlignment="Left"  Style="{DynamicResource FormFieldContainer}">
                                <CheckBox Name="CellScrabDefectFlag" Content="Оставить на хранение в ячейке разгрузки" Style="{DynamicResource FormCheckBox}" IsEnabled="True" HorizontalAlignment="Stretch"/>
                            </Border>

                            <Border Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource FormLabelContainer}">
                            </Border>

                            <!--инфо панель-->
                            <Border Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="420"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="150"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Grid.Column="1" Height="100" VerticalAlignment="Top" HorizontalAlignment="Left" Panel.ZIndex="10">
                                        <controls:SplashControl x:Name="SplashControl"/>
                                    </Grid>

                                </Grid>
                            </Border>


                        </Grid>
                    </Border>

                        <!--вертикальный разделитель-->
                        <!--<Border Grid.Column="1" Grid.Row="0" Width="1" BorderBrush="#ffcccccc" Padding="0,0,0,0" Margin="5,0,5,0" BorderThickness="1,0,1,0"/>-->
                </Grid>
            </Border>
               
               

        </Grid>
    </Border>

</controls:ControlBase>
