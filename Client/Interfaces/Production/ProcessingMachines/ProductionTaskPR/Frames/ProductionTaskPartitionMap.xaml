<UserControl x:Class="Client.Interfaces.Production.ProcessingMachines.ProductionTaskPartitionMap"
             xmlns:local="clr-namespace:Client.Interfaces.Production.ProcessingMachines"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource FormContainerHolder}" >
        <Grid Style="{DynamicResource FormContainer}" HorizontalAlignment="Left" VerticalAlignment="Stretch" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FormControlPanel}" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="11*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                    <Button Name="SaveButton"   Content="Сохранить"  Style="{DynamicResource FButtonPrimary}" Click="SaveButton_Click"   />
                    <Button Name="CancelButton" Content="Отмена"     Style="{DynamicResource FButtonCancel}" Click="CancelButton_Click"   />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                    <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                    <Button x:Name="HelpButton" Click="HelpButton_Click"       ToolTip="Справка"     Style="{DynamicResource ButtonGlyph}" HorizontalAlignment="Right" Margin="0,0,0,0"      >
                        <ContentControl Style="{DynamicResource ButtonSMSymbolIcon}" Content="?" />
                    </Button>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Grid Grid.Row="2"  Grid.Column="0" Style="{DynamicResource FromGrid}" Margin="5,0,0,0" HorizontalAlignment="Left" Width="800">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormGridFieldContainer}" >
                    <Label Content="Комплект решеток"  Style="{DynamicResource TopLabel}" />
                </Border>

                <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormGridFieldContainer}">
                    <StackPanel Orientation="Horizontal">
                        <TextBox Name="PartitionalSetName" Style="{DynamicResource FormField}"   Width="340" TextWrapping="NoWrap"  IsReadOnly="True" MouseDoubleClick="PartitionalSetName_MouseDoubleClick" />
                        <TextBox Name="OrderId" Visibility="Collapsed" />

                        <Button Name="PartitionalSetSelectButton"   Click="PartitionalSetSelectButton_Click" ToolTip="Добавить"   Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0"  >
                            <Image Style="{DynamicResource SelectImage}" />
                        </Button>
                        <Button Name="PartitionalSetClearButton"  Click="PartitionalSetClearButton_Click"   ToolTip="Удалить"    Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0"      >
                            <Image Style="{DynamicResource CloseImage}" />
                        </Button>

                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource FormGridFieldContainer}" >
                    <Label Content="Кол-во"  Style="{DynamicResource TopLabel}" />
                </Border>

                <Border Grid.Row="1" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="PartitionalSetQty" Style="{DynamicResource FormField}" TextWrapping="NoWrap" TextChanged="PartitionalSetQty_TextChanged" />
                </Border>

                <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormGridFieldContainer}" >
                    <Label Content="Сырье"  Style="{DynamicResource TopLabel}" />
                </Border>

                <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormGridFieldContainer}">
                    <StackPanel Orientation="Horizontal">
                        <TextBox Name="RawName" Style="{DynamicResource FormField}"   Width="340" TextWrapping="NoWrap"  IsReadOnly="True" MouseDoubleClick="RawName_MouseDoubleClick" />

                        <Button Name="RawSelectButton"   Click="RawSelectButton_Click" ToolTip="Добавить"   Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0"  >
                            <Image Style="{DynamicResource SelectImage}" />
                        </Button>
                        <Button Name="RawClearButton"  Click="RawClearButton_Click"   ToolTip="Удалить"    Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0"      >
                            <Image Style="{DynamicResource CloseImage}" />
                        </Button>
                    </StackPanel>
                </Border>

                <Border Grid.Row="2" Grid.Column="2" Style="{DynamicResource FormGridFieldContainer}" >
                    <Label Content="Расход, кг"  Style="{DynamicResource TopLabel}" />
                </Border>

                <Border Grid.Row="3" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="RawTaskQty" Style="{DynamicResource FormField}"  TextWrapping="NoWrap"/>
                </Border>

                <Border Grid.Row="2" Grid.Column="4" Style="{DynamicResource FormGridFieldContainer}" >
                    <Label Content="Склад, кг"  Style="{DynamicResource TopLabel}" />
                </Border>

                <Border Grid.Row="3" Grid.Column="4" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="RawStockQty" Style="{DynamicResource FormField}"  TextWrapping="NoWrap" IsReadOnly="True"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
