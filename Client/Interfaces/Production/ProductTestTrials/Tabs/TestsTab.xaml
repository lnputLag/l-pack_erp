<controls:ControlBase x:Class="Client.Interfaces.Production.ProductTestTrials.TestsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}">
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.RowSpan="3" Name="ProgressContainer" Visibility="Collapsed" Panel.ZIndex="10">
                <controls:ProgressControl x:Name="Progress" Caption="Выполняется операция" />
            </Grid>

            <Grid Grid.Row="1" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <StackPanel Name="MainGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Stretch">
                        <Label Content="C:"  Style="{DynamicResource TopLabel}" />
                        <Grid Style="{DynamicResource FormFieldDateHolder}">
                            <controls:DatePicker x:Name="FromDate"  MaxLength="10" Style="{DynamicResource DateEditStyle}"/>
                        </Grid>
                        <Label Content="По:"  Style="{DynamicResource TopLabel}"/>
                        <Grid Style="{DynamicResource FormFieldDateHolder}">
                            <controls:DatePicker x:Name="ToDate"  MaxLength="10" Style="{DynamicResource DateEditStyle}" />
                        </Grid>


                        <Button Name="Refresh" Content="Показать" Style="{DynamicResource Button}"/>
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>

                        <Label Content="Поиск: " Style="{DynamicResource TopLabel}"/>
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="100" TextWrapping="NoWrap" Name="SearchText" Text=""/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>

                        <Label Content="Профиль:" Style="{DynamicResource TopLabel}" />
                        <controls:SelectBox MinWidth="120" ListBoxMinHeight="170" x:Name="SelectProfile" Style="{DynamicResource CustomFormField}"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>

                        <Label Content="Марка:" Style="{DynamicResource TopLabel}" />
                        <controls:SelectBox MinWidth="120" ListBoxMinHeight="170" x:Name="SelectMark" Style="{DynamicResource CustomFormField}"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>

                        <controls:SelectBox MinWidth="200" ListBoxMinHeight="170" x:Name="SelectCarton" Style="{DynamicResource CustomFormField}"/>
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>

                        <Button Name="ShowTechCard" Content="Показать ТК" Style="{DynamicResource Button}"/>

                        <Button Name="ExportToExcel" Content="В Excel" Style="{DynamicResource Button}"/>

                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="2" >
                <Border Style="{DynamicResource DataGridMainHolder}">
                    <controls:GridBox4 x:Name="MainGrid" />
                </Border>
            </Grid>
        </Grid>
    </Border>
</controls:ControlBase>
