<controls:ControlBase x:Class="Client.Interfaces.Production.ProductTestTrials.TemperatureHumidityControlTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}">
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.RowSpan="3" Name="ProgressContainer" Visibility="Collapsed" Panel.ZIndex="10">
                <controls:ProgressControl x:Name="Progress" Caption="Выполняется операция" />
            </Grid>

            <Grid Grid.Row="1" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <StackPanel Name="ControlGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Stretch">
                        <Button Name="RefresheButton" Content="Обновить" Style="{DynamicResource Button}"/>
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>


                        <Button Name="AddButton" Content="Добавить" Style="{DynamicResource Button}"/>
                        <Button Name="EditButton" Content="Изменить" Style="{DynamicResource Button}"/>
                        <Button Name="DeleteButton" Content="Удалить" Style="{DynamicResource Button}"/>

                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>
                        <Label Content="Поиск: " Style="{DynamicResource TopLabel}"/>
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="100" TextWrapping="NoWrap" Name="SearchText" Text=""/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="2" >
                <Border Style="{DynamicResource DataGridMainHolder}">
                    <controls:GridBox4 x:Name="ControlGrid" />
                </Border>
            </Grid>

        </Grid>
    </Border>
</controls:ControlBase>
