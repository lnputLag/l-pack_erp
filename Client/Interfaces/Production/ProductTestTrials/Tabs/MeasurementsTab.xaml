<controls:ControlBase x:Class="Client.Interfaces.Production.ProductTestTrials.MeasurementsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1280">
    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}">
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="0.3*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.RowSpan="5" Name="ProgressContainer" Visibility="Collapsed" Panel.ZIndex="10">
                <controls:ProgressControl x:Name="Progress" Caption="Выполняется операция" />
            </Grid>

            <Grid Grid.Row="1" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <StackPanel Name="GridToolbarOne" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Stretch">

                        <Label Content="C:"  Style="{DynamicResource TopLabel}" />
                        <Grid Style="{DynamicResource FormFieldDateHolder}">
                            <controls:DatePicker x:Name="FromDate"  MaxLength="10"   Style="{DynamicResource DateEditStyle}"/>
                        </Grid>
                        <Label Content="По:"  Style="{DynamicResource TopLabel}"/>
                        <Grid Style="{DynamicResource FormFieldDateHolder}">
                            <controls:DatePicker x:Name="ToDate"  MaxLength="10"   Style="{DynamicResource DateEditStyle}" />
                        </Grid>

                        <Button Name="RefreshGridFirst" Content="Показать" Style="{DynamicResource Button}"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>

                        <Button Name="EditButton" Content="Изменить" Style="{DynamicResource Button}"/>
                        <Button Name="DeleteButton" Content="Удалить" Style="{DynamicResource Button}"/>
                        <Button Name="UploadButton" Tag="add_rig_consumption" Content="Загрузить" Style="{DynamicResource Button}"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                        
                        <Button Name="ShowTechMap" Content="Показать ТК" Style="{DynamicResource Button}"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <Label Content="Поиск: "/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="100" TextWrapping="NoWrap" Name="SearchText" Text=""/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}" />

                        <Button Name="ExportToExcel" Content="В Excel" Style="{DynamicResource Button}"/>
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>
                        
                        <Label Content="Корректировка значений:" ToolTip="Заново проходит по данным и если данные не заполнились с первого раза, заполняет их."  Style="{DynamicResource TopLabel}" />
                        <controls:SelectBox x:Name="AdjustingValues" Style="{DynamicResource CustomFormField}" Width="140" Autocomplete="False" SelectedItemChanged="AdjustingValues_OnSelectedItemChanged" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                        <Button Name="UploadAgainButton" Content="Повторная загрузка" Style="{DynamicResource Button}"/>
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>
                        
                        <!-- Для отправки отчета -->
                        
                        <Button Name="GetReport" Content="Получить отчет" Style="{DynamicResource Button}"/>

                        <StackPanel Orientation="Horizontal" Name="BlockForSendler" Visibility="Collapsed">
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                            <Label Content="C:"  Style="{DynamicResource TopLabel}" />
                            <Grid Style="{DynamicResource FormFieldDateHolder}">
                                <controls:DatePicker x:Name="ReportFromDate"  MaxLength="10"   Style="{DynamicResource DateEditStyle}"/>
                            </Grid>
                            <Label Content="По:"  Style="{DynamicResource TopLabel}"/>
                            <Grid Style="{DynamicResource FormFieldDateHolder}">
                                <controls:DatePicker x:Name="ReportToDate"  MaxLength="10"   Style="{DynamicResource DateEditStyle}" />
                            </Grid>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                            <controls:SelectBox x:Name="FactoryType" Style="{DynamicResource CustomFormField}" Width="120" Autocomplete="True" CompareMode="Contains" SelectedItemChanged="FactoryType_SelectedItemChanged"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                            <Button Name="SendReport" Content="Отправить" Style="{DynamicResource Button}"/>
                            <Button Name="CancelSendReport" Content="Отмена" Style="{DynamicResource Button}"/>
                        </StackPanel>
                        
                        <!-- Конец блока отправка отчета -->
                        
                        
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <StackPanel Name="GridToolbarSecond" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Stretch">
                        

                        <CheckBox Name="VstBelowLower" Content="ВСТ ниже нижнего"  Style="{DynamicResource CheckBoxTopPanel}"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <CheckBox Name="ShtanzForma" Content="Штанцформы"  Style="{DynamicResource CheckBoxTopPanel}"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <CheckBox Name="Clishe" Content="Клише" Style="{DynamicResource CheckBoxTopPanel}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <CheckBox Name="Less10" Content="Менее 10%"  Style="{DynamicResource CheckBoxTopPanel}"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <CheckBox Name="More10" Content="Более 10%"  Style="{DynamicResource CheckBoxTopPanel}"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                        
                        <CheckBox Name="ShowHiddenColumnsCheckBox" 
                                  Style="{DynamicResource CheckBoxTopPanel}"
                                  Content="Показать скрытые колонки" 
                                  Checked="ShowHiddenColumnsCheckBox_Checked"
                                  Unchecked="ShowHiddenColumnsCheckBox_Unchecked"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="3" Margin="0 0 0 10">
                <Border Style="{DynamicResource DataGridMainHolder}">
                    <controls:GridBox4 x:Name="GridFirst"/>
                </Border>
            </Grid>

            <Grid Grid.Row="4" Margin="0 0 0 10">
                <Border Style="{DynamicResource DataGridMainHolder}">
                    <controls:GridBox4 x:Name="GridSecond"/>
                </Border>
            </Grid>

            <Grid Grid.Row="5">
                <Border Style="{DynamicResource DataGridMainHolder}">
                    <controls:GridBox4 x:Name="GridThree"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</controls:ControlBase>
