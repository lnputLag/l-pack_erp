<controls:ControlBase x:Class="Client.Interfaces.Production.ProductTestTrials.MeasurementsEditFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d"
             HorizontalAlignment="Left"
             d:DesignHeight="450" d:DesignWidth="800"
             MaxWidth="800"
             Style="{DynamicResource UserControlCanvas}"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}">
        <Grid Style="{DynamicResource FromGrid}" Width="520" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" >

                <Button Name="SaveButton"    Content="Сохранить" Style="{DynamicResource FButtonPrimary}"    />
                <Button Name="CancelButton"   Content="Отмена"     Style="{DynamicResource FButtonCancel}"    />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <TextBlock  Name="FormStatus" Text="" TextAlignment="Left" Style="{DynamicResource FStatusBar}"/>

            </StackPanel>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="300"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Влажность заготовки, %:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="HumidityWorkpiece" Text="" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Влажность изделия, %:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="HumidityProduct" Text="" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="ВСТ 24, кН:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="VST24" Text="" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="ЕСТ 24, кН:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="3"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="EST24" Text="" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                    </Border>

                    <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="ЕСТ (заг) 24, кН:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="4"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="EST24Zag" Text="" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                    </Border>

                    <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Толщина заготовки, мм:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="5"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="ThicknessWorkpiece" Text="" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                    </Border>

                    <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Толщина изделия, мм:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="6"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="ThicknessProduct" Text="" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                    </Border>

                    <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Примечание:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="7"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="Note" Text="" TextWrapping="WrapWithOverflow" Style="{DynamicResource FormField}"  MaxLength="64"  />
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</controls:ControlBase>
