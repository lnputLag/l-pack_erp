<UserControl x:Class="Client.Interfaces.Production.ComplectationCorrugator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:main="clr-namespace:Client.Interfaces.Main"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200"
             Style="{DynamicResource UserControlCanvas}"
             >
    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>


    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource DataGridContainer}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
                <RowDefinition Height="10*"></RowDefinition>
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <StackPanel Name="GridToolbar" Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}">
                        <Button Name="RefreshButton" Content="Обновить" Click="RefreshButton_Click"  Style="{DynamicResource Button}" IsEnabled ="True"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>

                        <Button Name="ComplectationButton" Content="Скомплектовать" Tag="access_mode_full_access"   Click="ComplectationButton_Click"  Style="{DynamicResource FButtonPrimary}"  IsEnabled ="False"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>

                        <Button Name="GetOrderDataButton" Content="Данные по заданиям"   Click="GetOrderDataButton_Click"  Style="{DynamicResource Button}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>

                        <TextBlock  Name="ComplectationCorrugatorInStockFlagTextBlock" FontWeight="Bold" TextAlignment="Left" VerticalAlignment="Center" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="2" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Name="CompletedGridToolbar" Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                            <Button Name="LabelPrintButton" Content="Печать ярлыка" Click="LabelPrintButton_Click"  Style="{DynamicResource Button}" IsEnabled ="False"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                            <Button Name="SettingsButton"    ToolTip="Настройка"   Style="{DynamicResource ButtonGlyph}" Click="SettingsButton_Click"  Margin="0,0,5,0"  >
                                <Image Style="{DynamicResource SettingsImage}" />
                                <Button.ContextMenu>
                                    <ContextMenu Name="BurgerMenu">
                                        <MenuItem Header="Настройка печати" Name="BurgerPrintSettings" Click="BurgerPrintSettings_Click"  Background="#ffffff" />
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                            <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Click="HelpButton_Click" Margin="0" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="0" RowSpan="2" ColumnSpan="3" Height="100"  VerticalAlignment="Top" Panel.ZIndex="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="13*"/>
                    <ColumnDefinition Width="227*"/>
                </Grid.ColumnDefinitions>
                <controls:SplashControl x:Name="SplashControl" Grid.ColumnSpan="2"/>
            </Grid>

            <Grid  Grid.Row="1"  Grid.Column="0">
                <Grid Style="{DynamicResource DataGridContainer}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Style="{DynamicResource DataGridMainHolder}" >
                        <main:GridBox x:Name="ProductGrid" />
                    </Border>
                </Grid>
            </Grid>

            <Grid  Grid.Row="1"  Grid.Column="2" Grid.RowSpan="2">
                <Grid Style="{DynamicResource DataGridContainer}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Style="{DynamicResource DataGridMainHolder}" >
                        <main:GridBox x:Name="CompletedGrid" />
                    </Border>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="0" >

                <Grid Style="{DynamicResource DataGridContainer}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>

                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"  Grid.Column="0" Margin="0,0,0,0">
                        <Border Style="{DynamicResource DataGridMainHolder}" Height="32">
                            <StackPanel  Grid.Column="0" Name="ShipmentsGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}">
                                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                                <Label Name="WritenOffLabel" Content="0"  Style="{DynamicResource TopLabel}" />
                                <Label Content="товара на "  Style="{DynamicResource TopLabel}" />
                                <Label Name="WritenOffPalletLabel" Content="0"  Style="{DynamicResource TopLabel}" />
                                <Label Content="поддонах"  Style="{DynamicResource TopLabel}" />
                                <Label Content="будет списано"  Style="{DynamicResource TopLabel}" />
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Grid.Row="1" Style="{DynamicResource DataGridMainHolder}" >
                        <main:GridBox x:Name="PalletGrid" />
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>

</UserControl>
