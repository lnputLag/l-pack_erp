<UserControl x:Class="Client.Interfaces.Production.ComplectationWriteOffList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:main="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             d:DesignHeight="450" d:DesignWidth="1200"
             Style="{DynamicResource UserControlCanvas}"  
             >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}" >
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Name="GridToolbar" Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                        <Label Content="С:"  Style="{DynamicResource TopLabel}"/>
                        <Grid Style="{DynamicResource FormFieldDateHolder}">
                            <!--<TextBox Name="FromDate"  MaxLength="10"  Style="{DynamicResource FormFieldDate}" IsReadOnly="False" />
                            <DatePicker  SelectedDate="{Binding Path=Text, Mode=OneWayToSource, ElementName=FromDate, Converter={StaticResource DateDate} }"  Style="{DynamicResource FormFieldDP}"  Margin="0,1,0,0">
                            </DatePicker>-->
                            <controls:DatePicker x:Name="FromDate" Style="{DynamicResource DateEditStyle}">
                            </controls:DatePicker>
                        </Grid>
                        <Label Content="По:"  Style="{DynamicResource TopLabel}"/>
                        <Grid Style="{DynamicResource FormFieldDateHolder}">
                            <!--<TextBox Name="ToDate"  MaxLength="10"  Style="{DynamicResource FormFieldDate}" IsReadOnly="False" IsEnabled="True" />
                            <DatePicker  SelectedDate="{Binding Path=Text, Mode=OneWayToSource, ElementName=ToDate, Converter={StaticResource DateDate} }"  Style="{DynamicResource FormFieldDP}"  Margin="0,1,0,0">
                            </DatePicker>-->
                            <controls:DatePicker x:Name="ToDate" Style="{DynamicResource DateEditStyle}">
                            </controls:DatePicker>
                        </Grid>
                        <Button Content="Показать" Name="ShowButton"  Style="{DynamicResource Button}" Click="ShowButton_Click" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>

                        <Button Name="LabelPrintButton"  Content="Печать ярлыка"  Style="{DynamicResource Button}" Click="LabelPrintButton_Click"/>
                        <Button Name="RemoveWriteOffButton" Content="Отменить списание" Style="{DynamicResource Button}" Click="RemoveWriteOffButton_Click"/>
                        <Button Name="EditReasonButton" Content="Изменить причину" Style="{DynamicResource Button}" Click="EditReasonButton_Click"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                        
                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="SearchText" Text=""  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>

                        <controls:SelectBox x:Name="ComplectationTypes" SelectedItemChanged="ComplectationTypes_SelectedItemChanged"  Style="{DynamicResource CustomFormField}" ListBoxMinHeight="110" Width="120" Autocomplete="False"/>
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>

                        <Button Name="PalletHistoryButton" Content="История перемещения"  Style="{DynamicResource Button}" Click="PalletHistoryButton_Click"   />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>

                        <Button Name="ExcelButton" Content="В Excel"  Style="{DynamicResource Button}" Click="ExcelButton_Click"   />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >

                        <Button Name="SettingsButton"    ToolTip="Настройка"   Style="{DynamicResource ButtonGlyph}" Click="SettingsButton_Click"  Margin="0,0,5,0"  >
                            <Image Style="{DynamicResource SettingsImage}" />
                            <Button.ContextMenu>
                                <ContextMenu Name="BurgerMenu">
                                    <MenuItem Header="Настройка печати" Name="BurgerPrintSettings" Click="BurgerPrintSettings_Click"  Background="#ffffff" />
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>

                        <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Click="HelpButton_Click"  Margin="0" />
                    </StackPanel>


                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1"  Grid.Column="0"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource DataGridMainHolder}"  >
                <main:GridBox x:Name="Grid" Visibility="Visible" />
            </Border>

            <Grid Grid.Row="0" Grid.Column="0" Height="100"  VerticalAlignment="Top" Panel.ZIndex="10">
                <controls:SplashControl x:Name="SplashControl"/>
            </Grid>
            
        </Grid>
    </Grid>
</UserControl>

