<controls:ControlBase 
                x:Class="Client.Interfaces.Production.Recomplectation"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:Client.Interfaces.Production"
                xmlns:controls="clr-namespace:Client.Interfaces.Main"
                mc:Ignorable="d" 
                d:DesignHeight="1450" d:DesignWidth="1800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="OldProductGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                        <Label Content="Продукция" ToolTip="Старая продукция" Style="{DynamicResource TopLabel}" />

                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" MinWidth="80" MaxWidth="150"  TextWrapping="NoWrap" Name="OldProductSearchBox" Text=""  />
                        <Button Name="OldProductRefreshButton" Content="Показать"  Style="{DynamicResource Button}"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                        <Button Name="RecomplectationButton" Content="Перекомплектовать" ToolTip="Выполнить перекомплектацию" Style="{DynamicResource FButtonPrimary}"/>
                        <controls:SelectBox x:Name="PlaceSelectBox" Style="{DynamicResource CustomFormField}" SelectedItemChanged="PlaceSelectBox_SelectedItemChanged" ListBoxMinHeight="80" ListBoxMinWidth="55"  Width="55" Autocomplete="False" ToolTip="Ячейка перекомплектации"/>
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>

                        <controls:SelectBox x:Name="TypeProductSelectBox" Style="{DynamicResource CustomFormField}" SelectedItemChanged="TypeProductSelectBox_SelectedItemChanged"  ListBoxMinHeight="90" Width="90" Autocomplete="False"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource DataGridMainHolder}">
                    <controls:GridBox4 x:Name="OldProductGrid"  />
                </Border>
            </Grid>

            <Grid Grid.Column="2" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Column="0" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Name="NewProductGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                            <Label Content="Продукция" ToolTip="Новая продукция" Style="{DynamicResource TopLabel}" />

                            <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                            <TextBox Style="{DynamicResource FormFieldTopPanel}" MinWidth="80" MaxWidth="150"  TextWrapping="NoWrap" Name="NewProductSearchBox" Text=""  />
                            <Button Name="NewProductRefreshButton" Content="Показать"  Style="{DynamicResource Button}"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                            <Button Name="SettingsButton"    ToolTip="Настройка"   Style="{DynamicResource ButtonGlyph}" Click="SettingsButton_Click"  Margin="0,0,5,0"  >
                                <Image Style="{DynamicResource SettingsImage}" />
                                <Button.ContextMenu>
                                    <ContextMenu Name="BurgerMenu">
                                        <MenuItem Header="Настройка печати" Name="BurgerPrintSettings" Click="BurgerPrintSettings_Click"  Background="#ffffff" />
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                            <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Margin="0" />
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource DataGridMainHolder}">
                        <controls:GridBox4 x:Name="NewProductGrid"  />
                    </Border>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Name="OrderGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                            <Label Content="Заявка" ToolTip="Заявка для новых поддонов" Style="{DynamicResource TopLabel}" />

                            <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                            <TextBox Style="{DynamicResource FormFieldTopPanel}" MinWidth="80" MaxWidth="150"  TextWrapping="NoWrap" Name="OrderSearchBox" Text=""  />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource DataGridMainHolder}">
                        <controls:GridBox4 x:Name="OrderGrid"  />
                    </Border>
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="OldPalletGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                        <Label Content="Поддоны" ToolTip="Старые поддоны" Style="{DynamicResource TopLabel}" />

                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" MinWidth="80" MaxWidth="150"  TextWrapping="NoWrap" Name="OldPalletSearchBox" Text=""  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <Label Name="ConsumptionQuantityLabel" Content="0"  Style="{DynamicResource TopLabel}" />
                        <Label Content="товара на"  Style="{DynamicResource TopLabel}" />
                        <Label Name="ConsumptionPalletQuantityLabel" Content="0"  Style="{DynamicResource TopLabel}" />
                        <Label Content="поддонах"  Style="{DynamicResource TopLabel}" />
                        <Label Content="будет списано"  Style="{DynamicResource TopLabel}" />
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource DataGridMainHolder}">
                    <controls:GridBox4 x:Name="OldPalletGrid"  />
                </Border>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="NewPalletGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                        <Label Content="Поддоны" ToolTip="Новые поддоны" Style="{DynamicResource TopLabel}" />

                        <Button Name="NewPalletAddButton"    Content="Добавить"   Style="{DynamicResource Button}" />
                        <Button Name="NewPalletEditButton"   Content="Изменить"   Style="{DynamicResource Button}" />
                        <Button Name="NewPalletDeleteButton" Content="Удалить"    Style="{DynamicResource Button}" />
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource DataGridMainHolder}">
                    <controls:GridBox4 x:Name="NewPalletGrid"  />
                </Border>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="0" ColumnSpan="3" Height="100" VerticalAlignment="Top" Panel.ZIndex="10">
                <controls:SplashControl x:Name="SplashControl"/>
            </Grid>

        </Grid>
    </Border>
</controls:ControlBase>
