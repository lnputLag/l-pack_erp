<UserControl x:Class="Client.Interfaces.Production.ComplectationCMQuantity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:main="clr-namespace:Client.Interfaces.Main"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300"
             Height="60" Width="325"
             Style="{DynamicResource UserControlCanvas}"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}">
        <Grid Style="{DynamicResource DataGridContainer}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" >
                <Grid ShowGridLines="false" Name="MainGrid" Style="{DynamicResource FromGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Name="Label"  Content="Количество стоп на поддоне:"  Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Name="QtyTextBox" TextWrapping="NoWrap" Width="98" Style="{DynamicResource FormField}"/>
                            <StackPanel Margin="0.5,1,0,0" Name="NumericUpDownPanel" Orientation="Vertical" Width="24">
                                <Button Name="IncrementButton" Click="IncrementButton_Click" Height="12" Margin="0" Style="{DynamicResource ButtonGlyph}">
                                    <Image Style="{DynamicResource UpImage}" />
                                </Button>
                                <Button Name="DecrementButton" Click="DecrementButton_Click" Height="12" Margin="0" Style="{DynamicResource ButtonGlyph}">
                                    <Image Style="{DynamicResource DownImage}" />
                                </Button>
                            </StackPanel>
                            <Grid Style="{DynamicResource FormFieldDateHolder}" Margin="0" Name="DateTimeGrid">
                                <!--<TextBox Name="DateTextBox"  MaxLength="10"  Style="{DynamicResource FormFieldDate}" IsReadOnly="False" />
                                <DatePicker  SelectedDate="{Binding Path=Text, Mode=OneWayToSource, ElementName=DateTextBox, Converter={StaticResource DateDate} }"  Style="{DynamicResource FormFieldDP}"  Margin="0,1,0,0">
                                </DatePicker>-->

                                <controls:DatePicker x:Name="DateTextBox" Style="{DynamicResource DateEditStyle}">
                                </controls:DatePicker>

                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            <Grid Grid.Row="1"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right">
                            <Button Name="SaveButton"   Click="SaveButton_Click"  Content="ОК"  Style="{DynamicResource FButtonPrimary}"/>
                            <Button Name="CancelButton" Click="CancelButton_Click"  Content="Отмена" Style="{DynamicResource FButtonCancel}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>

