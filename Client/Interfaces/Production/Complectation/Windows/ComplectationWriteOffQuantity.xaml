<UserControl x:Class="Client.Interfaces.Production.ComplectationWriteOffQuantity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:main="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="480"
             Width="480"  Height="320"
             Style="{DynamicResource UserControlCanvas}"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}">
        <Grid Style="{DynamicResource DataGridContainer}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">

                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                            <Button Name="HelpButton" ToolTip="Документация" Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Click="HelpButton_Click"  Margin="0,0,0,0" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{DynamicResource FormLabelContainer}">
                        <TextBox Name="PalletNumberTextBox" Height="auto" Background="Transparent" BorderThickness="0" FontWeight="SemiBold" FontSize="24" Text="2112/3" Width="90" HorizontalAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" TextWrapping="NoWrap" Style="{DynamicResource FormField}"/>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="На поддоне по умолчанию, шт :" FontWeight="SemiBold" FontSize="24" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="DefaultQuantityOnPalletTextBox" Height="auto" FontWeight="SemiBold" FontSize="24" Text="1200" Width="90" HorizontalAlignment="Left" IsReadOnly="True" TextWrapping="NoWrap" Style="{DynamicResource FormField}"/>
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="На выбранном поддоне, шт :" FontWeight="SemiBold" FontSize="24" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="CurrentQuantityOnPalletTextBox" TextChanged="CurrentQuantityOnPalletTextBox_TextChanged" Height="auto" FontWeight="SemiBold" FontSize="24" Text="1200"  Width="90" HorizontalAlignment="Left" IsReadOnly="True" TextWrapping="NoWrap" Style="{DynamicResource FormField}"/>
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Списать, шт :"  FontWeight="SemiBold" FontSize="24" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="WriteOffQuantityTextBox" TextChanged="WriteOffQuantityTextBox_TextChanged" MaxLength="5" Height="auto" FontWeight="SemiBold" FontSize="24" Text="1200" Width="90" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}"/>
                    </Border>

                    <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Останется после списания, шт :" FontWeight="SemiBold" FontSize="24" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="4" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="RemainQuantityOnPalletTextBox" Height="auto" FontWeight="SemiBold" FontSize="24" Text="1200" Width="90" HorizontalAlignment="Left" IsReadOnly="True" TextWrapping="NoWrap" Style="{DynamicResource FormField}"/>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"/>

            <Grid Grid.Row="3"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Height="auto" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right">
                            <Button Name="SaveButton"   Click="SaveButton_Click"  Content="Списать"  Style="{DynamicResource ComplectationPrimaryButton}"/>
                            <Button Name="CancelButton" Click="CancelButton_Click"  Content="Отмена" Style="{DynamicResource ComplectationButton}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>

