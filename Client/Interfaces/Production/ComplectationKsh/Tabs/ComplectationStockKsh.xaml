<UserControl x:Class="Client.Interfaces.Production.ComplectationStockKsh"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:main="clr-namespace:Client.Interfaces.Main"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1024"
             Style="{DynamicResource UserControlCanvas}"
             >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Border Style="{DynamicResource DataGridContainerHolder}"  >

        <Grid Style="{DynamicResource DataGridContainer}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
                <RowDefinition Height="10*"></RowDefinition>
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="3"  Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Name="GridToolbar" Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                            <Button Name="ComplectationButton"    Tag="access_mode_full_access"     Content="Списать"   Click="ComplectationButton_Click"  Style="{DynamicResource FButtonPrimary}"  IsEnabled ="False"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                            <Button Name="ClearAll" Content="Сброс"   Click="ClearAll_OnClickButton_Click"  Style="{DynamicResource Button}"  IsEnabled ="True"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                            <!--
                            <Label Content="Помощь: тел. 1701"  Style="{DynamicResource TopLabel}" Foreground="#cccccc" />
                            -->
                            <Button Name="SettingsButton"    ToolTip="Настройка"   Style="{DynamicResource ButtonGlyph}" Click="SettingsButton_Click"  Margin="0,0,5,0"  >
                                <Image Style="{DynamicResource SettingsImage}" />
                                <Button.ContextMenu>
                                    <ContextMenu Name="BurgerMenu">
                                        <MenuItem Header="Настройка печати" Name="BurgerPrintSettings" Click="BurgerPrintSettings_Click" Background="#ffffff" />
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                            <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Click="HelpButton_Click" Margin="0" />
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="0" RowSpan="2" ColumnSpan="3" Height="100"  VerticalAlignment="Top" Panel.ZIndex="10">
                <controls:SplashControl x:Name="SplashControl"/>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="2" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <StackPanel Name="CompletedGridToolbar" Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                        <Button Name="RefreshCompletedButton" Content="Обновить" Click="RefreshCompletedButton_Click"  Style="{DynamicResource Button}" IsEnabled ="True"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                        
                        <Button Name="LabelPrintButton" Content="Печать ярлыка" Click="LabelPrintButton_Click"  Style="{DynamicResource Button}" IsEnabled ="False"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="1"  Grid.Column="0" Margin="0,5,0,0">
                <Border Style="{DynamicResource DataGridMainHolder}" Height="32">

                    <StackPanel Name="ProductGridToolbar" Grid.Row="0" Grid.Column="0"  Style="{DynamicResource FormHeaderButtonsPanel}">
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="ProductSearchText" Text=""  TextChanged="ProductSearchText_OnTextChanged" KeyUp="ProductSearchText_OnKeyUp" ></TextBox>


                       

                        <Button Name="ShowButton"     Content="Искать"    Click="ShowButton_Click" Style="{DynamicResource Button}" IsEnabled="False" VerticalAlignment="Top" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>


                        <!--
                        <Button Name="AddPoddonButton"     Content="В комплектацию"    Click="AddPoddonButton_Click"               Style="{DynamicResource Button}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        -->

                    </StackPanel>
                </Border>
            </Grid>

            <Grid  Grid.Row="2" Grid.Column="0">
                <Grid Style="{DynamicResource DataGridContainer}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"   Style="{DynamicResource DataGridMainHolder}" >
                        <main:GridBox x:Name="ProductGrid" />
                    </Border>
                </Grid>
            </Grid>

            <Grid  Grid.Row="2"  Grid.Column="2">
                <Grid Style="{DynamicResource DataGridContainer}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Style="{DynamicResource DataGridMainHolder}" >
                        <main:GridBox x:Name="CompletedGrid" />
                    </Border>
                </Grid>
            </Grid>

            <Grid  Grid.Row="3"  Grid.Column="0">

                <Grid Style="{DynamicResource DataGridContainer}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>

                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"  Grid.Column="0" Margin="0,0,0,0">
                        <Border Style="{DynamicResource DataGridMainHolder}" Height="32">

                            <StackPanel  Grid.Column="0" Name="ShipmentsGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                                <Label Content="Штрих-код:"  Style="{DynamicResource TopLabel}" />
                                <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="BarCodeText" Text="" IsEnabled="True"/>
                                <Button Name="SearchButton"        Content="Искать"   Click="SearchButton_Click"               Style="{DynamicResource Button}" IsEnabled="True"/>
                                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                                <StackPanel Name="PalletGridLabels" Orientation="Horizontal">
                                    <Label Name="WritenOffLabel" Content="0"  Style="{DynamicResource TopLabel}" />
                                    <Label Content="товара на "  Style="{DynamicResource TopLabel}" />
                                    <Label Name="WritenOffPalletLabel" Content="0"  Style="{DynamicResource TopLabel}" />
                                    <Label Content="поддонах"  Style="{DynamicResource TopLabel}" />
                                    <Label Content="будет списано"  Style="{DynamicResource TopLabel}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>


                    <Border Grid.Row="1" Style="{DynamicResource DataGridMainHolder}" >
                        <main:GridBox x:Name="PalletGrid" />
                    </Border>
                </Grid>


            </Grid>



            <Grid  Grid.Row="3"  Grid.Column="2">

                <Grid Style="{DynamicResource DataGridContainer}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>

                    </Grid.RowDefinitions>


                    <Grid Grid.Row="0"  Grid.Column="0" Margin="0,0,0,0">
                        <Border Style="{DynamicResource DataGridMainHolder}" Height="32">

                            <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}">
                                <Button Name="NewPalletAddButton"    Tag="access_mode_full_access"     Content="Добавить"   Click="AddButton_Click"               Style="{DynamicResource Button}" IsEnabled="False" VerticalAlignment="Bottom" />
                                <Button Name="NewPalletEditButton"   Tag="access_mode_full_access"      Content="Изменить"   Click="EditButton_Click"               Style="{DynamicResource Button}" IsEnabled="False"/>
                                <Button Name="NewPalletDeleteButton"  Tag="access_mode_full_access"    Content="Удалить"    Click="DeleteButton_Click" Style="{DynamicResource Button}" IsEnabled="False"/>
                                <Border Style="{DynamicResource DataGridMainHolder}" Height="32"/>
                                <Border Style="{DynamicResource DataGridMainHolder}" Height="32"/>
                                <StackPanel Name="GridToLabels" Orientation="Horizontal">
                                    <Label Name="WillBeReceivedLabel" Content="0"  Style="{DynamicResource TopLabel}" />
                                    <Label Content="товара на "  Style="{DynamicResource TopLabel}" />
                                    <Label Name="WillBeReceivedPalletLabel" Content="0"  Style="{DynamicResource TopLabel}" />
                                    <Label Content="поддонах"  Style="{DynamicResource TopLabel}" />
                                    <Label Content="будет получено"  Style="{DynamicResource TopLabel}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>


                    <Border Grid.Row="1" Style="{DynamicResource DataGridMainHolder}" >
                        <main:GridBox x:Name="GridTo" />
                    </Border>



                </Grid>


            </Grid>
        </Grid>

    </Border>


</UserControl>
