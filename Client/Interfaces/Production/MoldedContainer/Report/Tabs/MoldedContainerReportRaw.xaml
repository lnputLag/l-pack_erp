<controls:ControlBase  
             x:Class="Client.Interfaces.Production.MoldedContainer.MoldedContainerReportRaw"
             xmlns:local="clr-namespace:Client.Interfaces.Production.MoldedContainer"

             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignWidth="1980"
             d:DesignHeight="768" 
             Style="{DynamicResource UserControlCanvas}">

    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                            <Label Content="С:"  Style="{DynamicResource TopLabel}"/>
                            <controls:DateTimePicker x:Name="FromDateTime" Style="{DynamicResource DateTimeEditStyle}">
                                <controls:DateTimePicker.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Текущая смена" Click="OnCurrentShift" />
                                        <MenuItem Header="Предыдущая смена" Click="OnPrevShift" />
                                        <MenuItem Header="Текущие сутки" Click ="OnCurrentDay" />
                                        <MenuItem Header="Предыдущие сутки" Click="OnPrevDay" />
                                        <MenuItem Header="Текущая неделя" Click="OnCurrentWeek"/>
                                        <MenuItem Header="Предыдущая неделя" Click="OnPrevWeek"/>
                                        <MenuItem Header="Текущий месяц" Click="OnCurrentMonth"/>
                                        <MenuItem Header="Предыдущий месяц" Click="OnPrevMonth"/>
                                    </ContextMenu>
                                </controls:DateTimePicker.ContextMenu>
                            </controls:DateTimePicker>

                            <Label Content="По:"  Style="{DynamicResource TopLabel}"/>
                            <controls:DateTimePicker x:Name="ToDateTime" Style="{DynamicResource DateTimeEditStyle}">
                            </controls:DateTimePicker>

                            <Button Name="RefreshButton" Content="Показать"  Style="{DynamicResource Button}"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                            <TextBox Style="{DynamicResource FormFieldTopPanel}" MinWidth="100" MaxWidth="150"  TextWrapping="NoWrap" Name="GridSearchBox" Text=""  />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Label Content="Сырьё:" Style="{DynamicResource TopLabel}" />
                            <controls:SelectBox x:Name="RawSelectBox" Style="{DynamicResource CustomFormField}" Width="220"  HorizontalAlignment="Stretch" ListBoxMinHeight="210" SelectedItemChanged="RawSelectBox_SelectedItemChanged" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <StackPanel Orientation="Horizontal">
                                <Border Style="{DynamicResource FormFieldContainer}">
                                    <CheckBox Name="ConsumptionCheckBox" Margin="0" Checked="ConsumptionCheckBox_Checked"  Unchecked="ConsumptionCheckBox_Unchecked"  Style="{DynamicResource FormCheckBox}"/>
                                </Border>
                                <Border Style="{DynamicResource FormLabelContainer}">
                                    <Label Content="Расход" HorizontalAlignment="Left" Style="{DynamicResource FormLabel}"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Border Style="{DynamicResource FormFieldContainer}">
                                    <CheckBox Name="ArrivalCheckBox" Margin="0" Checked="ArrivalCheckBox_Checked"  Unchecked="ArrivalCheckBox_Unchecked"  Style="{DynamicResource FormCheckBox}"/>
                                </Border>
                                <Border Style="{DynamicResource FormLabelContainer}">
                                    <Label Content="Приход" HorizontalAlignment="Left" Style="{DynamicResource FormLabel}"/>
                                </Border>
                            </StackPanel>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Button Name="ExportToExcelButton" Content="В Excel" Style="{DynamicResource Button}" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right">
                            <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?" Style="{DynamicResource Button}" Margin="0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="1"  Grid.Column="0" >
                <Border Style="{DynamicResource DataGridMainHolder}" >
                    <controls:GridBox4 x:Name="Grid" />
                </Border>
            </Grid>

        </Grid>
    </Border>
</controls:ControlBase>
