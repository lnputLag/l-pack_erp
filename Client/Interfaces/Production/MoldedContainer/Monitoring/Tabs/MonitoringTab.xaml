<controls:ControlBase
        x:Class="Client.Interfaces.Production.MoldedContainer.MonitoringTab"
        xmlns:local="clr-namespace:Client.Interfaces.Production.MoldedContainer"   
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:controls="clr-namespace:Client.Interfaces.Main"

        mc:Ignorable="d" 
        d:DesignWidth="1900"
        d:DesignHeight="1000" 
        Style="{DynamicResource UserControlCanvas}">

    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <!--0-->
                <ColumnDefinition Width="*"/>
                <!--1-->
                <ColumnDefinition Width="5"/>
                <!--2-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <!--0-->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--<Border Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="3" Style="{DynamicResource DataGridMainHolder}" BorderThickness="1" BorderBrush="Red" >
                </Border>-->

                <StackPanel Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                    <Button Name="RefreshButton" Content="Обновить"  Style="{DynamicResource Button}"/>
                </StackPanel>

                <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,-10,0,0" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" >Полуфабрикаты</TextBlock>

                <!--ПОЛУФАБРИКАТЫ-->
                <Grid Grid.Row="2" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="230"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <!--сформовано  ПФ 0-->
                        <RowDefinition Height="140"/>
                        <!--пустая срока-->
                        <RowDefinition Height="5"/>
                        <!--произведено  ПФ 2-->
                        <RowDefinition Height="200"/>
                        <!--пустая срока-->
                        <RowDefinition Height="5"/>
                        <!--простои  ПФ 4-->
                        <RowDefinition Height="140"/>
                        <!--пустая срока-->
                        <RowDefinition Height="5"/>
                        <!--текущая производительность ПФ 6-->
                        <RowDefinition Height="100"/>
                        <!--пустая срока-->
                        <RowDefinition Height="5"/>
                        <!--прогноз сделать ПФ 8-->
                        <RowDefinition Height="auto"/>
                        <!--пустая срока-->
                        <RowDefinition Height="5"/>
                        <!--остаки на складе ПФ 10-->
                        <RowDefinition Height="auto"/>
                        <!--остаки на складе ПФ 12-->
                        <RowDefinition Height="auto"/>
                        <!--остаки сырья на складе 10-->
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>

                    <!--внешний контур-->
                    <Border  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="10"  Style="{DynamicResource CustomHolder}" BorderThickness="1" BorderBrush="Silver" Padding="0" VerticalAlignment="Stretch" >
                    </Border>

                    <!--произведено  ПФ грид-->
                    <TextBlock Grid.Column="0" Grid.Row="0" FontWeight="Medium" FontSize="24" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" >Сформовано (шт.)</TextBlock>
                    <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource DataGridMainHolder}" BorderThickness="1" BorderBrush="Silver" >
                        <!--<local:MonitoringBlanksProduction x:Name="BlanksProduction"/>-->
                        <controls:GridBox4 x:Name="BlanksProductionFormedGrid"/>
                    </Border>

                    <!--произведено  ПФ грид-->
                    <TextBlock Grid.Column="0" Grid.Row="2" FontWeight="Medium" FontSize="24" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" >Произведено (шт.)</TextBlock>
                    <Border Grid.Row="2"  Grid.Column="1" Style="{DynamicResource DataGridMainHolder}" BorderThickness="1" BorderBrush="Silver" >
                        <!--<local:MonitoringBlanksProduction x:Name="BlanksProduction"/>-->
                        <controls:GridBox4 x:Name="BlanksProductionGrid"/>
                    </Border>

                    <!---простои  ПФ-->
                    <TextBlock Grid.Column="0" Grid.Row="4" FontWeight="Medium" FontSize="24" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" >Простои (часы)</TextBlock>
                    <Border Grid.Column="1" Grid.Row="4"   Style="{DynamicResource DataGridMainHolder}" BorderThickness="1" BorderBrush="Silver" >
                        <!--<local:MonitoringBlanksProduction x:Name="BlanksProduction"/>-->
                        <controls:GridBox4 x:Name="BlanksProductionIdlesGrid"/>
                    </Border>

                    <!---текущая производительность ВФМ ПФ-->
                    <TextBlock Text="Текущая производитель-ность" TextWrapping="Wrap" Grid.Column="0" Grid.Row="6" FontWeight="Medium" FontSize="24" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" ></TextBlock>
                    <Border Grid.Column="1" Grid.Row="6"   Style="{DynamicResource DataGridMainHolder}" BorderThickness="1" BorderBrush="Silver" >
                        <controls:GridBox4 x:Name="BlanksPerfomaceCurrentGrid"/>
                    </Border>

                    <!---прогноз по ПФ-->
                    <!--<Grid Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="auto"/>
                            <RowDefinition  Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Прогноз изготовить (шт.)" Grid.Column="1" Grid.Row="0" FontWeight="Medium" FontSize="24" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" ></TextBlock>
                        <TextBlock Text="Неделя" Grid.Column="2" Grid.Row="0" FontWeight="Medium" FontSize="24" Margin="5,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" ></TextBlock>
                        <TextBlock Text="Месяц" Grid.Column="3" Grid.Row="0" FontWeight="Medium" FontSize="24" Margin="5,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" ></TextBlock>

                        <TextBlock x:Name="BlanksQtyWeek" Text="0" Grid.Column="2" Grid.Row="1" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
                        <TextBlock x:Name="BlanksQtyMonth" Text="0" Grid.Column="3" Grid.Row="1" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
                    </Grid>-->

                    <!---остаток заготовок на сладе  ПФ-->
                    <Grid Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="335"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Остаток на складе (шт.)  " Grid.Column="0" Grid.Row="0" FontWeight="Medium" FontSize="24" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" ></TextBlock>
                        <TextBlock x:Name="BlanksQty" Text="0" Grid.Column="1" Grid.Row="0" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" ></TextBlock>
                    </Grid>

                    <!---остаток сырья на сладе -->
                    <Grid Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="5"/>
                            <RowDefinition  Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- остатки сырья -->
                        <Border Grid.Column="0" Grid.Row="1" Style="{DynamicResource DataGridMainHolder}" BorderThickness="1" BorderBrush="Silver" >
                            <controls:GridBox4 x:Name="ProductGrid" />
                        </Border>

                        <!-- Загрязненность сырья -->
                        <Border Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Style="{DynamicResource DataGridMainHolder}" BorderThickness="1" BorderBrush="Silver" >
                            <Grid Grid.Column="0" Grid.Row="2" Grid.RowSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition  Height="auto"/>
                                    <RowDefinition  Height="auto"/>
                                    <RowDefinition  Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Загрязненность"    Grid.Column="0" Grid.Row="0" FontWeight="Medium" FontSize="14" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" ></TextBlock>
                                <TextBlock Text="сырья"             Grid.Column="0" Grid.Row="1" FontWeight="Medium" FontSize="14" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" ></TextBlock>
                                <TextBlock Text="0 %"               Grid.Column="0" Grid.Row="2"  x:Name="Сontamination" FontWeight="Medium" FontSize="24" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" ></TextBlock>
                            </Grid>
                        </Border>
                    </Grid>

                </Grid>
            </Grid>


            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right">
                    <Button Name="HelpButton" ToolTip="Документация" Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Margin="0,0,0,0" />
                </StackPanel>

                <TextBlock  Grid.Column="0" Grid.Row="1" Margin="0,-10,0,0" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" >Готовая продукция</TextBlock>
                <Border Grid.Column="0" Grid.Row="2" Style="{DynamicResource DataGridMainHolder}" >
                </Border>

                <!--ГОТОВАЯ ПРОДУКЦИЯ-->
                <Grid Grid.Row="2" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="230"/>
                        <ColumnDefinition Width="7*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <!--произведено 0-->
                        <RowDefinition Height="200"/>
                        <!--пустая срока-->
                        <RowDefinition Height="5"/>
                        <!--простои 2-->
                        <RowDefinition Height="200"/>
                        <!--пустая срока-->
                        <RowDefinition Height="5"/>
                        <!--текущая производительность ГП 4-->
                        <RowDefinition Height="160"/>
                        <!--пустая срока-->
                        <RowDefinition Height="5"/>
                        <!---прогноз изготовить ГП 6-->
                        <RowDefinition Height="auto"/>
                        <!--пустая срока-->
                        <RowDefinition Height="1"/>
                        <!--прогноз отгрузка ГП 8-->
                        <RowDefinition Height="auto"/>
                        <!--пустая срока-->
                        <RowDefinition Height="15"/>
                        <!--отгружено ГП 10-->
                        <RowDefinition Height="auto"/>
                        <!--остаки на складе ПФ 12-->
                        <RowDefinition Height="auto"/>
                        <!--пустая срока-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--внешний контур-->
                    <Border  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="14"  Style="{DynamicResource CustomHolder}" BorderThickness="1" BorderBrush="Silver" Padding="0" VerticalAlignment="Stretch" >
                    </Border>

                    <!--внешний контур-->
                    <Border  Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" Grid.RowSpan="4"  Style="{DynamicResource CustomHolder}" BorderThickness="1" BorderBrush="Silver" Padding="0" VerticalAlignment="Stretch" >
                    </Border>

                    <!--произведено переработка грид-->
                    <TextBlock Grid.Column="0" Grid.Row="0" FontWeight="Medium" Margin="5,0,0,0" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" >Произведено (шт.)</TextBlock>
                    <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource DataGridMainHolder}" BorderThickness="1" BorderBrush="Silver" >
                        <controls:GridBox4 x:Name="FinishedProductionGrid"/>
                    </Border>

                    <!--простои переработки грид-->
                    <TextBlock Grid.Column="0" Grid.Row="2" FontWeight="Medium" Margin="5,0,0,0" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" >Простои (часы)</TextBlock>

                    <!--<StackPanel Grid.Column="0" Grid.Row="2" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="60" >
                        <Button Name="IdlesButton" Content="Простои (часы)" Margin="5,1,0,0" Style="{DynamicResource _TouchFormButton}" Click="IdlesButton_Click" Height="50" Width="220"/>
                    </StackPanel>-->

                    <Border  Grid.Column="1" Grid.Row="2"   Style="{DynamicResource DataGridMainHolder}" BorderThickness="1" BorderBrush="Silver" >
                        <controls:GridBox4 x:Name="FinishedProductionIdlesGrid"/>
                    </Border>

                    <!---текущая производительность ГП-->
                    <TextBlock Text="Текущая производитель-ность" TextWrapping="Wrap" Grid.Column="0" Grid.Row="4" FontWeight="Medium" FontSize="24" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" ></TextBlock>
                    <Border Grid.Column="1" Grid.Row="4"   Style="{DynamicResource DataGridMainHolder}" BorderThickness="1" BorderBrush="Silver" >
                        <controls:GridBox4 x:Name="FinishedPerfomaceCurrentGrid"/>
                    </Border>

                    <!---прогноз изготовить ГП-->
                    <Grid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="auto"/>
                            <RowDefinition  Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Прогноз изготовить готовой продукции(шт.)" Grid.Column="1" Grid.Row="0" FontWeight="Medium" FontSize="24" Margin="0,0,0,0" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" ></TextBlock>
                        <TextBlock Text="Неделя" Grid.Column="2" Grid.Row="0" FontWeight="Medium" FontSize="24" Margin="5,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" ></TextBlock>
                        <TextBlock Text="Месяц" Grid.Column="3" Grid.Row="0" FontWeight="Medium" FontSize="24" Margin="5,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" ></TextBlock>

                        <TextBlock x:Name="ForecastFactQtyWeek"  Text="0" Grid.Column="2" Grid.Row="0" Margin="0,30,0,0" Foreground="Red" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
                        <TextBlock x:Name="ForecastFactQtyMonth" Text="0" Grid.Column="3" Grid.Row="0" Margin="0,30,0,0" Foreground="Green" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
                    </Grid>

                    <!---прогноз заказов ГП-->
                    <Grid Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="auto"/>
                            <RowDefinition  Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Прогноз заказов (шт.)"         Grid.Column="1" FontWeight="Medium" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" />
                        <TextBlock x:Name="OrderForecastWeek"  Text="0" Grid.Column="2" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <TextBlock x:Name="OrderForecastMonth" Text="0" Grid.Column="3" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>

                    <!---отгружено ГП-->
                    <Grid Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="auto"/>
                            <RowDefinition  Height="5"/>
                            <RowDefinition  Height="auto"/>

                        </Grid.RowDefinitions>

                        <TextBlock Text="Отгружено (шт./мес.)" Grid.Column="1" Grid.Row="0" FontWeight="Medium" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" ></TextBlock>
                        <TextBlock x:Name="ShippedtMonth" Text="0" Grid.Column="2" Grid.Row="0" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" ></TextBlock>
                    </Grid>

                    <!---остаток на сладе  ГП-->
                    <Grid Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="auto"/>
                            <RowDefinition  Height="5"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Остаток на складе (шт.)  " Grid.Column="1" Grid.Row="0" FontWeight="Medium" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" ></TextBlock>
                        <TextBlock x:Name="FinishedQty" Text="0" Grid.Column="2" Grid.Row="0" Margin="0,0,0,0" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" ></TextBlock>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</controls:ControlBase>
