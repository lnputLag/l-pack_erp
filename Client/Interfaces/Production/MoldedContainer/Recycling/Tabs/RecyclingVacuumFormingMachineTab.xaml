<controls:ControlBase
        x:Class="Client.Interfaces.Production.MoldedContainer.RecyclingVacuumFormingMachineTab"
        xmlns:local="clr-namespace:Client.Interfaces.Production.MoldedContainer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:controls="clr-namespace:Client.Interfaces.Main"

        mc:Ignorable="d" 
        d:DesignWidth="1980"
        d:DesignHeight="768" 
        Style="{DynamicResource UserControlCanvas}">

    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <!--0 задания-->
                <RowDefinition Height="*"/>
                <!--1 зазор по горизонтали-->
                <RowDefinition Height="5"/>
                <!--2 простои-->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--0 задания-->
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="12*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                    <StackPanel Name="ProductionTaskGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                        <!--<Label Content="Производственные задания станок:"  Style="{DynamicResource TopLabel}" />-->
                        <Label Content="Cтанок:"  Style="{DynamicResource TopLabel}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <!--<Label Content="станок:"  Style="{DynamicResource TopLabel}" />-->
                        <controls:SelectBox  x:Name="Machines" SelectedItemChanged="Machines_SelectedItemChanged"  Style="{DynamicResource CustomFormField}" Width="180" Autocomplete="False"  />
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>

                        <Button Name="RefreshButton" Content="Обновить"  Style="{DynamicResource Button}"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" MinWidth="100" MaxWidth="150"  TextWrapping="NoWrap" Name="ProductionTaskSearchBox" Text=""  />
                        <!--<Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="ShowAllPz" Content="Все ПЗ" Style="{DynamicResource Button}"   />-->
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="ShowExcelButton" Content="Открыть ТК" Style="{DynamicResource Button}"   />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    </StackPanel>
                </Grid>

                <Border Grid.Column="0" Grid.Row="1" Style="{DynamicResource DataGridMainHolder}" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="345*"/>
                            <ColumnDefinition Width="27*"/>
                            <ColumnDefinition Width="1109*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*"/>


                        </Grid.RowDefinitions>

                        <!--список заданий-->
                        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3">
                            <controls:GridBox4 x:Name="ProductionTaskGrid" />
                        </Border>

                    </Grid>
                </Border>

                <Border Grid.Column="2" Grid.Row="0" Grid.RowSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            
                        </Grid.RowDefinitions>

                        <Border Grid.Column="0" Grid.Row="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                                    <StackPanel Name="ArrivalPalletGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                                        <Label Content="Созданные паллеты"  Style="{DynamicResource TopLabel}" />
                                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                                        <Button Name="PalletPrintButton" Content="Печать ярлыка"  Style="{DynamicResource Button}"  />
                                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                                        <!--<CheckBox Name="ShowAllPalletPrihod" Content="Все паллеты" Click="ShowAllPalletPrihod_Click"  Style="{DynamicResource CheckBoxTopPanel}" />-->
                                        <Button Name="ShowAllArrivalPallet" Content="Все паллеты" Style="{DynamicResource Button}"   />
                                    </StackPanel>
                                  
                                </Grid>

                                <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                                    <Button Name="SettingsButton"    ToolTip="Настройка"   Style="{DynamicResource ButtonGlyph}" Click="SettingsButton_Click"  Margin="0,0,5,0"  >
                                        <Image Style="{DynamicResource SettingsImage}" />
                                        <Button.ContextMenu>
                                            <ContextMenu Name="BurgerMenu">
                                                <MenuItem Header="Настройка печати" Name="BurgerPrintSettings" Click="BurgerPrintSettings_Click"  Background="#ffffff" />
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>

                                    <Button Name="HelpButton" ToolTip="Документация" Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Margin="0,0,0,0" />
                                </StackPanel>

                                <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Style="{DynamicResource DataGridMainHolder}" >
                                    <controls:GridBox4 x:Name="ArrivalPalletGrid" />
                                </Border>


                            </Grid>
                        </Border>

                        
                    </Grid>
                </Border>
            </Grid>

            <!--2 простои-->
            <Grid Grid.Row="2" Grid.Column="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!--0 блок простоев-->
                        <ColumnDefinition Width="*"/>
                        <!--1 зазор по вертикали-->
                        <ColumnDefinition Width="5"/>
                        <!--2 блок графика-->
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Style="{DynamicResource DataGridMainHolder}" >
                        <local:RecyclingIdleList x:Name="IdlesData" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                    </Border>

                    <!--данные по текущему заданию-->
                    <Grid Grid.Row="0" Grid.Column="2"  Style="{DynamicResource GridControlPanel}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="300"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Column="0" Grid.Row="0"  Style="{DynamicResource DataGridMainHolder}" >
                                <TextBlock Text="По счетчику"  FontSize="24" HorizontalAlignment="Right" VerticalAlignment="Center" ></TextBlock>
                            </Border>

                            <Border Grid.Column="1" Grid.Row="0"  Style="{DynamicResource DataGridMainHolder}" >
                                <TextBlock x:Name="CounterQty" Text="0" Margin="15" FontWeight="Bold" FontSize="34" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                            </Border>

                            <Border Grid.Column="0" Grid.Row="1"  Style="{DynamicResource DataGridMainHolder}" >
                                <TextBlock Text="По заданию"  FontSize="24" HorizontalAlignment="Right" VerticalAlignment="Center" ></TextBlock>
                            </Border>

                            <Border Grid.Column="1" Grid.Row="1"  Style="{DynamicResource DataGridMainHolder}" >
                                <TextBlock x:Name="TaskQuantity" Margin="15" Text="0" FontWeight="Bold" FontSize="34" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                            </Border>

                            <Border Grid.Column="2" Grid.Row="0"  Style="{DynamicResource DataGridMainHolder}" >
                                <TextBlock Text="Оприходовано"  FontSize="24" HorizontalAlignment="Right" VerticalAlignment="Center" ></TextBlock>
                            </Border>

                            <Border Grid.Column="3" Grid.Row="0"  Style="{DynamicResource DataGridMainHolder}" >
                                <TextBlock x:Name="PrihodQty" Margin="15" Text="0" FontWeight="Bold" FontSize="34" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                            </Border>

                            <Border Grid.Column="2" Grid.Row="1"  Style="{DynamicResource DataGridMainHolder}" >
                                <TextBlock Text="Списано" FontSize="24" HorizontalAlignment="Right" VerticalAlignment="Center" ></TextBlock>
                            </Border>

                            <Border Grid.Column="3" Grid.Row="1"  Style="{DynamicResource DataGridMainHolder}" >
                                <TextBlock x:Name="RashodQty" Margin="15" Text="0" FontWeight="Bold" FontSize="34" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                            </Border>
                        </Grid>
                    </Grid>

                    <!--график-->
                    <Border Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Style="{DynamicResource DataGridMainHolder}" BorderThickness="1" BorderBrush="Silver">
                        <local:RecyclingSpeedChart x:Name="SpeedChart"/>
                    </Border>

                </Grid>

            </Grid>

        </Grid>
    </Border>

</controls:ControlBase>
