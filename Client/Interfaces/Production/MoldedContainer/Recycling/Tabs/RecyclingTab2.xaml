                                <TextBlock FontSize="12" FontWeight="SemiBold" Grid.Row="0" Grid.Column="7" HorizontalAlignment="Center" VerticalAlignment="Center" >Крышка 2</TextBlock>
                                <TextBlock FontSize="12" FontWeight="SemiBold" Grid.Row="0" Grid.Column="8" HorizontalAlignment="Center" VerticalAlignment="Center" >Крышка 3</TextBlock>
