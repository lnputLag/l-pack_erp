                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Column="0" Grid.Row="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                                    <StackPanel Name="ConsumptionPalletGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                                        <Label Content="Списанные паллеты"  Style="{DynamicResource TopLabel}" />
                                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                                        <!--<CheckBox Name="ShowAllPalletRashod" Content="Все паллеты" Click="ShowAllPalletRashod_Click"  Style="{DynamicResource CheckBoxTopPanel}"  />-->
                                        <Button Name="ShowAllConsumptionPallet" Content="Все паллеты" Style="{DynamicResource Button}"   />
                                    </StackPanel>
                                </Grid>

                                <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                                    <Button Name="SettingsButton"    ToolTip="Настройка"   Style="{DynamicResource ButtonGlyph}" Click="SettingsButton_Click"  Margin="0,0,5,0"  >
                                        <Image Style="{DynamicResource SettingsImage}" />
                                        <Button.ContextMenu>
                                            <ContextMenu Name="BurgerMenu">
                                                <MenuItem Header="Настройка печати" Name="BurgerPrintSettings" Click="BurgerPrintSettings_Click"  Background="#ffffff" />
                                                <MenuItem Header="Включить отладку" Name="Debug" Click="Debug_Click"  Background="#ffffff" />
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>

                                    <Button Name="HelpButton" ToolTip="Документация" Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Margin="0,0,0,0" />
                                </StackPanel>

                                <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Style="{DynamicResource DataGridMainHolder}" >
                                    <controls:GridBox4 x:Name="ConsumptionPalletGrid" />
                                </Border>
                            </Grid>
                        </Border>

