                                <!--задания-->
                                <TextBlock Name="PROT_ID2" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                                <!--краска-->
                                <TextBlock Name="FRONT_BOARD2_1" Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="FRONT_BOARD2_2" Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="FRONT_BOARD2_3" Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="FRONT_BOARD2_4" Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="CAP2_1"         Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="6" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
