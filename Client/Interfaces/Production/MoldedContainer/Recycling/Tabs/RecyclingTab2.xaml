                        <Button Name="ShowAllPz" Content="Все ПЗ" Style="{DynamicResource Button}"   />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="ShowExcelButton" Content="Открыть ТК" Style="{DynamicResource Button}"   />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Label Content="ШК:" Name="StrihKodLabel"  Style="{DynamicResource TopLabel}" Visibility="Visible" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <TextBox Name="StrihKodText" Style="{DynamicResource FormFieldTopPanel}" MinWidth="65" MaxWidth="80"  TextWrapping="NoWrap"  Text="" Visibility="Visible" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="ScanStrihKodButton" Content="Сканировать" Click="ScanButton_Click" Style="{DynamicResource Button}"  Visibility="Visible" />

                    </StackPanel>
                </Grid>

                <Border Grid.Column="0" Grid.Row="1" Style="{DynamicResource DataGridMainHolder}" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--список заданий-->
                        <Border Grid.Column="0" Grid.Row="0">
                            <controls:GridBox4 x:Name="ProductionTaskGrid" />
                        </Border>
                        
