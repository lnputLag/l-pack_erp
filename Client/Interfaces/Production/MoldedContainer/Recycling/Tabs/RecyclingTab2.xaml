                                <TextBlock Name="CAP2_3"         Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="8" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="CAP2_4"         Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="9" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="TAILGATE2_1"    Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="10" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="TAILGATE2_2"    Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="11" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="TAILGATE2_3"    Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="TAILGATE2_4"    Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="13" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="INSIDE2_1"      Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="14" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="INSIDE2_2"      Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="4" Grid.Column="15" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>

                                <!--задания-->
                                <TextBlock Name="PROT_ID3" FontSize="12" FontWeight="SemiBold" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                                <!--краска-->
                                <TextBlock Name="FRONT_BOARD3_1" Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="6" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="FRONT_BOARD3_2" Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="6" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="FRONT_BOARD3_3" Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="6" Grid.Column="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="FRONT_BOARD3_4" Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="6" Grid.Column="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="CAP3_1"         Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="6" Grid.Column="6" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="CAP3_2"         Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="6" Grid.Column="7" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="CAP3_3"         Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="6" Grid.Column="8" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="CAP3_4"         Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="6" Grid.Column="9" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="TAILGATE3_1"    Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="6" Grid.Column="10" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
                                <TextBlock Name="TAILGATE3_2"    Padding="20,0,0,0" Foreground="White" FontSize="12" FontWeight="SemiBold" Grid.Row="6" Grid.Column="11" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBlock>
