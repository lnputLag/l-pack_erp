                                <!--задания-->
                                <TextBlock Name="PROT_ID1"  FontSize="12" FontWeight="SemiBold" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                                <!--краска-->
