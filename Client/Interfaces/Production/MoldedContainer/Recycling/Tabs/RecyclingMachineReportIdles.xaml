<UserControl x:Class="Client.Interfaces.Production.MoldedContainer.RecyclingMachineReportIdles"
             xmlns:local="clr-namespace:Client.Interfaces.Production.MoldedContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:main="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             d:DesignHeight="450" d:DesignWidth="1800"
             Style="{DynamicResource UserControlCanvas}"  
             >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}" >
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11.5*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Name="GridToolbar" Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                        <Label Content="Смена"  Style="{DynamicResource TopLabel}" />

                        <Button Content="Предыдущая" Name="LeftShiftButton" Style="{DynamicResource Button}" Click="LeftShiftButton_Click" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                        <Button Content="Следующая" Name="RightShiftButton" Style="{DynamicResource Button}" Click="RightShiftButton_Click"  />
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>

                        <Label Content="С:"  Style="{DynamicResource TopLabel}"/>
                        <Grid Style="{DynamicResource FormFieldDateHolder}">
                            <controls:DateTimePicker x:Name="FromDate" Style="{DynamicResource DateTimeEditStyle}">
                            </controls:DateTimePicker>
                        </Grid>

                        <Label Content="По:"  Style="{DynamicResource TopLabel}"/>
                        <Grid Style="{DynamicResource FormFieldDateHolder}">
                            <controls:DateTimePicker x:Name="ToDate" Style="{DynamicResource DateTimeEditStyle}">
                            </controls:DateTimePicker>
                        </Grid>

                        <Label Content="Станок:"  Style="{DynamicResource TopLabel}" />
                        <controls:SelectBox  x:Name="Machines" SelectedItemChanged="Types_SelectedItemChanged" Style="{DynamicResource CustomFormField}"  MinWidth="180" ListBoxMinHeight="250" Autocomplete="False"  />
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>

                        <Button Content="Показать" Name="ShowButton"  Style="{DynamicResource Button}" Click="ShowButton_Click" />
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>
                        
                        <Button Name="AddButton" Content="Добавить"  Style="{DynamicResource Button}" Click="AddButton_Click"  />
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>

                        <Button Name="EditButton" Content="Изменить" Style="{DynamicResource Button}" Click="ButtonEdit_Click" />
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>

                        <Button Name="DeleteButton" Content="Удалить" Style="{DynamicResource Button}" IsEnabled="True" Click="ButtonDelete_Click" />
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>

                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="SearchText" Text=""  />
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>

                        <Label Content="Длительность:"  Style="{DynamicResource TopLabel}" />
                        <controls:SelectBox  x:Name="Idles" SelectedItemChanged="Idles_SelectedItemChanged" Style="{DynamicResource CustomFormField}" Width="160" Autocomplete="False"  />

                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>
                        <CheckBox Name="SelectAllButton" Content="Отметить все" Style="{DynamicResource CheckBoxTopPanel}" Click="SelectAllButton_Click_1"/>

                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>
                        <Button Name="ExcelButton" Content="В Excel"  Style="{DynamicResource Button}" Click="ExcelButton_Click"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                        
                        <Button Name="ReportButton" Content="Отчет"  Style="{DynamicResource Button}" Click="ReportButton_Click"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>

                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                        <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Click="HelpButton_Click"  Margin="0" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1"  Grid.Column="0"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="149*"/>
                <ColumnDefinition Width="31*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource DataGridMainHolder}" Grid.ColumnSpan="2"  >
                <main:GridBox x:Name="Grid"  />
            </Border>

            <!--<Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource DataGridMainHolder}"  >
                <TextBlock x:Name="IdlesInfo"  Text="Время простоев " FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
            </Border>-->

        </Grid>
    </Grid>
</UserControl>

