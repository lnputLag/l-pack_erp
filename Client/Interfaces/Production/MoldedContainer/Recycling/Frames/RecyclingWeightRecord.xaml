<controls:ControlBase 
    x:Class="Client.Interfaces.Production.MoldedContainer.RecyclingWeightRecord"
    xmlns:local="clr-namespace:Client.Interfaces.Production.MoldedContainer"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
    xmlns:controls="clr-namespace:Client.Interfaces.Main"
    mc:Ignorable="d"
    d:DesignHeight="700" d:DesignWidth="1400"      
    Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource FormContainer}">
            <Grid.RowDefinitions>
                <!--кнопки-->
                <RowDefinition Height="Auto"></RowDefinition>
                <!--разделитель-->
                <RowDefinition Height="Auto"></RowDefinition>
                <!--данные-->
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}" >
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Name="FormToolbar">
                            <Button Content="Сохранить" Name="SaveButton"   Tag="Save"   Style="{DynamicResource FButtonPrimary}"  ToolTip="Сохранить и закрыть"/>
                            <Button Content="Отмена"    Name="CancelButton" Tag="Close"  Style="{DynamicResource Button}" ToolTip="Закрывает окно без сохранения"/>

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Button Content="Получить вес"  Name="WeightButton" Visibility="Collapsed" Click="WeightButton_Click"  Style="{DynamicResource Button}" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <CheckBox Name="Debug" Content="Показать лог весов" Visibility="Collapsed" Click="Debug_Click" IsChecked="false" Style="{DynamicResource CheckBoxTopPanel}"  />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            
                            <TextBlock  Name="FormStatus" Margin="0,2,0,0" Text="" TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right" >
                            <Button Name="HelpButton" Width="24" MinWidth="24" Content="?" Tag="Help" Style="{DynamicResource Button}" ToolTip="Вызов справки" />
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>

            <!--разделитель-->
            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"/>

            <!--данные-->
            <Border Grid.Row="2" Grid.Column="0">
                <Grid ShowGridLines="false" Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FromGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="410"></RowDefinition>
                        <RowDefinition Height="5*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Станок: *" Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Machines"  Width="200" Style="{DynamicResource CustomFormField}" Autocomplete="False" HorizontalAlignment="Left"  ListBoxMinHeight="50" />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Вес заготовки (грамм): *"  Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1"  Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="WeightTxt" Text="" Width="200" MaxLength="254" TextWrapping="NoWrap" VerticalAlignment="Stretch"  HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}"/>
                    </Border>

                    <Border Grid.Row="2" Grid.Column="1"  Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="DebugLog" Visibility="Hidden" Text="" Height="400" Width="400" TextWrapping="Wrap" VerticalAlignment="Stretch"  HorizontalAlignment="Left" Style="{DynamicResource FormField}"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>

</controls:ControlBase>
