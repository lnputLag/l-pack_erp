<controls:ControlBase x:Class="Client.Interfaces.Production.MoldedContainer.RecyclingArrivalPalletAll"
             xmlns:local="clr-namespace:Client.Interfaces.Production.MoldedContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="1080" 
             d:DesignWidth="1920"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource FromGrid}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="4"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                <!--<Button Name="SelectButton"   Content="Выбрать"  Style="{DynamicResource FButtonPrimary}" Click="SelectButton_Click"   />-->
                <Button Name="RefreshButton" Content="Обновить"  Style="{DynamicResource Button}" Click="RefreshButton_Click" />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                <Button Name="CloseButton" Content="Закрыть"     Style="{DynamicResource FButtonCancel}" Click="CloseButton_Click"   />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                <Button Name="PalletPrintButton" Content="Печать ярлыка"  Style="{DynamicResource Button}" Click="PalletPrintButton_Click" />
                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="SearchText" Text=""  />
                <!--<TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />-->
            </StackPanel>
            
            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridMainHolder}" >
                <controls:GridBox4 x:Name="Grid" />
            </Border>

        </Grid>
    </Border>
</controls:ControlBase>
