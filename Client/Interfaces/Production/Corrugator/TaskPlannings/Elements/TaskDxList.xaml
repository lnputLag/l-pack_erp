                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Border x:Name="BorderControl" BorderThickness="2" Style="{DynamicResource FormContainerHolder}" Margin="1" >
        <Grid ShowGridLines="false" Style="{DynamicResource FromGrid}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="28"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <!--<DockPanel Grid.Row="0" Grid.Column="0" Name="Panel" ></DockPanel>-->


            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="Toolbar" Background="White" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left" >

                <!--<Label Content="Станок" Name="MachineNameLabel" Style="{DynamicResource TopLabel}" />

                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                
                <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                <TextBox Style="{DynamicResource FormFieldTopPanel}" TextWrapping="NoWrap" Name="SearchText" Text=""  />


                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                <Label Name="LabelKpd" Content="КПД:"  Style="{DynamicResource TopLabel}" />
                <TextBox Style="{DynamicResource FormFieldTopPanel}" MinWidth="20" Width="Auto" TextWrapping="NoWrap" Name="KpdText" Text="100" TextChanged="KpdText_TextChanged" />
                <Label Content=":" Name="MachineInfoLabel" Style="{DynamicResource TopLabel}" />-->
            </StackPanel>


            <Border Grid.Row="1"  Grid.Column="0" Style="{DynamicResource DataGridMainHolder}" >
                <controls:GridBox4 x:Name="TaskGrid" ScrollViewer.HorizontalScrollBarVisibility="Visible" />
            </Border>
        </Grid>
    </Border>

</UserControl>
