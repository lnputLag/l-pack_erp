<controls:ControlBase  x:Class="Client.Interfaces.Production.ManuallyReject"
             xmlns:local="clr-namespace:Client.Interfaces.Production"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             xmlns:main="clr-namespace:Client.Interfaces.Main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}">
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--FormToolbar-->
            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Name="FormToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                            <Button Name="ResreshButton"    Content="Обновить"  Style="{DynamicResource Button}" Click="ResreshButton_Click"  />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Button Name="SaveButton"  Tag="access_mode_full_access"  Content="Сохранить"  Style="{DynamicResource FButtonPrimary}" Click="SaveButton_Click"/>
                            <Button Name="CloseButton"    Content="Отмена"  Style="{DynamicResource Button}" Click="CloseButton_Click"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                            <Button Name="HelpButton" ToolTip="Документация" Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Click="HelpButton_Click"  Margin="0,0,0,0" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"/>

            <!--MainGrid-->
            <Grid Grid.Row="2"  Grid.Column="0" Name="MainGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Column="0" Grid.Row="0" Style="{DynamicResource FormLabelContainer}">
                            <Label Content="Задание:" Style="{DynamicResource FormLabel}" />
                        </Border>

                        <Border Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" Style="{DynamicResource FormFieldContainer}">
                            <TextBox Name="ProductionTaskNumbetTextBox" Text="4404" IsReadOnly="True" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="50"/>
                        </Border>
                    </Grid>
                </Border>
                
                <Border Grid.Column="0" Grid.Row="1">
                    <Grid Name="FirstProductGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Column="0" Grid.Row="0" Style="{DynamicResource FormLabelContainer}">
                            <Label Content="Продукция:" Style="{DynamicResource FormLabel}" />
                        </Border>

                        <Border Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" Style="{DynamicResource FormFieldContainer}">
                            <TextBox Name="FirstProductNameTextBox" Text="ОСМиБТ 2175х1166 для 585х470х220" IsReadOnly="True" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="250"/>
                        </Border>


                        <Border Grid.Column="4" Grid.Row="0" Style="{DynamicResource FormLabelContainer}">
                            <Label Content="Отбраковано:" Style="{DynamicResource FormLabel}" />
                        </Border>
                        <Border Grid.Column="5" Grid.Row="0" Style="{DynamicResource FormFieldContainer}">
                            <TextBox Name="FirstQuantityOfRejectedTextBox" Text="11000"  HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="70"/>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="1" Style="{DynamicResource FormLabelContainer}">
                            <Label Content="По счётчику:" Style="{DynamicResource FormLabel}" />
                        </Border>
                        <Border Grid.Column="1" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                            <TextBox Name="FirstQuantityByCorrugatorMachineTextBox" Text="11000" IsReadOnly="True"  HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="60"/>
                        </Border>

                        <Border Grid.Column="2" Grid.Row="1" Style="{DynamicResource FormLabelContainer}">
                            <Label Content="Распечатано:" Style="{DynamicResource FormLabel}" />
                        </Border>
                        <Border Grid.Column="3" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                            <TextBox Name="FirstQuantityByLabelTextBox" Text="11000" IsReadOnly="True" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="60"/>
                        </Border>

                        <Border Grid.Column="4" Grid.Row="1" Style="{DynamicResource FormLabelContainer}">
                            <Label Content="Допечатать:" Style="{DynamicResource FormLabel}" />
                        </Border>
                        <Border Grid.Column="5" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                            <TextBox Name="FirstQuantityToLastPalletTextBox" Text="11000" IsReadOnly="True" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="70"/>
                        </Border>

                        <Border Grid.Column="6" Grid.Row="0" Grid.RowSpan="3" Style="{DynamicResource FormLabelContainer}">
                            <StackPanel Orientation="Vertical">
                                <Label Content="История отбраковки" Style="{DynamicResource FormLabel}" />
                                <Label Content="по кнопке:" Style="{DynamicResource FormLabel}" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="7" Grid.Row="0" Grid.RowSpan="3" Style="{DynamicResource FormFieldContainer}" >
                            <TextBox Name="FirstRejectedHistoryTextBox" Text="[20.01.2024 11:59:27] Количество отбракованной продукции: 6.
                                                                            [20.01.2024 11:59:31] Количество отбракованной продукции: 2." 
                                     Height="72" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Style="{DynamicResource FormField}"/>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" Style="{DynamicResource FormFieldContainer}">
                            <CheckBox Name="FirstBlockedLastLabelPrintFlagCheckBox" Unchecked="FirstBlockedLastLabelPrintFlagCheckBox_Unchecked" Checked="FirstBlockedLastLabelPrintFlagCheckBox_Checked" IsEnabled="False" Style="{DynamicResource FormCheckBox}"/>
                        </Border>
                        <Border Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="2" Style="{DynamicResource FormLabelContainer}">
                            <Label Name="FirstBlockedLastLabelPrintFlagLabel" Content="Печать последнего ярлыка заблокирована оператором" HorizontalAlignment="Left" Style="{DynamicResource FormLabel}"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"/>

                <Border Grid.Column="0" Grid.Row="3">
                    <Grid Name="SecondProductGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Column="0" Grid.Row="0" Style="{DynamicResource FormLabelContainer}">
                            <Label Content="Продукция:" Style="{DynamicResource FormLabel}" />
                        </Border>

                        <Border Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" Style="{DynamicResource FormFieldContainer}">
                            <TextBox Name="SecondProductNameTextBox" Text="ОСМиБТ 2175х1166 для 585х470х220" IsReadOnly="True" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="250"/>
                        </Border>


                        <Border Grid.Column="4" Grid.Row="0" Style="{DynamicResource FormLabelContainer}">
                            <Label Content="Отбраковано:" Style="{DynamicResource FormLabel}" />
                        </Border>
                        <Border Grid.Column="5" Grid.Row="0" Style="{DynamicResource FormFieldContainer}">
                            <TextBox Name="SecondQuantityOfRejectedTextBox" Text="11000"  HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="70"/>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="1" Style="{DynamicResource FormLabelContainer}">
                            <Label Content="По счётчику:" Style="{DynamicResource FormLabel}" />
                        </Border>
                        <Border Grid.Column="1" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                            <TextBox Name="SecondQuantityByCorrugatorMachineTextBox" Text="11000" IsReadOnly="True"  HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="60"/>
                        </Border>

                        <Border Grid.Column="2" Grid.Row="1" Style="{DynamicResource FormLabelContainer}">
                            <Label Content="Распечатано:" Style="{DynamicResource FormLabel}" />
                        </Border>
                        <Border Grid.Column="3" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                            <TextBox Name="SecondQuantityByLabelTextBox" Text="11000" IsReadOnly="True" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="60"/>
                        </Border>

                        <Border Grid.Column="4" Grid.Row="1" Style="{DynamicResource FormLabelContainer}">
                            <Label Content="Допечатать:" Style="{DynamicResource FormLabel}" />
                        </Border>
                        <Border Grid.Column="5" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                            <TextBox Name="SecondQuantityToLastPalletTextBox" Text="11000" IsReadOnly="True" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="70"/>
                        </Border>

                        <Border Grid.Column="6" Grid.Row="0" Grid.RowSpan="3" Style="{DynamicResource FormLabelContainer}">
                            <StackPanel Orientation="Vertical">
                                <Label Content="История отбраковки" Style="{DynamicResource FormLabel}" />
                                <Label Content="по кнопке:" Style="{DynamicResource FormLabel}" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="7" Grid.Row="0" Grid.RowSpan="3" Style="{DynamicResource FormFieldContainer}" >
                            <TextBox Name="SecondRejectedHistoryTextBox" Text="[20.01.2024 11:59:27] Количество отбракованной продукции: 6.
                                                                            [20.01.2024 11:59:31] Количество отбракованной продукции: 2." 
                                     Height="72" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Style="{DynamicResource FormField}"/>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" Style="{DynamicResource FormFieldContainer}">
                            <CheckBox Name="SecondBlockedLastLabelPrintFlagCheckBox" IsEnabled="False" Checked="SecondBlockedLastLabelPrintFlagCheckBox_Checked" Unchecked="SecondBlockedLastLabelPrintFlagCheckBox_Unchecked" Style="{DynamicResource FormCheckBox}"/>
                        </Border>
                        <Border Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="2" Style="{DynamicResource FormLabelContainer}">
                            <Label Name="SecondBlockedLastLabelPrintFlagLabel" Content="Печать последнего ярлыка заблокирована оператором" HorizontalAlignment="Left" Style="{DynamicResource FormLabel}"/>
                        </Border>
                    </Grid>
                </Border>

            </Grid>
        </Grid>
    </Border>

</controls:ControlBase >