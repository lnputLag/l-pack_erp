<controls:ControlBase x:Class="Client.Interfaces.Production.Corrugator.TaskPlanningKashira.IdleItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Production.Corrugator"
             xmlns:controls="clr-namespace:Client.Interfaces.Main" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                      mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource FormContainerHolder}" >
        <Grid Style="{DynamicResource FormContainer}" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>

            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FormControlPanel}" >
                <Grid ShowGridLines="false">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" >
                        <TextBlock Grid.Row="0" Grid.Column="0"  Name="FormTitle"  TextAlignment="Left" Style="{DynamicResource FormHeaderTitleBar}"  />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" BorderBrush="#ff00cccc" BorderThickness="0" >
                        <StackPanel Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Name="FormToolbar" >

                            <Button Content="Сохранить" Click="SaveButton_Click" Name="SaveButton" Style="{DynamicResource FButtonPrimary}" VerticalAlignment="Top" />
                            <Button Content="Отмена" Click="CancelButton_Click" Name="CancelButton" Style="{DynamicResource Button}" />

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <TextBlock  Name="Status" Text="Не все обязательные поля заполнены верно"  TextAlignment="Left" Style="{DynamicResource FStatusBar2}" HorizontalAlignment="Stretch" />
                            <!--<TextBlock Visibility="Hidden" Name="Status" Text="Не все обязательные поля заполнены верно"  TextAlignment="Left" Style="{DynamicResource FStatusBar2}" HorizontalAlignment="Stretch" />-->

                        </StackPanel>
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>
                </Grid>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" >

                <Grid ShowGridLines="false" Grid.Row="0" Grid.Column="0" Style="{DynamicResource FromGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0"/>
                        <ColumnDefinition Width="221"/>
                        <ColumnDefinition Width="430"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>





                    <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" Grid.ColumnSpan="2">
                        <Label Content="Идентификатор Простоя:  " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="5"  Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="DropdownId" Text="1234567890" MinWidth="55" Width="130" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" IsReadOnly="True"  />
                    </Border>

                    <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" Grid.ColumnSpan="2">
                        <Label Content="Начало:  " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="6"  Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                        <dxe:DateEdit
                            Mask="G"
                            MaskUseAsDisplayFormat="True" Width="130" HorizontalAlignment="Left"
                            Name ="DateStart" Style="{DynamicResource DateEditStyle}"
                           >          
                            <dxe:DateEdit.StyleSettings>
                                <dxe:DateEditNavigatorWithTimePickerStyleSettings />
                            </dxe:DateEdit.StyleSettings>
                        </dxe:DateEdit>
                    </Border>


                    <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" Grid.ColumnSpan="2">
                        <Label Content="Окончание:  " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="7"  Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                        <dxe:DateEdit
                            Mask="G"
                            MaskUseAsDisplayFormat="True" Width="130" HorizontalAlignment="Left"
                            Name ="DateEnd" Style="{DynamicResource DateEditStyle}"
                           >
                            <dxe:DateEdit.StyleSettings>
                                <dxe:DateEditNavigatorWithTimePickerStyleSettings />
                            </dxe:DateEdit.StyleSettings>
                        </dxe:DateEdit>
                    </Border>


                    <Border Grid.Row="8" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" Grid.ColumnSpan="2">
                        <Label Content="Продолжительность:  " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="8"  Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="DropdownDuration" Text="1234567890" MinWidth="55" Width="130" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" IsReadOnly="True"  />
                    </Border>



                </Grid>

            </Border>
        </Grid>
    </Border>
</controls:ControlBase>
