<controls:ControlBase x:Class="Client.Interfaces.Production.Corrugator.CorrugatorMachineOperatorKsh.Elements.ActionMovingTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Interfaces.Production.Corrugator.CorrugatorMachineOperatorKsh.Elements"
        xmlns:controls="clr-namespace:Client.Interfaces.Main"
        mc:Ignorable="d"
        d:DesignHeight="150" d:DesignWidth="300"
        Style="{DynamicResource UserControlCanvas}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}">
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{DynamicResource DataGridContainerHolder}" Height="50">
                <TextBlock Name="DescriptionAction" Margin="10,0,0,0" Text="Добавление задания 5423/asd на станок" TextWrapping="Wrap" Style="{DynamicResource FTitleBar}" Width="244" HorizontalAlignment="Left"/>
            </Border>

            <Border Grid.Row="1" Style="{DynamicResource DataGridContainerHolder}" Height="50">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Margin="0, 10, 0 , 0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Укажите номер: " Style="{DynamicResource FormLabel}"/>
                    </Border>

                    <Border Margin="0, 10, 0 , 0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="NoteBox" Style="{DynamicResource FormField}" Width="50" HorizontalAlignment="Left" />
                    </Border>
                </Grid>
            </Border>

            <Grid Grid.Row="2" Style="{DynamicResource GridControlPanel}">
                <StackPanel Orientation="Horizontal" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right">
                    <Button Name="DeleteTask" Content="Удалить" Style="{DynamicResource FButtonPrimary}" />
                    <Button Name="AddTask" Content="Добавить" Style="{DynamicResource FButtonPrimary}" />
                    <Button Name="Cancel" Content="Отмена" Style="{DynamicResource FButtonCancel}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</controls:ControlBase>
