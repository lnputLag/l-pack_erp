<controls:ControlBase x:Class="Client.Interfaces.Production.Corrugator._CorrugatorMachineOperator.Elements.IdleSplit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:Client.Interfaces.Production.Corrugator._CorrugatorMachineOperator.Elements"
             mc:Ignorable="d"
             d:DesignHeight="360" d:DesignWidth="680">
    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0"
                   Text="Разбивка простоя"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,12" />
        
        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Начало простоя" Opacity="0.8"/>
                <xctk:DateTimeUpDown
                    Margin="0,4,0,0"
                    Value="{Binding FromTime, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type local:IdleSplit}}}"
                    IsReadOnly="True"
                    Format="Custom"
                    FormatString="dd.MM.yyyy HH:mm:ss" />
            </StackPanel>

            <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="→" Opacity="0.4"/>

            <StackPanel Grid.Column="2" Orientation="Vertical">
                <TextBlock Text="Время разбиения" Opacity="0.8"/>
                <xctk:DateTimeUpDown
                    Margin="0,4,0,0"
                    Value="{Binding SplitTime, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type local:IdleSplit}}}"
                    Format="Custom"
                    FormatString="dd.MM.yyyy HH:mm:ss" />
            </StackPanel>

            <TextBlock Grid.Column="3" VerticalAlignment="Center" Text="→" Opacity="0.4"/>

            <StackPanel Grid.Column="4" Orientation="Vertical">
                <TextBlock Text="Конец простоя" Opacity="0.8"/>
                <xctk:DateTimeUpDown
                    Margin="0,4,0,0"
                    Value="{Binding ToTime, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type local:IdleSplit}}}"
                    IsReadOnly="True"
                    Format="Custom"
                    FormatString="dd.MM.yyyy HH:mm:ss" />
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="2" Margin="0,4,0,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Border Height="8"
                        CornerRadius="4"
                        Background="{DynamicResource AccentBrush}"
                        Opacity="0.25"
                        VerticalAlignment="Center"/>
                <ProgressBar Height="8"
                             Foreground="{DynamicResource AccentBrush}"
                             Background="{x:Null}"
                             BorderBrush="{x:Null}"
                             Minimum="0" Maximum="1"
                             Value="{Binding SliderValue, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type local:IdleSplit}}}"
                             VerticalAlignment="Center"
                             />
                <Slider x:Name="SplitSlider"
                        Margin="0,-10,0,0"
                        Minimum="0" Maximum="1"
                        TickFrequency="0.05"
                        IsSnapToTickEnabled="False"
                        Value="{Binding SliderValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type local:IdleSplit}}}"
                        VerticalAlignment="Center"/>
            </Grid>
            
            <Grid Grid.Row="1" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="{Binding LeftDuration, RelativeSource={RelativeSource AncestorType={x:Type local:IdleSplit}}, StringFormat=Левая часть: {0:hh\\:mm\\:ss}}"
                           HorizontalAlignment="Left"
                           Opacity="0.85"/>
                <TextBlock Grid.Column="1"
                           Text="|"
                           Opacity="0.3"
                           Margin="12,0"
                           HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="2"
                           Text="{Binding RightDuration, RelativeSource={RelativeSource AncestorType={x:Type local:IdleSplit}}, StringFormat=Правая часть: {0:hh\\:mm\\:ss}}"
                           HorizontalAlignment="Right"
                           Opacity="0.85"/>
            </Grid>
        </Grid>
        
        <Border Grid.Row="3"
                Background="#22FFCC00"
                BorderBrush="#55FFCC00"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8"
                Visibility="Visible">
            <TextBlock Text="{Binding ValidationMessage, RelativeSource={RelativeSource AncestorType={x:Type local:IdleSplit}}}"
                       Foreground="#CCAA0000"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"/>
        </Border>
        
        <TextBlock Grid.Row="4"
                   Margin="0,12,0,12"
                   Opacity="0.65"
                   Text="Переместите ползунок или отредактируйте время разбиения. Доли простоя рассчитываются автоматически."/>
        
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Отмена"
                    Margin="0,0,8,0"
                    MinWidth="100"
                    IsCancel="True"
                    Click="Cancel_Click"/>
            <Button Content="Применить"
                    MinWidth="140"
                    IsEnabled="{Binding IsValid, RelativeSource={RelativeSource AncestorType={x:Type local:IdleSplit}}}"
                    Click="Apply_Click"/>
        </StackPanel>
    </Grid>
</controls:ControlBase>
