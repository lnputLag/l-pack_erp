<controls:ControlBase x:Class="Client.Interfaces.Production.Corrugator.CorrugatorMachineOperator.ListTaskTotal"
    xmlns:local="clr-namespace:Client.Interfaces.Production"
    xmlns:lib="clr-namespace:Client.Common"
    xmlns:controls="clr-namespace:Client.Interfaces.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
    mc:Ignorable="d" 
    Style="{DynamicResource UserControlCanvas}"
    >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!--
        форма
        1 строка: блок кнопок, 30 пикс.
        2 строка: горизонтальный разделитель
        3 строка: блок с полями формы, 
    
    -->
    <Border Style="{DynamicResource FormContainerHolder}" Margin="1" >
        <Grid Style="{DynamicResource FormContainer}" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FormControlPanel}" >
                <Grid ShowGridLines="false">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" >
                        <TextBlock Grid.Row="0" Grid.Column="0"  Name="FormTitle"  TextAlignment="Left" Style="{DynamicResource FormHeaderTitleBar}"  />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" BorderBrush="#ff00cccc" BorderThickness="0" >
                        <StackPanel Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Name="FormToolbar" >
                            <Button Content="Закрыть"  Name="CloseButton" Click="CloseButton_Click" Style="{DynamicResource Button}" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Label Content="Профиль:"  Style="{DynamicResource TopLabel}" />
                            <ComboBox Name="Profil" Style="{DynamicResource FormFieldComboTall}" Width="60" SelectionChanged="Profil_SelectionChanged" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Label Content="Формат:" Style="{DynamicResource TopLabel}" />
                            <controls:SelectBox MinWidth="120" ListBoxMinHeight="170" x:Name="FormatFilter" SelectedItemChanged="FormatFilter_OnSelectedItemChanged" Style="{DynamicResource CustomFormField}"/>
                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>

                            <Label Content="Номер выполненного:"  Style="{DynamicResource TopLabel}" />
                            <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="SearchTextForCompletedTasks" Text="" TextChanged="TextChanged" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Button x:Name="ShowButton" Content="Показать" Click="ShowButton_Click" Style="{DynamicResource Button}" VerticalAlignment="Top" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Button x:Name="OnBhs1" Content="На БХС-1" Style="{DynamicResource Button}" VerticalAlignment="Top" Tag="access_mode_full_access"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button x:Name="OnBhs2" Content="На БХС-2" Style="{DynamicResource Button}" VerticalAlignment="Top" Tag="access_mode_full_access"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button x:Name="OnFosber" Content="На Фосбер" Style="{DynamicResource Button}" VerticalAlignment="Top" Tag="access_mode_full_access"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                            <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="SearchText" />

                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>
                            <CheckBox Content="Только Z картон" Style="{DynamicResource CheckBoxTopPanel}" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                            <CheckBox Content="СГП" Style="{DynamicResource CheckBoxTopPanel}" Checked="CheckBox_Checked_1" Unchecked="CheckBox_Checked_1"/>

                        </StackPanel>
                    </Border>

                </Grid>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Grid.Row="2" Grid.Column="0" >

                <Grid ShowGridLines="false" Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FromGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"  Grid.Column="0" Style="{DynamicResource DataGridMainHolder}" >
                        <controls:GridBox4 x:Name="TaskGrid" ScrollViewer.HorizontalScrollBarVisibility="Visible" />
                    </Border>
                </Grid>

            </Border>

            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"/>

            <Border Grid.Row="4" Grid.Column="0">

                <Grid ShowGridLines="false">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Margin="0 0 0 5">
                        <StackPanel Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}">
                            <Button Content="Обновить" Style="{DynamicResource Button}" x:Name="UpdateTaskList"
                                    VerticalAlignment="Top" Tag="access_mode_full_access" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button Content="БХС-1" Style="{DynamicResource Button}" x:Name="Bhs1"
                                    VerticalAlignment="Top" Tag="access_mode_full_access" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button Content="БХС-2" Style="{DynamicResource Button}" x:Name="Bhs2"
                                    VerticalAlignment="Top" Tag="access_mode_full_access" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button Content="Фосбер" Style="{DynamicResource Button}" x:Name="Fosber"
                                    VerticalAlignment="Top" Tag="access_mode_full_access" />
                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                            <Label Content="Поиск:" Style="{DynamicResource TopLabel}" />
                            <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="100" TextWrapping="NoWrap"
                                     Name="SearchTask" Text="" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource DataGridMainHolder}">
                        <controls:GridBox4 x:Name="TaskOnMachine" />
                    </Border>
                </Grid>

            </Border>

        </Grid>
    </Border>
</controls:ControlBase>
