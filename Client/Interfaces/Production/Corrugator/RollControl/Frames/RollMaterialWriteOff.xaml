<UserControl x:Class="Client.Interfaces.Production.RollMaterialWriteOff"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Client.Interfaces.Production"

    mc:Ignorable="d" 
    d:DesignWidth="800" d:DesignHeight="520" 
    Style="{DynamicResource UserControlCanvasTouch}"   
           
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource TouchFrameBlock}"  >
        <Grid Style="{DynamicResource TouchFrame}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0"  Grid.Column="0" Style="{DynamicResource TouchFromGridBlock}" BorderBrush="#bbbbbb" BorderThickness="0" >
                <TextBlock Text="Списание расходных материалов" Style="{DynamicResource TouchFormTitleTextBlock}"  />
            </Border>

            <Border Grid.Row="1"  Grid.Column="0" Style="{DynamicResource TouchFromGridBlock}" BorderBrush="#bbbbbb" BorderThickness="0" >
                <Border Style="{DynamicResource TouchFrameFormPanelBlock}" >
                    <Grid Style="{DynamicResource TouchFrameFormPanel}">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource TouchFromGridBlock}" BorderBrush="#900000" BorderThickness="0" Padding="50">
                            <Grid ShowGridLines="false" Grid.Row="0"  Grid.Column="0" Margin="0,20,0,0" Style="{DynamicResource TouchFromGrid}" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource TouchFormLabelContainer}">
                                    <Label Content="Наименование:"    Style="{DynamicResource TouchFormLabel}" />
                                </Border>
                                <Border Grid.Row="0"  Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource TouchFormFieldContainer}">
                                    <TextBox  Name="NameText" Text="Стрейч-пленка 450мм*17мкм" TextWrapping="Wrap"  Style="{DynamicResource FormFieldInput}"  MaxLength="32" HorizontalAlignment="Stretch" Height="40" MinWidth="450"/>
                                </Border>

                                <Border Grid.Row="1"  Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource TouchFormFieldContainer}">
                                </Border>

                                <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource TouchFormLabelContainer}" >
                                    <Label Content="Количество:"    Style="{DynamicResource TouchFormLabel}" />
                                </Border>
                                <Border Grid.Row="2"  Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource TouchFormFieldContainer}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox  Name="QuantityText" Text="8" TextWrapping="NoWrap" Style="{DynamicResource FormFieldInput}"  Width="70" Margin="0,0,0,0" />
                                        <Border Style="{DynamicResource FormButtonsPanelSpacer}" Width="20"></Border>

                                        <Button Name="KeyboardButtonInc" Style="{DynamicResource TouchKeyboardButton}" Padding="0,0,0,0" Tag="inc" Click="KeyboardButtonInc_Click">
                                            <TextBlock Text="+" FontSize="35"  Width="25" Height="40" Margin="0,-12,0,0" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0,0,0,0" />
                                        </Button>
                                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                                        <Button Name="KeyboardButtonDec" Style="{DynamicResource TouchKeyboardButton}"  Padding="0,0,0,0" Tag="dec" Click="KeyboardButtonInc_Click">
                                            <TextBlock Text="−" FontSize="35"  Width="25" Height="40" Margin="0,-12,0,0" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0,0,0,0" />
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource TouchFormLabelContainer}">
                                    <Label Content="Ед. измерения:"    Style="{DynamicResource TouchFormLabel}" />
                                </Border>
                                <Border Grid.Row="3"  Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource TouchFormFieldContainer}">
                                    <TextBox  Name="UnitText" Text="шт" TextWrapping="NoWrap" Style="{DynamicResource FormFieldInput}"  MaxLength="16" Width="70"  />
                                </Border>

                            </Grid>
                        </Border>

                    </Grid>

                </Border>
            </Border>

            <Border Grid.Row="2"  Grid.Column="0" Style="{DynamicResource TouchFrameControlPanelBlock}">
                <Grid Style="{DynamicResource TouchFrameControlPanel}" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="0*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource TouchFrameControlPanelLeft}"   >
                        <TextBlock  Name="FormStatus" Text="Укажите количество" TextAlignment="Left" Style="{DynamicResource TouchFormStatusBar}"  />
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource TouchFrameControlPanelRight}" >
                    </StackPanel>

                </Grid>
            </Border>

            <Border Grid.Row="3"  Grid.Column="0" Style="{DynamicResource TouchFrameControlPanelBlock}">
                <Grid Style="{DynamicResource TouchFrameControlPanel}" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="Toolbar"  Style="{DynamicResource TouchFrameControlPanelLeft}"   >

                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource TouchFrameControlPanelRight}" >

                        <Button Name="CancelButton" Click="CancelButton_Click"  Content="Отмена"     Style="{DynamicResource TouchFormButton}"    />
                        <Button Name="SaveButton"   Click="SaveButton_Click" Content="ОК"  Style="{DynamicResource TouchFormButtonPrimary}" Margin="0"   />

                    </StackPanel>

                </Grid>
            </Border>

        </Grid>
    </Border>
    
</UserControl>
