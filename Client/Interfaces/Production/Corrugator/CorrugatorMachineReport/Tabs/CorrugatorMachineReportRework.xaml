<controls:ControlBase x:Class="Client.Interfaces.Production.CorrugatorMachineReportRework"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:main="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             d:DesignHeight="450" d:DesignWidth="1200"
             Style="{DynamicResource UserControlCanvas}"  
             >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0"  Grid.Column="0">
            <!--Получение данных-->
            <StackPanel Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" Margin="0,4,0,0">
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                <Label Content="Период:"  Style="{DynamicResource TopLabel}" />
                <controls:SelectBox  x:Name="TimeSpanSelectBox" Style="{DynamicResource CustomFormField}" Margin="0,0,5,0" ListBoxMinHeight="200"  Width="140" Autocomplete="False"  />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                <Button Content="Назад" Name="LeftShiftButton" Style="{DynamicResource Button}"/>
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                <Button Content="Вперед" Name="RightShiftButton" Style="{DynamicResource Button}"/>
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                <Label Content="С:"  Style="{DynamicResource TopLabel}"/>
                <controls:DateTimePicker x:Name="FromDate" Style="{DynamicResource DateTimeEditStyle}"/>
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                <Label Content="По:"  Style="{DynamicResource TopLabel}"/>
                <controls:DateTimePicker x:Name="ToDate" Style="{DynamicResource DateTimeEditStyle}"/>
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                <Button Content="Показать" Name="ShowButton"  Style="{DynamicResource Button}"/>
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
            </StackPanel>
            <!--стандартные команды-->
            <StackPanel Style="{DynamicResource FormHeaderButtonsPanel}" Margin="0,4,0,0">
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                <Button Name="EditButton" Content="Изменить" Style="{DynamicResource Button}"  />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                <Button Name="DeleteButton"  Content="Удалить" Style="{DynamicResource Button}"/>
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
            </StackPanel>
            <!--поиск-->
            <StackPanel Style="{DynamicResource FormHeaderButtonsPanel}" Margin="0,4,0,0">
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="SearchText" Text=""  />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
            </StackPanel>
            <!--фильтр-->
            <!--вспомогательные команды-->
            <StackPanel Style="{DynamicResource FormHeaderButtonsPanel}" Margin="0,4,0,0">
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                <Button Name="ExcelButton" Content="В Excel"  Style="{DynamicResource Button}" Click="ExcelButton_Click"  />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
            </StackPanel>
        </WrapPanel>

        <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource DataGridMainHolder}"  >
            <main:GridBox4 x:Name="Grid" Visibility="Visible" />
        </Border>
    </Grid>
</controls:ControlBase>

