<UserControl x:Class="Client.Interfaces.Production.SpeedBar2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Production"
             mc:Ignorable="d" 
             >
<!--
    <UserControl.RenderTransform>
        <RotateTransform Angle="270" CenterX="100" CenterY="50">
            
        </RotateTransform>
    </UserControl.RenderTransform>
-->
    <Border d:Background="White">
        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid x:Name="MainContainer" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border HorizontalAlignment="Stretch" VerticalAlignment="Top" Panel.ZIndex="1">
                    <Border x:Name="DivisionBar" Height="100" Background="Black" CornerRadius="50">
                        <Border x:Name="DivisionInnerBar" Background="White" CornerRadius="50" Margin="2">
                        </Border>
                    </Border>
                </Border>

                <Border x:Name="CurrentValue" Background="Red" Height="2" Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Left" CornerRadius="2" Margin="1,0,0,0" Panel.ZIndex="3">
                    <Border.RenderTransform>
                        <RotateTransform Angle="0" CenterX="49" CenterY="1">
                        </RotateTransform>
                    </Border.RenderTransform>
                </Border>

                <Border x:Name="PlanValue" Background="Blue" Height="1" Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Left" CornerRadius="2" Margin="1,0,0,0" Panel.ZIndex="2">
                    <Border.RenderTransform>
                        <RotateTransform Angle="90" CenterX="49" CenterY="0.5">
                        </RotateTransform>
                    </Border.RenderTransform>
                </Border>
            </Grid>

            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="FirstDivisionTextBlock"  FontSize="10" Text="0" Foreground="Black" FontWeight="Bold" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="6,0,0,0">
                </TextBlock>

                <TextBlock x:Name="SecondDivisionTextBlock"  FontSize="10" Text="125" Foreground="Black" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="16,16,0,0">
                </TextBlock>

                <TextBlock x:Name="ThirdDivisionTextBlock"  FontSize="10" Text="250" Foreground="Black" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,4,0,0">
                </TextBlock>

                <TextBlock x:Name="FourthDivisionTextBlock"  FontSize="10" Text="375" Foreground="Black" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,16,16,0">
                </TextBlock>

                <TextBlock x:Name="FifthDivisionTextBlock"  FontSize="10" Text="500" Foreground="Black" FontWeight="Bold" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,6,0">
                </TextBlock>
            </Grid>

        </Grid>
    </Border>
    
</UserControl>
