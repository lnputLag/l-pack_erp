<UserControl x:Class="Client.Interfaces.Production.BarChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Production"
             mc:Ignorable="d" 
             Width="74" Height="150">
    
    <Border d:Background="White">
        <Grid Margin="2,1,2,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Border x:Name="MainContainerBorder" Grid.Row="0" Grid.Column="0" Background="Transparent" Width="70" Margin="0" Padding="0" Height="147.88">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="FirstValueTextBlock" FontWeight="DemiBold" ToolTip="Загруженность в часах" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="100"/>

                    <TextBlock x:Name="SecondValueTextBlock" FontWeight="DemiBold" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="100"/>

                    <Border x:Name="BarContainerBorder" Grid.Row="2" Grid.Column="0" Background="DarkGray" Height="100" Margin="0" Padding="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" x:Name="CurrentValueBorder" Background="#FFdedede" Height="60" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" BorderThickness="0" BorderBrush="Transparent" Margin="0" Padding="0" Panel.ZIndex="0" CornerRadius="0">
                            </Border>

                            <TextBlock x:Name="InnerValueTextBlock" ToolTip="Отношение времени до выхода продукции к времени до отгрузки" FontWeight="Bold" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="100"/>
                        </Grid>
                    </Border>

                    <TextBlock x:Name="FooterValueTextBlock" FontWeight="DemiBold" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Text="100"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
