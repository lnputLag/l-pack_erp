<UserControl x:Class="Client.Interfaces.Production.PilloryGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Production"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="545" 
             Width="600" Height="150">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border>
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="1">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0">
                        <TextBox x:Name="MachineIdTextBox" Text="208" Style="{DynamicResource PilloryGridToolBarTextBox}"/>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="1">
                        <TextBox x:Name="DefectPercentageTextBox" FontWeight="Bold" ToolTip="Процент брака" Text="1.2%" Style="{DynamicResource PilloryGridToolBarTextBox}"/>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="2">
                        <TextBox x:Name="MachineDataTextBox" FontWeight="Bold" ToolTip="Проехали / средняя скорость" Text="23 746 / 299" Style="{DynamicResource PilloryGridToolBarTextBox}"/>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="3">
                        <TextBox x:Name="MachineNameTextBox" FontWeight="Bold" Text="Em 175 - 1" Style="{DynamicResource PilloryGridToolBarTextBox}"/>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="4">
                        <TextBox x:Name="MachineData2TextBox" FontWeight="Bold" Text="8 323 / 117" Style="{DynamicResource PilloryGridToolBarTextBox}"/>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource DataGridMainHolder}">
                <controls:GridBox4 x:Name="Grid" />
            </Border>

            <Border Grid.Row="0" Grid.Column="0">
                <StackPanel Grid.Column="1" Grid.Row="0" x:Name="MachineStatusStackPanel" Orientation="Horizontal" HorizontalAlignment="Right">
                    <!--<Border VerticalAlignment="Center" Width="10" Height="15" Background="Red" BorderThickness="1" BorderBrush="Black" Margin="3,0,0,0"/>-->
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" >
                <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <Border>
                        <TextBox x:Name="MachineSpeedTextBox" Text="208/300" Style="{DynamicResource PilloryGridToolBarTextBox}"/>
                    </Border>

                    <Border>
                        <local:SpeedBar2 x:Name="MachineSpeedBar">
                        </local:SpeedBar2>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
    
</UserControl>
