<UserControl x:Class="Client.Interfaces.Production.Clock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Production"
             mc:Ignorable="d" 
             
             Width="100">
    
    <Border d:Background="White">
        <Border Width="100" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="0">
            <Label Content="08:00" Name="ClockLabel" FontWeight="Bold" FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="0" Margin="0,0,5,0" />
        </Border>
    </Border>
</UserControl>
