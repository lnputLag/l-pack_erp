<UserControl x:Class="Client.Interfaces.Production.SpeedBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Production"
             mc:Ignorable="d" 
                >
    
    <Border d:Background="White" >
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="0" Margin="0,0,1,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="FifthDivisionTextBlock" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Text="100"/>

                    <TextBlock x:Name="FourthDivisionTextBlock" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Text="80"/>

                    <TextBlock x:Name="ThirdDivisionTextBlock" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Text="60"/>

                    <TextBlock x:Name="SecondDivisionTextBlock" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Text="40"/>

                    <TextBlock x:Name="FirstDivisionTextBlock" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Text="20"/>

                    <Border Grid.Row="0" Grid.Column="1" Background="black" Height="1" Width="5" HorizontalAlignment="Right" VerticalAlignment="Top" BorderThickness="0" Margin="0" Padding="0"/>

                    <Border Grid.Row="1" Grid.Column="1" Background="black" Height="1" Width="5" HorizontalAlignment="Right" VerticalAlignment="Top" BorderThickness="0" Margin="0" Padding="0"/>

                    <Border Grid.Row="2" Grid.Column="1" Background="black" Height="1" Width="5" HorizontalAlignment="Right" VerticalAlignment="Top" BorderThickness="0" Margin="0" Padding="0"/>

                    <Border Grid.Row="3" Grid.Column="1" Background="black" Height="1" Width="5" HorizontalAlignment="Right" VerticalAlignment="Top" BorderThickness="0" Margin="0" Padding="0"/>

                    <Border Grid.Row="4" Grid.Column="1" Background="black" Height="1" Width="5" HorizontalAlignment="Right" VerticalAlignment="Top" BorderThickness="0" Margin="0" Padding="0"/>
                </Grid>
            </Border>

            <Border x:Name="MainContainerBorder" Grid.Row="0" Grid.Column="1" Background="Transparent" Height="100" MinWidth="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" BorderThickness="1" BorderBrush="Black" Margin="0" Padding="0" Panel.ZIndex="1" CornerRadius="0">
                <Grid Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" x:Name="CurrentValueBorder" Background="red" Height="60" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" BorderThickness="0" BorderBrush="Transparent" Margin="0" Padding="0" Panel.ZIndex="0" CornerRadius="0">
                    </Border>

                    <Border Grid.Row="0" Grid.Column="0" x:Name="PlanValueBorder" Background="Blue" Height="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" BorderThickness="0" BorderBrush="Transparent" Margin="0,0,0,-1" Panel.ZIndex="2" Padding="0">
                    </Border>

                </Grid>
            </Border>

            <!--

            -->

        </Grid>
    </Border>
    
</UserControl>
