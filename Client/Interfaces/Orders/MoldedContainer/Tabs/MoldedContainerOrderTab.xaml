<controls:ControlBase x:Class="Client.Interfaces.Orders.MoldedContainer.MoldedContainerOrderTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             xmlns:local="clr-namespace:Client.Interfaces.Orders.MoldedContainer"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{DynamicResource DataGridMainHolder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="151*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Name="BuyerToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" >
                    <TextBlock Height="24" Padding="0,4,5,0">Покупатели</TextBlock>
                    <Button Name="RefreshButton"     Content="Обновить"    Style="{DynamicResource Button}" />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                    <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="120" TextWrapping="NoWrap" Name="BuyerSearchText" Text=""/>
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    <CheckBox Name="AllBuyersCheckBox" Content="Все" Style="{DynamicResource CheckBoxTopPanel}" Visibility="Collapsed"/>
                </StackPanel>

                <Border Grid.Row="1"  Grid.Column="0" Style="{DynamicResource DataGridMainHolder}" >
                    <controls:GridBox4 x:Name="BuyerGrid" />
                </Border>

                <Grid Grid.Row="0"  Grid.Column="2" Style="{DynamicResource GridControlPanel}" Grid.ColumnSpan="2" Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="OrderToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left" >
                        <TextBlock Height="24" Padding="0,4,5,0">Заявки</TextBlock>
                        <Button Name="CreateOrderButton"      Content="Добавить"     Style="{DynamicResource Button}" />
                        <Button Name="EditOrderButton"        Content="Изменить"    Style="{DynamicResource Button}" />
                        <Button Name="DeleteOrderButton"      Content="Удалить"     Style="{DynamicResource Button}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="OnApproval"      Content="На согласование"     Style="{DynamicResource Button}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="CreateShipmentForOrderButton"      Content="Создать отгрузку"     Style="{DynamicResource Button}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="120" TextWrapping="NoWrap" Name="OrderSearchText" Text=""/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <CheckBox Name="AllOrdersCheckBox" Content="Все" Style="{DynamicResource CheckBoxTopPanel}" Click="AllOrdersCheckBox_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right">
                        <Label Content="В буфере 0 позиций" ToolTip="" x:Name="BufferInfo"  Style="{DynamicResource TopLabel}" />
                        <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" />
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1"  Grid.Column="2" Style="{DynamicResource DataGridMainHolder}" Grid.ColumnSpan="2" >
                    <controls:GridBox4 x:Name="OrderGrid" />
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{DynamicResource DataGridMainHolder}" Margin="0,5,0,0" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}" Height="24" VerticalAlignment="Top">
                    <StackPanel Name="PositionToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                        <TextBlock Height="24" Padding="0,4,5,0">Позиции</TextBlock>
                        <Button Name="CreatePositionButton"      Content="Добавить"  Style="{DynamicResource Button}" />
                        <Button Name="EditPositionButton"        Content="Изменить"    Style="{DynamicResource Button}" />
                        <Button Name="DeletePositionButton"      Content="Удалить"     Style="{DynamicResource Button}" />
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"/>
                        <Button Name="CutPosition" Content="Вырезать" Style="{DynamicResource Button}"/>
                        <Button Name="PastePosition" Content="Вставить" Style="{DynamicResource Button}"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1"  Grid.Column="0" Style="{DynamicResource DataGridMainHolder}" >
                    <controls:GridBox4 x:Name="PositionGrid" />
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="2" Style="{DynamicResource DataGridMainHolder}" Margin="0,5,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                    <StackPanel Name="ShipmentToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                        <TextBlock Height="24" Padding="0,4,5,0">Отгрузки</TextBlock>
                        <TextBlock Height="24" Padding="0,4,5,0">Дата:</TextBlock>
                        <Grid Style="{DynamicResource FormFieldDateHolder}">
                            <controls:DatePicker x:Name="ShipmentDate" Style="{DynamicResource DateEditStyle}" TextChanged="ShipmentDate_TextChanged">
                            </controls:DatePicker>
                        </Grid>
                        <Button Name="RefreshShipmentButton"     Content="Показать"  Style="{DynamicResource Button}" />
                        <Button Name="CreateShipmentButton"      Content="Добавить"  Style="{DynamicResource Button}" />
                        <Button Name="EditShipmentButton"        Content="Изменить"    Style="{DynamicResource Button}" />
                        <Button Name="DeleteShipmentButton"      Content="Удалить"     Style="{DynamicResource Button}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>


                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <CheckBox Name="OwnerCheckBox" Content="Только свои" Style="{DynamicResource CheckBoxTopPanel}" IsChecked="True" Click="OwnerCheckBox_Click" Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1"  Grid.Column="0" Grid.RowSpan="3" Style="{DynamicResource DataGridMainHolder}" >
                    <controls:GridBox4 x:Name="ShipmentGrid" />
                </Border>

                <Grid Grid.Row="0" Grid.Column="2" Style="{DynamicResource GridControlPanel}">
                    <StackPanel Name="ShipmentOrderToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                        <TextBlock Height="24" Padding="0,4,5,0">Заявки</TextBlock>
                        <Button Name="AppendToShipmentButton"      Content="Добавить в отгрузку"  Style="{DynamicResource Button}" />
                        <Button Name="RemoveFromShipmentButton"    Content="Удалить из отгрузки"     Style="{DynamicResource Button}" />
                        <Button Name="EditOrderShipmentButton"     Content="Изменить"    Style="{DynamicResource Button}" />
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1"  Grid.Column="2" Style="{DynamicResource DataGridMainHolder}" >
                    <controls:GridBox4 x:Name="ShipmentOrderGrid" />
                </Border>

                <Grid Grid.Row="2" Grid.Column="2" Style="{DynamicResource GridControlPanel}">
                    <StackPanel Name="ShipmentPositionToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                        <TextBlock Height="24" Padding="0,4,5,0">Позиции отгрузки</TextBlock>
                        <Button Name="AppendToOrderShipmentButton"      Content="Добавить"  Style="{DynamicResource Button}" />
                        <Button Name="EditPositionOrderShipmentButton"  Content="Изменить"    Style="{DynamicResource Button}" />
                        <Button Name="RemoveFromOrderShipmentButton"    Content="Удалить"     Style="{DynamicResource Button}" />
                    </StackPanel>
                </Grid>

                <Border Grid.Row="3"  Grid.Column="2" Style="{DynamicResource DataGridMainHolder}" >
                    <controls:GridBox4 x:Name="ShipmentPositionGrid" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</controls:ControlBase>
