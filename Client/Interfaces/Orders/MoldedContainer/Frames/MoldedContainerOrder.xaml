<controls:ControlBase x:Class="Client.Interfaces.Orders.MoldedContainer.MoldedContainerOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             xmlns:local="clr-namespace:Client.Interfaces.Orders.MoldedContainer"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Name="FormToolbar">
                            <Button Content="Сохранить" Name="SaveButton"   Tag="Save"    Style="{DynamicResource FButtonPrimary}" />
                            <Button Content="Отмена"    Name="CancelButton" Tag="Close" Style="{DynamicResource Button}" />

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right" >
                            <Button Name="HelpButton" Width="24" MinWidth="24" Content="?" Tag="Help" Style="{DynamicResource Button}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"/>

            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}" Width="800" HorizontalAlignment="Left">
                <Grid Style="{DynamicResource FromGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="166"/>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Грузополучатель: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Consignee" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Продавец: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Seller" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" SelectedItemChanged="Seller_SelectedItemChanged" />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Договор:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Contract" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Банковский счет:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="BankAccount" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" />
                    </Border>

                    <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Номер заявки:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="4" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="OrderNumber"  Style="{DynamicResource FormField}" MaxLength="32"  />
                    </Border>

                    <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Самовывоз:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="5" Grid.Column="1" Style="{DynamicResource FormFieldContainer}"  >
                        <CheckBox Name="SelfDelivery" Content="" Style="{DynamicResource FormCheckBox}" IsChecked="False" Click="SelfDelivery_Click"/>
                    </Border>


                    <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Дата отгрузки:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="6" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <Grid Style="{DynamicResource FormFieldDateHolder}" HorizontalAlignment="Left"  Margin="0,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Grid Style="{DynamicResource FormFieldDateHolder}" HorizontalAlignment="Left"  Margin="0,0,0,0">
                                    <!--<TextBox Name="ShipmentDate"  MaxLength="10"  Style="{DynamicResource FormFieldDate}" HorizontalAlignment="Left" Width="150" IsReadOnly="True" />
                                    <DatePicker Name="SelectedShipmentDateBtn" SelectedDate="{Binding Path=Text, Mode=OneWayToSource, ElementName=ShipmentDate, Converter={StaticResource DateDate} }"  Style="{DynamicResource FormFieldDP}"  Margin="0,1,0,0">
                                    </DatePicker>-->
                                    <controls:DatePicker x:Name="ShipmentDate" Style="{DynamicResource DateEditStyle}" />
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Дата доставки:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="7" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <Grid Style="{DynamicResource FormFieldDateHolder}" HorizontalAlignment="Left"  Margin="0,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Grid Style="{DynamicResource FormFieldDateHolder}" HorizontalAlignment="Left"  Margin="0,0,10,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <!--<TextBox Name="SupplyDate"  MaxLength="10"  Style="{DynamicResource FormFieldDate}" HorizontalAlignment="Left" Width="150" IsReadOnly="True" />
                                    <DatePicker Name="SelectedSupplyDateBtn" SelectedDate="{Binding Path=Text, Mode=OneWayToSource, ElementName=SupplyDate, Converter={StaticResource DateDate} }"  Style="{DynamicResource FormFieldDP}"  Margin="0,1,0,0">
                                    </DatePicker>-->
                                    <controls:DateTimePicker x:Name="SupplyDate" Style="{DynamicResource DateTimeEditStyle}" Grid.ColumnSpan="2" Margin="0" />
                                </Grid>
                                <!--<TextBox Name="SupplyTime"  MaxLength="10"  Text="08:00:00" Style="{DynamicResource FormField}" HorizontalAlignment="Right" Width="140"  />-->
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Row="8" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Уточнение даты:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="8" Grid.Column="1" Style="{DynamicResource FormFieldContainer}" >
                        <CheckBox Name="DateConfirmation" Content="" Style="{DynamicResource FormCheckBox}" />
                    </Border>


                    <Border Grid.Row="9" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Ожидание оплаты:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="9" Grid.Column="1" Style="{DynamicResource FormFieldContainer}" >
                        <CheckBox Name="PrepayConfirmation" Content="" Style="{DynamicResource FormCheckBox}" />
                    </Border>

                    <Border Grid.Row="10" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Примечание кладовщику:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="10" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="NoteStorekeeper"  Style="{DynamicResource FormField}" MaxLength="512" />
                    </Border>

                    <Border Grid.Row="11" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Примечание грузчику:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="11" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="NoteLoader"  Style="{DynamicResource FormField}" MaxLength="512" />
                    </Border>

                    <Border Grid.Row="12" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Примечание логисту:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="12" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="NoteLogist"  Style="{DynamicResource FormField}" MaxLength="512"  />
                    </Border>





                </Grid>
            </Border>

            <Border Grid.Row="3" Grid.Column="0" Margin="0,5,0,5" Style="{DynamicResource FormVerticalPanelSpacer}"/>

            <Border Grid.Row="4" Grid.Column="0">
                <Grid Name="DocumentCountGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="215"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Column="0" Grid.Row="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Счёт:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="1" Grid.Row="0" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="ReceiptTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>

                    <Border Grid.Column="2" Grid.Row="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Счёт-фактура:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="3" Grid.Row="0" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="InvoiceTextBox"  TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>

                    <Border Grid.Column="4" Grid.Row="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Накладная:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="5" Grid.Row="0" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="PackingListTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>



                    <Border Grid.Column="0" Grid.Row="1" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Транспортная накладная:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="1" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="WaybillTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>

                    <Border Grid.Column="2" Grid.Row="1" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Внутр. транспортная накладная:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="3" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="InnerWaybillTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>

                    <Border Grid.Column="4" Grid.Row="1" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="ТН клиента:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="5" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="ClientWaybillTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>



                    <Border Grid.Column="0" Grid.Row="2" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="ТТН:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="1" Grid.Row="2" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="ConsignmentNoteTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>

                    <Border Grid.Column="2" Grid.Row="2" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Внутр. ТТН:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="3" Grid.Row="2" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="InnerConsignmentNoteTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>

                    <Border Grid.Column="4" Grid.Row="2" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="ТТН клиента:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="5" Grid.Row="2" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="ClientConsignmentNoteTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>



                    <Border Grid.Column="0" Grid.Row="3" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Удостоверение качества:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="1" Grid.Row="3" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="QualityCertificateTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>

                    <Border Grid.Column="2" Grid.Row="3" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Удостоверение качества на бумагу:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="3" Grid.Row="3" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="QualityCertificateOnPaperTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>

                    <Border Grid.Column="4" Grid.Row="3" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Паспорт качества:" Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Column="5" Grid.Row="3" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="QualityPassportTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>



                    <Border Grid.Column="0" Grid.Row="4" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Сертификаты по ГОСТ:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="1" Grid.Row="4" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="CertificateGostTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>

                    <Border Grid.Column="2" Grid.Row="4" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Сертификаты по ТУ:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="3" Grid.Row="4" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="CertificateTuTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>

                    <Border Grid.Column="4" Grid.Row="4" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Спецификация на бумагу:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="5" Grid.Row="4" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="SpecificationOnPaperTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>



                    <Border Grid.Column="0" Grid.Row="5" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="УПД:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="1" Grid.Row="5" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="UniversalTransferDocTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>

                    <Border Grid.Column="2" Grid.Row="5" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Внутренний УПД:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="3" Grid.Row="5" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="InnerUniversalTransferDocTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>


                    <Border Grid.Column="0" Grid.Row="6" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="CMR:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="1" Grid.Row="6" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="CmrTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>

                    <Border Grid.Column="2" Grid.Row="6" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Внутренняя CMR:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Column="3" Grid.Row="6" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="InnerCmrTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="40"/>
                    </Border>

                </Grid>
            </Border>

        </Grid>
    </Border>
</controls:ControlBase>
