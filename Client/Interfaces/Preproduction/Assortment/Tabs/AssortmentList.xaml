<controls:ControlBase x:Class="Client.Interfaces.Preproduction.AssortmentList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="11.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                <Label Content="Фильтр:"  Style="{DynamicResource TopLabel}" />
                <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="120" TextWrapping="NoWrap" Name="TemplateText" Text="" KeyUp="TemplateText_KeyUp"  />

                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <Button Name="RefreshButton"    Content="Показать"   Tag="Refresh" Style="{DynamicResource Button}"   />
                <Button Name="EditButton"       Content="Изменить"   Tag="Edit;access_mode_full_access" Style="{DynamicResource Button}"   />
                <Button Name="CopyBlankButton"  Content="Копировать" Tag="CopyBlank;access_mode_full_access" Style="{DynamicResource Button}"  />
                <Button Name="ArchiveButton"    Content="В архив"    Tag="Archive;access_mode_full_access" Style="{DynamicResource Button}"    />
                <Button Name="TechMapButton"    Content="Техкарта"   Tag="TechMap" Style="{DynamicResource Button}"   />
                <Button Name="ToExcelButton"    Content="В Excel"    Tag="ToExcel" Style="{DynamicResource Button}"   />

                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="120" TextWrapping="NoWrap" Name="SearchText" Text="" />

                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                <CheckBox Name="ShowArchivedCheckBox" Content="Архивные"  Style="{DynamicResource CheckBoxTopPanel}" Click="ShowArchivedCheckBox_Click"/>
                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                <Label Content="Тип:"  Style="{DynamicResource TopLabel}" />
                <controls:SelectBox x:Name="ProductType" Style="{DynamicResource CustomFormField}" Width="140"  Autocomplete="False" SelectedItemChanged="ProductType_SelectedItemChanged" />

            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                <Button Name="HelpButton"  Width="24" MinWidth="24" Tag="Help" Content="?"  Style="{DynamicResource Button}"  />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1"  Grid.Column="0" >
            <Border Style="{DynamicResource DataGridMainHolder}" >
                <controls:GridBox4 x:Name="Grid" />
            </Border>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0" Height="100"  VerticalAlignment="Top" Panel.ZIndex="10">
            <controls:SplashControl x:Name="SplashControl"/>
        </Grid>
    </Grid>
</controls:ControlBase>
