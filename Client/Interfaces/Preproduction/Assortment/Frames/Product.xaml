<controls:ControlBase x:Class="Client.Interfaces.Preproduction.Product"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1500"
             Style="{DynamicResource UserControlCanvas}"
                      Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid  Style="{DynamicResource FromGrid}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="1310">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                <Button Name="SaveButton"   Content="Сохранить" Tag="Save"  Style="{DynamicResource FButtonPrimary}" Click="ButtonOnClick" />
                <Button Name="CancelButton" Content="Отмена"    Tag="Close" Style="{DynamicResource FButtonCancel}" Click="ButtonOnClick" />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
            </StackPanel>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Name="GeneralBlock" Style="{DynamicResource DataGridContainerHolder}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Название: *" Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="ProductName"  Style="{DynamicResource FormField}" MaxLength="50"  />
                                    </Border>

                                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Название 2:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="AdvancedName"  Style="{DynamicResource FormField}" MaxLength="55"/>
                                    </Border>

                                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Описание:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="Details"  Style="{DynamicResource FormField}" MaxLength="50"/>
                                    </Border>

                                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Артикул:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="Article"  Style="{DynamicResource FormField}" MaxLength="30" IsReadOnly="True" />
                                    </Border>

                                </Grid>
                            </Border>

                            <Border Grid.Row="1" Grid.Column="0" Name="LabelBlock" Style="{DynamicResource DataGridContainerHolder}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0"  Style="{DynamicResource FormLabelContainer}" >
                                        <Label Content="Потребитель:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="0" Grid.Column="1"  Style="{DynamicResource FormFieldContainer}" >
                                        <TextBox Name="CustomerName"  Style="{DynamicResource FormField}" IsReadOnly="True"/>
                                    </Border>

                                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Печатать потребителя на ярлыке:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <CheckBox Name="PrintCustomerFlag" HorizontalAlignment="Left" />
                                    </Border>

                                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Посредник для ярлыка:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="IntermediaryLabel"  Style="{DynamicResource FormField}" MaxLength="35"/>
                                    </Border>

                                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Артикул для печати:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="ArticleForPrint"  Style="{DynamicResource FormField}" MaxLength="20"/>
                                    </Border>

                                    <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Количество ярлыков:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="4" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="LabelQty"  Style="{DynamicResource FormField}" MaxLength="1" TextChanged="LabelQty_TextChanged" />
                                    </Border>

                                    <Border Grid.Row="5" Grid.Column="0"  Style="{DynamicResource FormLabelContainer}" >
                                        <Label Content="Единица измерения: *" Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="5" Grid.Column="1"  Style="{DynamicResource FormFieldContainer}" >
                                        <controls:SelectBox  x:Name="MeasureUnit"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False" />
                                    </Border>

                                    <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Фиксированная цена:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="6" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <CheckBox Name="FixPrice" HorizontalAlignment="Left" />
                                    </Border>

                                    <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="+1 поддон к производству:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="7" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <CheckBox Name="AdditionalPalletFlag" HorizontalAlignment="Left" />
                                    </Border>

                                    <Border Grid.Row="8" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Запрет авт. утилизации поддона:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="8" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <CheckBox Name="UndisposalPalletFlag" HorizontalAlignment="Left" />
                                    </Border>


                                    <Border Grid.Row="9" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Особые дата и номер партии:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="9" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <CheckBox Name="SpecialTaskNumber" HorizontalAlignment="Left" />
                                    </Border>

                                    <Border Grid.Row="10" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Постоянный штрихкод на позицию:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="10" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="BarcodeCustomer"  Style="{DynamicResource FormField}" MaxLength="64" />
                                    </Border>

                                    <Border Grid.Row="11" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Код позиции динамического штрихкода:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="11" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="BarcodeCustomerNum"  Style="{DynamicResource FormField}" MaxLength="64" />
                                    </Border>

                                    <Border Grid.Row="12" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Использовать пластиковый поддон:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="12" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <controls:SelectBox  x:Name="PalletPlasticFlag"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False" SelectedItemChanged="PalletPlasticFlag_SelectedItemChanged" />
                                    </Border>

                                    <Border Grid.Row="13" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="ТУ на ярлыке:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="13" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="TechnicalCondition"  Style="{DynamicResource FormField}" MaxLength="32" />
                                    </Border>

                                    <Border Grid.Row="14" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Код ТН ВЭД:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="14" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="ForeignInvoiceCode"  Style="{DynamicResource FormField}" MaxLength="20" />
                                    </Border>

                                    <Border Grid.Row="15" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Код ЭДО:  " ToolTip="Код продукции для отображении в электронном документе" Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="15" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="EdmCode"  Style="{DynamicResource FormField}" MaxLength="20" />
                                    </Border>

                                    <Border Grid.Row="16" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Производство:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="16" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox Name="ProductionLipetsk" Content="Липецк" Style="{DynamicResource CustomFormField}"  Width="200" />
                                            <CheckBox Name="ProductionKashira" Content="Кашира" Style="{DynamicResource CustomFormField}" Width="200"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>

                            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

                            <Border Grid.Row="3" Grid.Column="0" Name="CommentBlock" Style="{DynamicResource DataGridContainerHolder}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Примечание грузчику:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="NoteForStorekeeper"  Style="{DynamicResource FormField}"/>
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Примечание кладовщику:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox Name="NoteForLoader"  Style="{DynamicResource FormField}"/>
                                    </Border>
                                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Примечание к заявке:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Style="{DynamicResource FormFieldContainer}">
                                        <controls:SelectBox x:Name="NoteForOrder"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False"/>
                                    </Border>

                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource DataGridContainerHolder}">
                        <StackPanel>
                            <Grid Name="BlankBlock" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                    <Label Content="Длина: *" Style="{DynamicResource FormLabel}" />
                                </Border>
                                <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                    <TextBox Name="Length"  Style="{DynamicResource FormField}" TextChanged="SizeTextChanged" />
                                </Border>

                                <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                    <Label Content="Ширина: *" Style="{DynamicResource FormLabel}" />
                                </Border>
                                <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                    <TextBox Name="Width"  Style="{DynamicResource FormField}" TextChanged="SizeTextChanged"/>
                                </Border>

                                <Border Grid.Row="2" Grid.Column="0" Name="CreaseTypeLabel" Style="{DynamicResource FormLabelContainer}" >
                                    <Label Content="Тип рилевки: *" Style="{DynamicResource FormLabel}" />
                                </Border>
                                <Border Grid.Row="2" Grid.Column="1" Name="CreaseTypeValue" Style="{DynamicResource FormFieldContainer}" >
                                    <TextBox Name="CreaseType"  Style="{DynamicResource CustomFormField}" IsReadOnly="True" />
                                </Border>

                                <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                    <Label Content="Симметричная рилевка:  " Name="SymmetricLabelContent" Style="{DynamicResource FormLabel}" />
                                </Border>
                                <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                    <TextBox Name="CreaseSymmetric"  Style="{DynamicResource FormField}"/>
                                </Border>

                                <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Name="CreaseGridPanel" Style="{DynamicResource DataGridMainHolder}" Height="160" Margin="0,10,0,10">
                                    <Grid Style="{DynamicResource DataGridContainer}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Margin="0,5" >
                                            <Border Style="{DynamicResource FormButtonsPanelSpacer}" Width="22"></Border>
                                            <Label Content="Несимметричные рилевки" Style="{DynamicResource TopLabel}"/>
                                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                                            <Button Name="AddCreaseButton"    Tag="Add"    Content="Добавить"   Style="{DynamicResource Button}" Click="ButtonOnClick"  />
                                            <Button Name="DeleteCreaseButton" Tag="Delete" Content="Удалить"    Style="{DynamicResource Button}" Click="ButtonOnClick"  />
                                        </StackPanel>

                                        <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}" >
                                            <controls:GridBox4 x:Name="CreaseGrid" />
                                        </Border>

                                    </Grid>
                                </Border>
                            </Grid>
                            <Grid Name="BctEctBstWeightBlock"  Visibility="Collapsed">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                    <Label Content="BCT, min:  " Style="{DynamicResource FormLabel}" />
                                </Border>
                                <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                    <TextBox Name="BctMinTextBox"  Style="{DynamicResource CustomFormField}"/>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                    <Label Content="BCT, max:  " Style="{DynamicResource FormLabel}" />
                                </Border>
                                <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                    <TextBox Name="BctMaxTextBox"  Style="{DynamicResource CustomFormField}"/>
                                </Border>

                                <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                    <Label Content="ECT, min:  " Style="{DynamicResource FormLabel}" />
                                </Border>
                                <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                    <TextBox Name="EctMinTextBox"  Style="{DynamicResource CustomFormField}"/>
                                </Border>

                                <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                    <Label Content="ECT, max:  " Style="{DynamicResource FormLabel}" />
                                </Border>
                                <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                    <TextBox Name="EctMaxTextBox"  Style="{DynamicResource CustomFormField}"/>
                                </Border>

                                <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                    <Label Content="BST, min:  " Style="{DynamicResource FormLabel}" />
                                </Border>
                                <Border Grid.Row="4" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                    <TextBox Name="BstMinTextBox"  Style="{DynamicResource CustomFormField}"/>
                                </Border>

                                <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                    <Label Content="BST, max:  " Style="{DynamicResource FormLabel}" />
                                </Border>
                                <Border Grid.Row="5" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                    <TextBox Name="BstMaxTextBox"  Style="{DynamicResource CustomFormField}"/>
                                </Border>

                                <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                    <Label Content="Вес, г:  " Style="{DynamicResource FormLabel}" />
                                </Border>
                                <Border Grid.Row="6" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                    <TextBox Name="WeightTextBox"  Style="{DynamicResource CustomFormField}"/>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</controls:ControlBase>
