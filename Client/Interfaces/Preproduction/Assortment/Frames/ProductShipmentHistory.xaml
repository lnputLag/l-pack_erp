<controls:ControlBase x:Class="Client.Interfaces.Preproduction.ProductShipmentHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource FromGrid}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="1000">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                    <Button Name="CancelButton" Content="Закрыть"    Tag="Close" Style="{DynamicResource FButtonCancel}" Click="ButtonOnClick" />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    <Label Content="С:"  Style="{DynamicResource TopLabel}"/>
                    <Grid Style="{DynamicResource FormFieldDateHolder}">

                        <controls:DatePicker x:Name="FromDate" Style="{DynamicResource DateEditStyle}" Text="20.10.2023" TextChanged="DateChanged">
                        </controls:DatePicker>

                    </Grid>

                    <Label Content="по:"  Style="{DynamicResource TopLabel}"/>
                    <Grid Style="{DynamicResource FormFieldDateHolder}">
                        <controls:DatePicker x:Name="ToDate" Style="{DynamicResource DateEditStyle}" Text="20.10.2023" TextChanged="DateChanged">
                        </controls:DatePicker>

                    </Grid>
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    <CheckBox Name="ShowAllCheckBox" Content="Все отгрузки"  Style="{DynamicResource CheckBoxTopPanel}" Click="ShowAllCheckBox_Click"/>
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                    <Button Name="RefreshButton"    Content="Показать" Tag="Refresh" Style="{DynamicResource Button}"  Click="ButtonOnClick" />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    <Button Name="ToExcelButton" Content="В Excel"    Tag="ToExcel" Style="{DynamicResource FButtonCancel}" Click="ButtonOnClick" />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                    <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                </StackPanel>
            </Grid>



            <Border Grid.Row="1" Grid.Column="0"  Style="{DynamicResource DataGridMainHolder}" Margin="0,0,0,10" >
                <controls:GridBox4 x:Name="Grid" />
            </Border>

        </Grid>
    </Border>
</controls:ControlBase>
