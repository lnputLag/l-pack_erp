<UserControl x:Class="Client.Interfaces.Preproduction.SampleProduction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"

             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource FromGrid}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                <Button Name="SaveButton"   Content="Сохранить"  Style="{DynamicResource FButtonPrimary}" Click="SaveButton_Click"   />
                <Button Name="CancelButton" Content="Отмена"     Style="{DynamicResource FButtonCancel}" Click="CancelButton_Click"   />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
            </StackPanel>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Name="HeaderBlock" Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Покупатель: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="CustomerName" Style="{DynamicResource CustomFormField}" Autocomplete="True"  />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Дата:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="CreatedDate"  Style="{DynamicResource FormField}" IsReadOnly="True" />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Номер:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="Num" Style="{DynamicResource FormField}" MaxLength="15"/>
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Изделие: *" Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Name="Product" ToolTip="Заявка" Style="{DynamicResource FormField}" Width="278" IsReadOnly="True" />
                            <TextBox Name="ProductId" Visibility="Collapsed" />
                            <TextBox Name="ProductCategory" Visibility="Collapsed" />
                            <Button Name="ProductButton"   ToolTip="Выбрать" Click="ProductButton_Click"  Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0"  >
                                <Image Style="{DynamicResource SelectImage}" />
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Border Name="GeneralBlock" Grid.Row="3" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="152" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0"  Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Количество: *" Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="EditQty" Style="{DynamicResource FormField}" />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Тип упаковки: " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}" >
                        <controls:SelectBox  x:Name="PackingType"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False"  />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Доставка:  " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1"  Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="DeliveryType"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False"  />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Менеджер: *" Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="3" Grid.Column="1"  Style="{DynamicResource FormFieldContainer}" >
                        <controls:SelectBox  x:Name="ManagerName"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False"  />
                    </Border>

                    <Border Grid.Row="4" Grid.Column="0"  Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Комментарий:  " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2">
                        <TextBox Name="EditNote" Style="{DynamicResource FormField}" TextWrapping="Wrap" Height="48" MaxLength="511"/>
                    </Border>
                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>
