<UserControl x:Class="Client.Interfaces.Preproduction.Sample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid  Style="{DynamicResource FromGrid}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                <Button Name="SaveButton"   Content="Сохранить"  Style="{DynamicResource FButtonPrimary}" Click="SaveButton_Click"   />
                <Button Name="CancelButton" Content="Отмена"     Style="{DynamicResource FButtonCancel}" Click="CancelButton_Click"   />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
            </StackPanel>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Name="HeaderBlock" Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Name="CustomerLabel" Content="Покупатель: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="CustomerName" Style="{DynamicResource CustomFormField}" Autocomplete="True" Margin="0,0,0,3" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="InnerOrderCheckBox" Content="Внутренний заказчик"  Style="{DynamicResource CustomFormField}" Margin="20,0,0,0" VerticalContentAlignment="Center" Click="InnerOrder_Click" />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Дата:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="CreatedDate"  Style="{DynamicResource FormField}" IsReadOnly="True" />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Номер:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="Num" Style="{DynamicResource FormField}" MaxLength="15" />
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                <Grid Name="SampleRawBlock">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0"  Style="{DynamicResource FormLabelContainer}" >
                        <Label Content="Вид изделия: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1"  Style="{DynamicResource FormFieldContainer}" >
                        <controls:SelectBox  x:Name="ProductClass"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False" />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0"  Style="{DynamicResource FormLabelContainer}" >
                        <Label Content="FEFCO:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1"  Style="{DynamicResource FormFieldContainer}" >
                        <controls:SelectBox  x:Name="Fefco"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False" />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0"  Style="{DynamicResource FormLabelContainer}" >
                        <Label Content="Длина, мм: *" Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="SLength" Style="{DynamicResource FormField}" />
                            </Border>

                            <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Ширина, мм: *" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="SWidth" Style="{DynamicResource FormField}"  />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="3" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Высота, мм:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="4" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="SHeight" Style="{DynamicResource FormField}" Margin="0,0,3,3" />
                            </Border>
                        </Grid>
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Профиль: *" Style="{DynamicResource FormLabel}"  />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="Profile"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False" SelectedItemChanged="Profile_SelectedItemChanged" />
                            </Border>

                            <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Марка: *" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="Mark"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False" SelectedItemChanged="Mark_SelectedItemChanged"  />
                            </Border>

                            <Border Grid.Row="0" Grid.Column="3" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Цвет: *" Style="{DynamicResource FormLabel}"  />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="4" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="ColorOuter"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False" SelectedItemChanged="ColorOuter_SelectedItemChanged"  />
                            </Border>
                        </Grid>
                    </Border>

                    <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Картон:  " Style="{DynamicResource FormLabel}"  />
                    </Border>

                    <Border Grid.Row="4" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Cardboard"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False"  />
                    </Border>

                    <Border Grid.Row="4" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="AnyMarkCheckBox" Content="Без обязательной марки"  Style="{DynamicResource CustomFormField}" Margin="20,0,0,0" VerticalContentAlignment="Center" />
                    </Border>

                    <Border Grid.Row="5" Grid.Column="0" Name="PreformLabel" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Картон для образцов: *" Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="5" Grid.Column="1" Name="PreformBlock" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Name="SampleCardboard" ToolTip="Заявка" Style="{DynamicResource FormField}" Width="227" IsReadOnly="True"/>
                            <TextBox Name="SampleCardboardId" Visibility="Collapsed" />
                            <Button Name="SampleCardboardButton"   ToolTip="Выбрать" Click="SampleCardboardButton_Click"  Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0"  >
                                <Image Style="{DynamicResource SelectImage}" />
                            </Button>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="5" Grid.Column="2" Name="RawMissingBlock" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="RawMissingCheckBox" Content="Ожидание сырья"  Style="{DynamicResource CustomFormField}" Margin="20,0,0,0" VerticalContentAlignment="Center" />
                    </Border>

                    <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Примечание:  " Style="{DynamicResource FormLabel}"  />
                    </Border>

                    <Border Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2">
                        <TextBox Name="Note"  Style="{DynamicResource FormField}" MaxLength="62" MinHeight="50"  Margin="0,0,0,3" />
                    </Border>

                    <Border Grid.Row="7" Grid.Column="0"  Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Количество: *" Style="{DynamicResource FormLabel}"  />
                    </Border>

                    <Border Grid.Row="7" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Name="EditQty" Style="{DynamicResource FormField}" Width="114" />
                            <Label Content="/" Style="{DynamicResource FormLabel}" HorizontalAlignment="Left"  />
                            <TextBox Name="EditQtyLimit" Style="{DynamicResource FormField}" Width="114" IsReadOnly="True"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="7" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="ConfirmationReason" Text="Превышено максимальное количество" Style="{DynamicResource CustomFormField}" BorderThickness="0" Margin="20,0,0,0"/>
                    </Border>

                    <Border Grid.Row="8" Grid.Column="0" Name="CompleteDateLabel" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Дата изготовления:  " Style="{DynamicResource FormLabel}" Margin="10,0,7,3"  />
                    </Border>
                    <Border Grid.Row="8" Grid.Column="1" Name="CompleteDateBlock" Style="{DynamicResource FormFieldContainer}">
                        <Grid Style="{DynamicResource FormFieldDateHolder}">
                            <!--<TextBox Name="CompletedDate"  MaxLength="10"  Style="{DynamicResource FormFieldDate}" HorizontalAlignment="Right"  Width="250" TextChanged="CompletedDate_TextChanged" Margin="0,0,-5,0" IsReadOnly="True" />
                            <DatePicker Name="SelectedDateBtn" SelectedDate="{Binding Path=Text, Mode=OneWayToSource, ElementName=CompletedDate, Converter={StaticResource DateDate} }"  Style="{DynamicResource FormFieldDP}"  Margin="0,1,0,0">
                            </DatePicker>-->
                            <controls:DatePicker x:Name="CompletedDate" Style="{DynamicResource DateEditStyle}" TextChanged="CompletedDate_TextChanged">
                            </controls:DatePicker>
                        </Grid>
                    </Border>

                    <Border Grid.Row="8" Grid.Column="2" Name="PlanCompleteBlock" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="План на дату: " Style="{DynamicResource TopLabel}" Margin="20,0,0,0" />
                            <TextBox Name="PlanCompletedQty" Text="1/1"  Style="{DynamicResource CustomFormField}" BorderThickness="0" FontWeight="Bold" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="9" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Чертеж: " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="9" Grid.Column="1" Style="{DynamicResource FormFieldContainer}" >
                        <controls:SelectBox  x:Name="NeedDesign"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False"  />
                    </Border>
                    <Border Grid.Row="9" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="RevisionCheckBox" Content="В доработке"  Style="{DynamicResource CustomFormField}" Margin="20,0,0,0" VerticalContentAlignment="Center"/>
                    </Border>

                    <Border Grid.Row="10" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Тип упаковки: " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="10" Grid.Column="1" Style="{DynamicResource FormFieldContainer}" >
                        <controls:SelectBox  x:Name="PackingType"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False"  />
                    </Border>

                    <Border Grid.Row="11" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Склеивать: " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="11" Grid.Column="1" Style="{DynamicResource FormFieldContainer}" >
                        <controls:SelectBox  x:Name="GluingType"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False"  />
                    </Border>

                    <Border Grid.Row="12" Grid.Column="0"  Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Изготовил:  " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="12" Grid.Column="1" >
                        <TextBox Name="Technolog" Style="{DynamicResource FormField}" IsReadOnly="True" />
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Name="GeneralBlock" Grid.Row="5" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Доставка:  " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1"  Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="DeliveryType"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False"  />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Менеджер:  " Name="ResponsibleLabel" Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1"  Style="{DynamicResource FormFieldContainer}" >
                        <controls:SelectBox  x:Name="ManagerName"  Style="{DynamicResource CustomFormField}" Autocomplete="True" ListResizeable="False"  />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0"  Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Комментарий:  " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">
                        <TextBox Name="EditNote" Style="{DynamicResource FormField}" TextWrapping="Wrap" Height="48" MinHeight="189" MaxLength="511"/>
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0"  Style="{DynamicResource FormLabelContainer}">
                        <Label Content="При печати:  " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="HideMarkCheckBox" Content="Скрывать марку"  Style="{DynamicResource CustomFormField}"  VerticalContentAlignment="Center"/>
                    </Border>
                    <Border Grid.Row="3" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="HideNoteCheckBox" Content="Скрывать комментарий"  Style="{DynamicResource CustomFormField}"  VerticalContentAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
