<UserControl x:Class="Client.Interfaces.Preproduction.SampleAttachTechnologicalMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" Width="800" HorizontalAlignment="Left">
        <Grid Style="{DynamicResource FromGrid}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="10"></RowDefinition>
                <RowDefinition Height="240"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                <Button Name="SelectButton"   Content="Прикрепить"  Style="{DynamicResource FButtonPrimary}" Click="SelectButton_Click"   />
                <Button Name="CloseButton" Content="Закрыть"     Style="{DynamicResource FButtonCancel}" Click="CloseButton_Click"   />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <TextBlock  Name="FormStatus" Text="Не все поля заполнены верно" TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
            </StackPanel>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Grid Grid.Row="2" Grid.Column="0" Style="{DynamicResource FromGrid}" Width="300" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Артикул:  " Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="Article" Style="{DynamicResource CustomFormField}"  />
                </Border>

                <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Размеры:  " Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="ProductSize" Style="{DynamicResource CustomFormField}" />
                </Border>
            </Grid>

            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="200" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" Margin="0,5" >
                        <Button Name="SearchButton"   Content="Найти"  Width="84" Style="{DynamicResource Button}" Click="Search_Click"  />
                        <Button Name="ShowButton"   Content="Посмотреть" Width="84"  Style="{DynamicResource Button}" Click="OpenFile_Click"  />
                        <Button Name="SaveMapButton"   Content="Сохранить" Width="84"  Style="{DynamicResource Button}" Click="SaveMapFile_Click"  />
                    </StackPanel>

                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Style="{DynamicResource DataGridContainerHolder}" Height="200" >
                        <controls:GridBox x:Name="TechnologicalMapGrid" />
                    </Border>
                </Grid>
            </Border>
                    
        </Grid>
    </Border>
</UserControl>
