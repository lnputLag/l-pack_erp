<UserControl x:Class="Client.Interfaces.Preproduction.SampleLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="800"
             Style="{DynamicResource UserControlCanvas}"
             HorizontalAlignment="Stretch" VerticalAlignment="Top">

    <UserControl.Resources>
        <Style x:Key="FormContainerHolder" TargetType="{x:Type Border}">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style x:Key="Block" TargetType="{x:Type Border}">
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style x:Key="CellStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="FontSize" Value="24" />
        </Style>

        <Style x:Key="MainRowStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="FontSize" Value="32" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

    </UserControl.Resources>

    <Border  Style="{DynamicResource FormContainerHolder}" Width="620">
        <Grid Style="{DynamicResource FormContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Block}">
                <TextBlock Name="SampleCompletedDt" Style="{StaticResource MainRowStyle}" >Дата и ИД образца</TextBlock>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Block}" >
                <StackPanel Orientation="Vertical">
                    <TextBlock Name="SampleSize" Style="{StaticResource CellStyle}">100x100x100</TextBlock>
                    <TextBlock Name="SampleType" Style="{StaticResource CellStyle}">ящик</TextBlock>
                    <TextBlock Name="SampleRaw" Style="{StaticResource CellStyle}">С24 Бурый</TextBlock>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Block}" >
                <TextBlock Name="SampleQty" Style="{StaticResource CellStyle}">5 шт</TextBlock>
            </Border>

            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                <TextBlock Name="SampleNote" Style="{StaticResource CellStyle}" TextAlignment="Center" TextWrapping="Wrap">Примечание</TextBlock>
            </Border>
        </Grid>
    </Border>
</UserControl>
