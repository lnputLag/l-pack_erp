<UserControl x:Class="Client.Interfaces.Preproduction.SampleCardboardPreformCreate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="200"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Margin="0,3,0,0">
            <Label Content="Длина:" Style="{DynamicResource FormLabel}"  />
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1">
            <TextBox Name="PreformLength" Style="{DynamicResource FormField}" Margin="0,3,0,0"  />
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0" Margin="0,3,0,0">
            <Label Content="Ширина:" Style="{DynamicResource FormLabel}"  />
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <TextBox Name="PreformWidth" Style="{DynamicResource FormField}" Margin="0,3,0,0"  />
        </Grid>

        <Grid Grid.Row="2" Grid.ColumnSpan="2" Style="{DynamicResource GridControlPanel}" HorizontalAlignment="Right">
            <StackPanel Style="{DynamicResource FormHeaderButtonsPanel}" >
                <Button Name="SaveButton"   Content="ОК"  Style="{DynamicResource FButtonPrimary}" Click="SaveButton_Click" VerticalAlignment="Top"    />
                <Button Name="CancelButton"  Content="Отмена" Style="{DynamicResource FButtonCancel}" Click="CancelButton_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
