<controls:ControlBase x:Class="Client.Interfaces.Preproduction.MoldedContainerSticker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Name="FormToolbar">
                        <Button Content="Сохранить" Name="SaveButton"   Tag="Save"  Click="ButtonOnClick" Style="{DynamicResource FButtonPrimary}" ToolTip="Сохранить/пересохранить и закрыть"/>
                        <Button Content="Применить" Name="ApplyButton"   Tag="Apply"  Click="ButtonOnClick" Style="{DynamicResource Button}" ToolTip="Сохранить/пересохранить без закрытия"/>
                        <Button Content="Закрыть"    Name="CloseButton" Tag="Close" Click="ButtonOnClick" Style="{DynamicResource Button}" ToolTip="Закрывает окно без сохранения"/>

                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right" >
                        <Button Name="HelpButton" Width="24" MinWidth="24" Content="?" Tag="Help" Style="{DynamicResource Button}" ToolTip="Вызов справки" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"/>

        <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}" Width="800" HorizontalAlignment="Left">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Название: *" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="StickerName"  Style="{DynamicResource FormField}" MaxLength="128"  />
                </Border>


                <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Файл дизайна: *" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                    <StackPanel Orientation="Horizontal">
                        <Button Name="DesignFileSelectButton" Tag="DegignSelect" Click="ButtonOnClick" ToolTip="Выбрать" Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0"  >
                            <Image Style="{DynamicResource SelectImage}" />
                        </Button>
                        <Button Name="DesignFileShowButton" Tag="DesignShow" Click="ButtonOnClick" ToolTip="Посмотреть"  Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0"  >
                            <Image Style="{DynamicResource ViewImage}" />
                        </Button>
                        <Button Name="DesignFileClearButton" Tag="DesignClear" Click="ButtonOnClick" ToolTip="Очистить" Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0" Visibility="Collapsed" >
                            <Image Style="{DynamicResource CloseImage}" />
                        </Button>
                        <TextBox Name="DesignFileName"  Style="{DynamicResource FormField}" Visibility="Collapsed"  />
                    </StackPanel>
                </Border>

                
                <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Изображение: *" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                    <StackPanel Orientation="Horizontal">
                        <Button Name="ImageFileSelectButton" Tag="ImageSelect" Click="ButtonOnClick" ToolTip="Выбрать"  Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0"  >
                            <Image Style="{DynamicResource SelectImage}" />
                        </Button>
                        <Button Name="ImageFileShowButton" Tag="ImageShow" Click="ButtonOnClick" ToolTip="Посмотреть" Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0"  >
                            <Image Style="{DynamicResource ViewImage}" />
                        </Button>
                        <Button Name="ImageFileClearButton" Tag="ImageClear" Click="ButtonOnClick" ToolTip="Очистить" Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0" Visibility="Collapsed" >
                            <Image Style="{DynamicResource CloseImage}" />
                        </Button>
                        <TextBox Name="ImageFileName"  Style="{DynamicResource FormField}" Visibility="Collapsed"  />
                    </StackPanel>
                </Border>

                <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="В архиве:  " Name="ArchivedLabel" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                    <CheckBox Name="ArchivedCheckBox" Content=""  Style="{DynamicResource CustomFormField}" VerticalContentAlignment="Center"/>
                </Border>

                <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="GUID:  " Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Row="4" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="Guid"  Style="{DynamicResource FormField}" MaxLength="36"  />
                </Border>
                
                <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}" HorizontalAlignment="Left">
                    <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Name="GridToolbar" VerticalAlignment="Bottom">
                        <Label Content="Техкарты:  " Style="{DynamicResource TopLabel}" Margin="10 0 0 0"/>
                        <Button Content="Добавить" Name="AddButton" Style="{DynamicResource Button}" ToolTip="Привязать техкарту к этикетке"/>
                        <Button Content="Удалить" Name="DeleteButton" Margin="0" Style="{DynamicResource Button}" ToolTip="Отвязать техкарту от этикетки"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource DataGridMainHolder}">
                    <controls:GridBox4 x:Name="TechCardsGrid" />
                </Border>

            
            </Grid>
        </Border>
    </Grid>
</controls:ControlBase>
