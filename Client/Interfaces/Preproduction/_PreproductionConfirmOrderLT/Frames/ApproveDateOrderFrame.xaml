<controls:ControlBase
    x:Class="Client.Interfaces.Preproduction.PreproductionConfirmOrderLt.Frames.ApproveDateOrderFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="clr-namespace:Client.Interfaces.Main"
    mc:Ignorable="d"
    d:DesignHeight="120" d:DesignWidth="270"
    Style="{DynamicResource UserControlCanvas}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}">
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Grid.Column="0" Margin="0 10 0 0" Style="{DynamicResource DataGridContainerHolder}"
                    HorizontalAlignment="Left">
                <Grid Style="{DynamicResource DataGridContainer}" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" Visibility="Collapsed">
                        <Label Content="Дата отгрузки: *" Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}" Visibility="Collapsed">
                        <Grid>
                            <controls:DatePicker x:Name="OldArrivalDate" IsReadOnly="True" MaxLength="10"   Style="{DynamicResource DateEditStyle}" Width="125" />
                        </Grid>
                    </Border>
                    
                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Новая дата отгрузки: *" Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <Grid>
                            <controls:DatePicker x:Name="NewArrivalDate"  MaxLength="10"   Style="{DynamicResource DateEditStyle}" Width="125" />
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            
            <Grid Grid.Row="1" Grid.Column="0" Height="50" VerticalAlignment="Top" Panel.ZIndex="10">
                <controls:SplashControl x:Name="SplashControl"/>
            </Grid>
            
            <Grid Grid.Row="2" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Name="Toolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right"  >
                            <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button Name="SaveButton"  Content="ОК"  Style="{DynamicResource FButtonPrimary}"    />
                            <Button Name="CancelButton" Content="Отмена"     Style="{DynamicResource FButtonCancel}"    />
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>

</controls:ControlBase>