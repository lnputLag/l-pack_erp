<controls:ControlBase x:Class="Client.Interfaces.Preproduction.SampleConfirmationList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11.5*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                        <Button Name="RefreshButton" Tag="Refresh"  Content="Обновить"  Style="{DynamicResource Button}" />

                        <Button Name="CreateButton" Content="Добавить" Tag="Create" Style="{DynamicResource Button}">
                            <Button.ContextMenu>
                                <ContextMenu Name="AddMenu">
                                    <MenuItem Header="На плоттер" Name="PlotterItem" Style="{DynamicResource SingleMenu}" Click="AddButton_Click"/>
                                    <MenuItem Header="С линии" Name="ProductItem" Style="{DynamicResource SingleMenu}" Click="NewProduct_Click"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>

                        <Button Name="EditButton" Tag="Edit"    Content="Изменить"  Style="{DynamicResource Button}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="AcceptButton" Tag="Accept"   Content="Подтвердить"  Style="{DynamicResource Button}" />

                        <Button Name="RejectButton" Tag="Reject"    Content="Отклонить"  Style="{DynamicResource Button}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="ShowSameButton"    Content="Похожие"  Style="{DynamicResource Button}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="SearchText" Text=""  />

                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                        <Label Content="Менеджер:"  Style="{DynamicResource TopLabel}" />
                        <controls:SelectBox x:Name="ManagerName" Style="{DynamicResource CustomFormField}" Width="140" ListBoxMinHeight="220" Autocomplete="False" SelectedItemChanged="ManagerName_SelectedItemChanged" />
                        <Button Name="SelectManagerButton"   ToolTip="Выбрать" Click="SelectManagerButton_Click"  Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0"  >
                            <Image Style="{DynamicResource SelectImage}" />
                        </Button>

                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right" >
                        <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1"  Grid.Column="0">
            <Border Style="{DynamicResource DataGridMainHolder}">
                <controls:GridBox4 x:Name="Grid" />
            </Border>
        </Grid>
    </Grid>
</controls:ControlBase>
