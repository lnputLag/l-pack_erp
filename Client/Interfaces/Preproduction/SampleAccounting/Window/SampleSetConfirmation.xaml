<UserControl x:Class="Client.Interfaces.Preproduction.SampleSetConfirmation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             Height="150" Width="440"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
            <Label Content="Обоснование: *" Style="{DynamicResource FormLabel}"  />
        </Border>

        <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
            <controls:SelectBox  x:Name="Reason"  Style="{DynamicResource CustomFormField}" Margin="0,0,5,0"  />
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
            <Label Content="Примечание:  " Style="{DynamicResource FormLabel}"  />
        </Border>

        <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
            <TextBox Name="Note" Height="70" TextWrapping="Wrap" HorizontalAlignment="Stretch" MaxLength="250"  Margin="0,0,5,0" >

            </TextBox>
        </Border>

        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>
        
        <Grid Grid.Row="3" Grid.ColumnSpan="2" Style="{DynamicResource GridControlPanel}" HorizontalAlignment="Right">
            <StackPanel Style="{DynamicResource FormHeaderButtonsPanel}" >
                <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                <Button Name="SaveButton"   Content="ОК"  Style="{DynamicResource FButtonPrimary}" Click="SaveButton_Click" />
                <Button Name="CancelButton"  Content="Отмена" Style="{DynamicResource FButtonCancel}" Click="CancelButton_Click" />
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>
