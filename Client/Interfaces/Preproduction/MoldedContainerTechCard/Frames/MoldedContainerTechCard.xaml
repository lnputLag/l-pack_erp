<controls:ControlBase x:Class="Client.Interfaces.Preproduction.MoldedContainerTechCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1400"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="460"></RowDefinition>
                <RowDefinition Height="10"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Name="FormToolbar">
                            <Button Content="Сохранить" Name="SaveButton"   Tag="Save"   Style="{DynamicResource FButtonPrimary}"  ToolTip="Сохранить/пересохранить и закрыть"/>
                            <Button Content="Применить" Name="ApplyButton"  Tag="Apply"  Style="{DynamicResource Button}" ToolTip="Сохранить/пересохранить без закрытия"/>
                            <Button Content="Отмена"    Name="CancelButton" Tag="Close"  Style="{DynamicResource Button}" ToolTip="Закрывает окно без сохранения"/>

                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" ></Border>
                            <Button Content="В архив"    Name="ArchiveButton" Tag="Archive"  Style="{DynamicResource Button}" ToolTip="Отправить в архив"/>

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right" >
                            <Button Name="HelpButton" Width="24" MinWidth="24" Content="?" Tag="Help" Style="{DynamicResource Button}" ToolTip="Вызов справки" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"/>

            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="270"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="170"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Column="0">
                        <Grid Style="{DynamicResource FromGrid}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Параметры изделия -->
                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Изделие" Style="{DynamicResource FormLabel}" HorizontalAlignment="Center" FontWeight="Bold" />
                            </Border>

                            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Покупатель:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="CntnBuyer" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" ListBoxMinWidth="250" SelectedItemChanged="CntnBuyer_SelectedItemChanged" />
                            </Border>

                            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Потребитель:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="CntnCustomerName" Style="{DynamicResource CustomFormField}" Width="200" IsReadOnly="True" />
                                    <TextBox Name="CntnCustomerId" Visibility="Collapsed" />
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Тип продукции: *" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="ProductType" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch"  ListBoxMinWidth="250" SelectedItemChanged="ProductType_SelectedItemChanged" />
                            </Border>

                            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Цвет продукции: *" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="4" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="ProductColor" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" />
                            </Border>

                            <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <TextBlock Name="SkuLabel" Text="Артикул:  " MouseDown="SkuLabel_MouseDown" HorizontalAlignment="Right" Margin="0,0,8,0" />

                            </Border>
                            <Border Grid.Row="5" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="Article"  Style="{DynamicResource FormField}" MaxLength="11" IsReadOnly="True" />
                            </Border>

                            <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Наименование: *" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="6" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="ProductName"  Style="{DynamicResource FormField}" MaxLength="64"  />
                            </Border>

                            <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Схема пр-ва:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="7" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="ProductionScheme" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" />
                            </Border>

                            <Border Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource FormVerticalPanelSpacer}"/>

                            <Border Grid.Row="9" Grid.ColumnSpan="2" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Примечание" Style="{DynamicResource FormLabel}" HorizontalAlignment="Center" FontWeight="Bold" />
                            </Border>

                            <Border Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="Note"  Style="{DynamicResource FormField}" Height="72" MaxLength="256" Margin="5,0,0,0" />
                            </Border>

                            <Border Grid.Column="0" Grid.Row="11" Grid.ColumnSpan="2" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Комментарий инженера:" Style="{DynamicResource FormLabel}" HorizontalAlignment="Center" FontWeight="Bold"/>
                            </Border>

                            <Border Grid.Column="0" Grid.Row="12" Grid.ColumnSpan="2" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="EngeneerNoteTextBox" Height="60" HorizontalAlignment="Stretch" TextWrapping="Wrap" Style="{DynamicResource FormField}"/>
                            </Border>
                            
                            <Border Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource FormVerticalPanelSpacer}"/>

                        </Grid>
                        
                    </Border>


                    

                    <Border Grid.Column="1" Grid.Row="0" Width="1" BorderBrush="#ffcccccc" Padding="0,0,0,0" Margin="5,0,5,0" BorderThickness="1,0,1,0"/>

                    <!-- Печать -->
                    <Border Grid.Column="2">
                        <Grid Style="{DynamicResource FromGrid}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"  Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Печать и этикетка" Style="{DynamicResource FormLabel}" HorizontalAlignment="Center" FontWeight="Bold" />
                            </Border>

                            <Border Grid.Row="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Этикетка:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <CheckBox Name="StickerFlag" Style="{DynamicResource FormCheckBox}" IsEnabled="False" />
                                    </Border>

                                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox Name="StickerName" Style="{DynamicResource FormField}" Width="304" IsReadOnly="True" />
                                            <TextBox Name="StickerId" Visibility="Collapsed" />
                                            <Button Name="StickerSelectButton" Tag="StickerSelect"  ToolTip="Выбрать" Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0" IsEnabled="False" >
                                                <Image Style="{DynamicResource SelectImage}" />
                                            </Button>
                                            <Button Name="StickerClearButton"  Tag="StickerClear"  ToolTip="Очистить" Style="{DynamicResource ButtonGlyph}"  Margin="-1,0,0,0" IsEnabled="False" >
                                                <Image Style="{DynamicResource CloseImage}" />
                                            </Button>
                                        </StackPanel>

                                    </Border>

                                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Печать:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <CheckBox Name="PrintingFlag" Style="{DynamicResource FormCheckBox}" IsEnabled="False" />
                                    </Border>
                                </Grid>
                                
                            </Border>

                            <Border Grid.Row="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Name="PrintToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  Margin="0,2,0,6" >
                                        <Button Name="CreateButton"   Content="Добавить" Tag="CreateColor"  Style="{DynamicResource Button}" />
                                        <Button Name="EditButton"     Content="Изменить" Tag="EditColor"    Style="{DynamicResource Button}" />
                                        <Button Name="DeleteButton"   Content="Удалить"  Tag="DeleteColor"  Style="{DynamicResource Button}" />
                                        <Button Name="PrintingAreaButton"   Content="Площади"  Tag="PrintingArea"  Style="{DynamicResource Button}" />
                                        
                                        <Button Name="UpButton"  Tag="ColorUp" Style="{DynamicResource ButtonGlyph}" >
                                            <Image Style="{DynamicResource UpImage}"  />
                                        </Button>
                                        <Button Name="DownButton"  Tag="ColorDown"  Style="{DynamicResource ButtonGlyph}"  >
                                            <Image Style="{DynamicResource DownImage}"  />
                                        </Button>
                                    </StackPanel>


                                    <Border Grid.Row="3"  Name="PrintingBlock"  Style="{DynamicResource DataGridMainHolder}" >
                                        <controls:GridBox4 x:Name="PrintGrid" />
                                    </Border>
                                </Grid>
                            </Border>

                        </Grid>
                    </Border>

                    <Border Grid.Column="3" Grid.Row="0" Width="1" BorderBrush="#ffcccccc" Padding="0,0,0,0" Margin="5,0,5,0" BorderThickness="1,0,1,0"/>

                    <!-- Укладка и упаковка -->
                    <Border Grid.Column="4" Name="PackagingBlock">
                        <Grid Style="{DynamicResource FromGrid}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"  Grid.ColumnSpan="2" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Укладка" Style="{DynamicResource FormLabel}" HorizontalAlignment="Center" FontWeight="Bold" />
                            </Border>

                            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Поддон:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="Pallet" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" SelectedItemChanged="Pallet_SelectedItemChanged" />
                            </Border>

                            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Схема укладки:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="LayingScheme" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" SelectedItemChanged="LayingScheme_SelectedItemChanged"/>
                            </Border>

                            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Кол-во в пачке:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="PerStackQty"  Style="{DynamicResource FormField}" TextChanged="QtyTextChanged"   />
                            </Border>

                            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Пачек в ряду:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="4" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="StackInRowQty"  Style="{DynamicResource FormField}" TextChanged="QtyTextChanged"   />
                            </Border>

                            <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Рядов на паллете:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="5" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="RowInPalletQty"  Style="{DynamicResource FormField}" TextChanged="QtyTextChanged"   />
                            </Border>

                            <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Кол-во на паллете:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="6" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="PerPalletQty"  Style="{DynamicResource FormField}" IsReadOnly="True"  />
                            </Border>

                            <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource FormVerticalPanelSpacer}"/>

                            <Border Grid.Row="8"  Grid.ColumnSpan="2" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Упаковка" Style="{DynamicResource FormLabel}" HorizontalAlignment="Center" FontWeight="Bold" />
                            </Border>


                            <Border Grid.Row="9" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Упаковка паллеты:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="9" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <CheckBox Name="PackagingFlag" Style="{DynamicResource FormCheckBox}" Click="PackagingFlag_Click" />
                            </Border>

                            <Border Grid.Row="10" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Перестил:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="10" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="SheetLayerType" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch"/>
                            </Border>

                            <Border Grid.Row="11" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Упаковка в пакет:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="11" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <CheckBox Name="BagFlag" Style="{DynamicResource FormCheckBox}" />
                            </Border>

                            <Border Grid.Row="12" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Уголки:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="12" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <CheckBox Name="CornersFlag" Style="{DynamicResource FormCheckBox}" />
                            </Border>

                            <Border Grid.Row="13" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Обмотать пленкой:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="13" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <CheckBox Name="WrapStretchFlag" Style="{DynamicResource FormCheckBox}" />
                            </Border>

                            <Border Grid.Row="14" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Длина паллета:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="14" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="PalletLength"  Style="{DynamicResource FormField}"   />
                            </Border>

                            <Border Grid.Row="15" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Ширина паллета:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="15" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="PalletWidth"  Style="{DynamicResource FormField}"   />
                            </Border>

                            <Border Grid.Row="16" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Высота паллета:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="16" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="PalletHeight"  Style="{DynamicResource FormField}"   />
                            </Border>


                        </Grid>
                    </Border>

                    <Border Grid.Column="5" Grid.Row="0" Width="1" BorderBrush="#ffcccccc" Padding="0,0,0,0" Margin="5,0,5,0" BorderThickness="1,0,1,0"/>
                    
                    <!-- Работа с Excel -->
                    <Border Grid.Column="6" Name="ExcelDocementBlock">
                        <Grid Style="{DynamicResource FromGrid}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Border Grid.Column="0" Grid.Row="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Excel :" Style="{DynamicResource FormLabel}" HorizontalAlignment="Center" FontWeight="Bold"/>
                            </Border>

                            <Border Grid.Column="0" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                                <Button Content="Создать Excel" Name="CreateExcelButton" Tag="CreateExcel"  HorizontalAlignment="Stretch" Style="{DynamicResource Button}" />
                            </Border>

                            <Border Grid.Column="0" Grid.Row="2" Style="{DynamicResource FormFieldContainer}">
                                <Button Content="Открыть Excel" Name="OpenExcelButton" Tag="OpenExcel"  HorizontalAlignment="Stretch" Style="{DynamicResource Button}" />
                            </Border>

                            <Border Grid.Column="0" Grid.Row="3" Style="{DynamicResource FormFieldContainer}">
                                <Button Content="Перенести данные в Excel" Name="UpdateExcelButton" HorizontalAlignment="Stretch" Style="{DynamicResource Button}" />
                            </Border>

                            <Border Grid.Column="0" Grid.Row="4" Style="{DynamicResource FormFieldContainer}">
                                <Button Content="Пересоздать Excel" Name="RecreateExcelButton" HorizontalAlignment="Stretch" Style="{DynamicResource Button}" />
                            </Border>

                        </Grid>
                    </Border>

                    <Border Grid.Column="7" Grid.Row="0" Width="1" BorderBrush="#ffcccccc" Padding="0,0,0,0" Margin="5,0,5,0" BorderThickness="1,0,1,0"/>

                </Grid>
            </Border>

            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="560"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource FormVerticalPanelSpacer}"/>
                    
                    <StackPanel Grid.Row="1" Name="AssortmentToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  Margin="0,2,0,6" >
                        <Button Name="AcceptButton"   Content="Создать товар" Tag="Accept"  Style="{DynamicResource Button}" />
                    </StackPanel>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <TextBlock Text="Товар:  " MouseDown="SkuLabel_MouseDown" HorizontalAlignment="Right" Margin="0,0,8,0" />

                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="GoodsName"  Style="{DynamicResource FormField}" IsReadOnly="True" />
                    </Border>

                </Grid>
            </Border>
        </Grid>
    </Border>
</controls:ControlBase>
