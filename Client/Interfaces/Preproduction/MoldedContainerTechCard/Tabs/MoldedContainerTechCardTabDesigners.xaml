<controls:ControlBase x:Class="Client.Interfaces.Preproduction.TechnologicalMapTabDesigners"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="11.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >



                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                <Label Content="Покупатель:"  Style="{DynamicResource TopLabel}" />
                <controls:SelectBox x:Name="BuyerName" Style="{DynamicResource CustomFormField}" Width="200" ListBoxMinHeight="280" ListBoxMinWidth="300" Autocomplete="True" CompareMode="Contains" SelectedItemChanged="UpdateGridItems" />

                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                <Label Content="Статус:"  Style="{DynamicResource TopLabel}" />
                <controls:SelectBox x:Name="TkStatus" Style="{DynamicResource CustomFormField}" Width="120" ListBoxMinHeight="150" ListBoxMinWidth="300" Autocomplete="True" CompareMode="Contains" SelectedItemChanged="UpdateGridItems" />

                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                <Label Content="Дизайнер:"  Style="{DynamicResource TopLabel}" />
                <controls:SelectBox x:Name="DesignerName" Style="{DynamicResource CustomFormField}" Width="200" ListBoxMinHeight="150" ListBoxMinWidth="300" Autocomplete="True" CompareMode="Contains" SelectedItemChanged="UpdateGridItems" />



                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                <Button Name="ShowButton"     Content="Показать"    Style="{DynamicResource Button}" />

            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}"   />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0" Margin="0 0 0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="217*"/>
                <ColumnDefinition Width="540*"/>
                <ColumnDefinition Width="443*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Style="{DynamicResource FormHeaderButtonsPanel}" Grid.ColumnSpan="2" >


                <Button Name="PinButton" MinWidth="80" Content="Закрепить за собой"  Style="{DynamicResource Button}"   />
                <Button Name="UnpinButton" MinWidth="80" Content="Открепить от себя"  Style="{DynamicResource Button}"   />
                <Button Name="ConfirmDesignButton" MinWidth="80" Content="Подтвердить"  Style="{DynamicResource Button}"   />
                <Border Style="{DynamicResource FormButtonsPanelButtonBigSpacer}"></Border>

                <Button Name="ShowFileTkButton"  Content="Показать ТК"       Style="{DynamicResource Button}" />
                <Button Name="PrintButton"      Content="Печать"     Style="{DynamicResource Button}" />
                <Border Style="{DynamicResource FormButtonsPanelButtonBigSpacer}"></Border>
                
                <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="120" TextWrapping="NoWrap" Name="GridSearch" Text=""  />

                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                <CheckBox Name="ShowArchivedCheckBox" Content="Показать архивные"  Style="{DynamicResource CheckBoxTopPanel}" Click="ShowArchivedCheckBox_Click"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2"  Grid.Column="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="18*"/>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="1159*"/>
            </Grid.ColumnDefinitions>
            <Border Style="{DynamicResource DataGridMainHolder}" Grid.ColumnSpan="3" >
                <controls:GridBox4 x:Name="Grid" />
            </Border>
        </Grid>
    </Grid>
</controls:ControlBase>
