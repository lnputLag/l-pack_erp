<controls:ControlBase x:Class="Client.Interfaces.Preproduction.Rig.CuttingStampSetStamp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction.Rig"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             Height="450" Width="1000">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" d:Background="White">
        <Grid Style="{DynamicResource FromGrid}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="11*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Name="StampToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                    <Label Content="Место хранения:"  Style="{DynamicResource TopLabel}"/>
                    <controls:SelectBox x:Name="MachineSelectBox" Style="{DynamicResource CustomFormField}" ListBoxMinWidth="105" ListBoxMinHeight="220" Width="105" Autocomplete="False" SelectedItemChanged="MachineSelectBox_SelectedItemChanged"  />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    <Button Name="RefreshButton"    Content="Показать" Tag="Refresh" Style="{DynamicResource Button}"  />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                    <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                    <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="GridSearch" Text=""  />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                    <CheckBox Name="CreateNewStampCheckBox" Content="Создать новую штанцформу" Style="{DynamicResource FormCheckBox}"/>
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanelR}" >
                    <Button Name="HelpButton" ToolTip="Документация" Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}"  />
                </StackPanel>
            </Grid>

            <Border Grid.Row="1"  Grid.Column="0" Style="{DynamicResource DataGridMainHolder}">
                <controls:GridBox4 x:Name="StampGrid" />
            </Border>

            <Grid Grid.Row="2" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <StackPanel Name="FormToolbar" Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right">
                    <Button Name="SaveButton" Content="Сохранить" Style="{DynamicResource FButtonPrimary}" />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                    <Button Name="CancelButton" Content="Отмена" Style="{DynamicResource Button}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</controls:ControlBase>
