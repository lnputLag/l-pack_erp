<controls:ControlBase x:Class="Client.Interfaces.Preproduction.Rig.IncomePositionFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction.Rig"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" Width="800" HorizontalAlignment="Left">
        <Grid Style="{DynamicResource FromGrid}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">

                <Button Name="SaveButton" Content="Сохранить" Style="{DynamicResource FButtonPrimary}"/>
                <Button Name="AddButton" Content="Добавить" Style="{DynamicResource FButtonPrimary}"/>
                <Button Name="CancelButton" Content="Закрыть" Style="{DynamicResource FButtonCancel}" />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <TextBlock Name="FormStatus" TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch"/>
            </StackPanel>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Grid.Row="2" Style="{DynamicResource DataGridContainerHolder}" Margin="0, 10, 0, 10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Style="{DynamicResource GridControlPanel}">
                        <Border>
                            <StackPanel HorizontalAlignment="Stretch" Style="{DynamicResource FormHeaderButtonsPanel}">
                                <Label Name="PriceLabel" Content="Цена, руб: " Style="{DynamicResource TopLabel}"/>
                                <TextBox Name="PriceBox" Style="{DynamicResource FormField}" Width="100"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Grid.Row="1" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

                    <Grid Grid.Row="2" Style="{DynamicResource GridControlPanel}">
                        <Border>
                            <StackPanel HorizontalAlignment="Stretch" Style="{DynamicResource FormHeaderButtonsPanel}">
                                <Button Name="UpdateMainGrid" Content="Обновить" Style="{DynamicResource Button}" />
                                <Border Style="{DynamicResource FormButtonsPanelSpacer}" />
                                <Label Name="FilterNameLabel" Content="Поиск: " Style="{DynamicResource TopLabel}"/>
                                <TextBox Name="FilterNameBox" Style="{DynamicResource FormField}" Width="150"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Grid.Row="3" Style="{DynamicResource DataGridMainHolder}">
                        <controls:GridBox4 x:Name="MainGridBox" />
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</controls:ControlBase>
