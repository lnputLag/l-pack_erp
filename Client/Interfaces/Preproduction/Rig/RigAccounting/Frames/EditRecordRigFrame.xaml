<controls:ControlBase x:Class="Client.Interfaces.Preproduction.Rig.EditRecordRigFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction.Rig"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Style="{DynamicResource UserControlCanvas}">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}">
        <Grid Style="{DynamicResource FromGrid}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="800">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">

                <Button Name="SaveButton" Content="Сохранить" Style="{DynamicResource FButtonPrimary}"/>
                <Button Name="CancelButton" Content="Отмена" Style="{DynamicResource FButtonCancel}"/>
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <TextBlock Name="FormStatus" TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch"/>
            </StackPanel>

            <Border Grid.Row="1" Name="HeaderBlock" Style="{DynamicResource DataGridContainerHolder}" Margin="0, 10, 0, 0" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> 
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Name="NameRigLabel" Content="Наименование: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormLabelContainer}">
                        <TextBox Name="NameRigBox" MaxLength="55" Style="{DynamicResource FormField}" />
                    </Border>

					<Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
						<Label Name="DetailsLabel" Content="Описание:  " Style="{DynamicResource FormLabel}" />
					</Border>
					<Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormLabelContainer}">
						<TextBox Name="DetailsBox" MaxLength="50" Style="{DynamicResource FormField}" />
					</Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Name="NoteLabel" Content="Примечание:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormLabelContainer}">
                        <TextBox Name="NoteBox" Style="{DynamicResource FormField}" />
                    </Border>
                </Grid>
            </Border>


        </Grid>
    </Border>
</controls:ControlBase>
