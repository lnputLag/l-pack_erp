<UserControl x:Class="Client.Interfaces.Preproduction.Rig.RigMonitorKsh.Elements.RigGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction.Rig.RigMonitorKsh.Elements"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="545"
             Height="300">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Margin="10">
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" BorderThickness="0,0,0,2" BorderBrush="Black" VerticalAlignment="Bottom">
                <TextBox x:Name="MachineNameTextBox" FontWeight="Bold" Text="Em 175 - 1" Style="{DynamicResource PilloryGridToolBarTextBox}" FontSize="10" />
            </Border>

            <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="2,2,0,0" />

            <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="2,0,0,2" />

            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" HorizontalAlignment="Left">
                    <TextBox FontWeight="Bold" Text="Клише" Style="{DynamicResource PilloryGridToolBarTextBox}" FontSize="12"/>
                </Grid>

                <Grid Grid.Row="1" Style="{DynamicResource DataGridContainer}">
                    <controls:GridBox4 x:Name="ClicheGrid"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="2" Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" HorizontalAlignment="Left">
                    <TextBox FontWeight="Bold" Text="Штанцформа" Style="{DynamicResource PilloryGridToolBarTextBox}" FontSize="12"/>
                </Grid>

                <Grid Grid.Row="1" Style="{DynamicResource DataGridContainer}">
                    <controls:GridBox4 x:Name="ShtanzGrid"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
