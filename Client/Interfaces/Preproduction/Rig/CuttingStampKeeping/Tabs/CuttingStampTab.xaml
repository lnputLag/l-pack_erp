<controls:ControlBase x:Class="Client.Interfaces.Preproduction.Rig.CuttingStampTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction.Rig"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="200"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="StampToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left" >
                        <Label Content="Место хранения:"  Style="{DynamicResource TopLabel}"/>
                        <controls:SelectBox x:Name="MachineSelectBox" Style="{DynamicResource CustomFormField}" ListBoxMinWidth="105" ListBoxMinHeight="220" Width="105" Autocomplete="False" SelectedItemChanged="MachineSelectBox_SelectedItemChanged"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="RefreshButton"    Content="Показать" Tag="Refresh" Style="{DynamicResource Button}"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                        <Button Name="EditButton"       Content="Изменить" Tag="Edit"    Style="{DynamicResource Button}"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="GridSearch" Text=""  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                        <Label Content="Статус:"  Style="{DynamicResource TopLabel}"/>
                        <controls:SelectBox x:Name="Status" Style="{DynamicResource CustomFormField}" ListBoxMinWidth="250" ListBoxMinHeight="350" Width="145" Autocomplete="False" SelectedItemChanged="Status_SelectedItemChanged"  />
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>

                        <CheckBox Name="DisposeCheckBox" Content="На утиль/передачу"  Style="{DynamicResource CheckBoxTopPanel}" Click="DisposeCheckBox_Click"/>
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                        
                        <Button Name="ExportToExcelButton"  Content="В Excel" Style="{DynamicResource Button}" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right" >
                        <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?" Tag="Help" Style="{DynamicResource Button}" Margin="0" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="1"  Grid.Column="0" Style="{DynamicResource DataGridMainHolder}">
            <controls:GridBox4 x:Name="StampGrid" />
        </Border>

        <Border Grid.Row="2"  Grid.Column="0" Style="{DynamicResource DataGridMainHolder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                    <StackPanel Name="StampItemToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left" >
                        <Button Name="EditItemButton"       Content="Изменить" Tag="EditItem"    Style="{DynamicResource Button}"  />
                    </StackPanel>
                </Grid>
                <Border Grid.Row="1"  Grid.Column="0" Style="{DynamicResource DataGridMainHolder}">
                    <controls:GridBox4 x:Name="StampItemGrid" />
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="3"  Grid.Column="0" Style="{DynamicResource DataGridMainHolder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                    <StackPanel Name="ProductToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left" >
                        <Button Name="TechCardButton"    Content="Техкарта"   Tag="TechCard" Style="{DynamicResource Button}"   />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <CheckBox Name="ShowArchiveCheckBox" Content="Архивные"  Style="{DynamicResource CheckBoxTopPanel}" Click="ShowArchiveCheckBox_Click" ToolTip="Показать архивные техкарты"/>
                    </StackPanel>
                </Grid>
                <Border Grid.Row="1"  Grid.Column="0" Style="{DynamicResource DataGridMainHolder}">
                    <controls:GridBox4 x:Name="ProductGrid" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</controls:ControlBase>
