<controls:ControlBase x:Class="Client.Interfaces.Preproduction.Rig.CuttingStampOrderTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction.Rig"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1600"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left" >
                        <Label Content="С:"  Style="{DynamicResource TopLabel}"/>
                        <controls:DatePicker x:Name="DateFrom" Style="{DynamicResource DateEditStyle}">
                        </controls:DatePicker>
                        <Label Content="По:"  Style="{DynamicResource TopLabel}"/>
                        <controls:DatePicker x:Name="DateTo" Style="{DynamicResource DateEditStyle}">
                        </controls:DatePicker>
                        <Button Name="RefreshButton"    Content="Показать" Tag="Refresh" Style="{DynamicResource Button}"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <Button Name="CreateButton"     Content="Создать"  Tag="Create"  Style="{DynamicResource Button}"  />
                        <Button Name="EditButton"       Content="Изменить" Tag="Edit"    Style="{DynamicResource Button}"  />
                        <Button Name="DeleteButton"     Content="Удалить"  Tag="Delete"  Style="{DynamicResource Button}"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="GridSearch" Text=""  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <CheckBox Name="ShowAllCheckBox" Content="Все заявки"  Style="{DynamicResource CheckBoxTopPanel}" Click="ShowAllCheckBox_Click" ToolTip="Да -- Показать полученные заявки"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <Label Content="Площадка:"  Style="{DynamicResource TopLabel}"/>
                        <controls:SelectBox x:Name="Factory" Style="{DynamicResource CustomFormField}" ListBoxMinWidth="170" Width="125" Autocomplete="False" SelectedItemChanged="Factory_SelectedItemChanged"  />
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>

                        <Label Content="Тип линии:"  Style="{DynamicResource TopLabel}"/>
                        <controls:SelectBox x:Name="Machine" Style="{DynamicResource CustomFormField}" ListBoxMinWidth="170" ListBoxMinHeight="250" Width="125" Autocomplete="False" SelectedItemChanged="Machine_SelectedItemChanged"  />
                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                        
                        <Label Content="Дата доставки:"  Style="{DynamicResource TopLabel}"/>
                        <CheckBox Name="DeliveryDateCheckBox" Content="" Margin="0,1,0,0" Style="{DynamicResource CheckBoxTopPanel}" Click="DeliveryDateCheckBox_Click" ToolTip="Использовать фильтрацию по дате доставки"/>
                        <controls:DatePicker x:Name="DeliveryDate" Style="{DynamicResource DateEditStyle}" TextChanged="DateChanged" ToolTip="Дата доставки для фильтрации" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <Button Name="PrintButton"     Content="Печать"   Tag="Print"  Style="{DynamicResource Button}"  />
                        <Button Name="ToExcelButton"     Content="В Excel"   Tag="ToExcel"  Style="{DynamicResource Button}"  />
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right" >
                        <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?" Tag="Help" Style="{DynamicResource Button}" Margin="0" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>


        <Grid Grid.Row="1"  Grid.Column="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="483*"/>
                <ColumnDefinition Width="317*"/>
            </Grid.ColumnDefinitions>
            <Border Style="{DynamicResource DataGridMainHolder}" Grid.ColumnSpan="2" >
                <controls:GridBox4 x:Name="Grid" />
            </Border>
        </Grid>
    </Grid>
</controls:ControlBase>
