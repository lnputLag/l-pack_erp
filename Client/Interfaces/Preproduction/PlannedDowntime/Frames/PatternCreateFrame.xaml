<controls:ControlBase x:Class="Client.Interfaces.Preproduction.PlannedDowntime.Frames.PatternCreateFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction.PlannedDowntime.Frames"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Style="{DynamicResource UserControlCanvas}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" Width="800" HorizontalAlignment="Left">
        <Grid Style="{DynamicResource FromGrid}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">

                <Button Name="SaveButton" Content="Сохранить" Style="{DynamicResource FButtonPrimary}"/>
                <Button Name="CancelButton" Content="Закрыть" Style="{DynamicResource FButtonCancel}" />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <TextBlock Name="FormStatus" TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch"/>
            </StackPanel>

            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>


            <Grid Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Style="{DynamicResource DataGridContainer}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Style="{DynamicResource FormHeaderButtonsPanel}" Margin="0,5">
                    <Label Content="Поиск:" Style="{DynamicResource TopLabel}"/>
                    <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="100" TextWrapping="NoWrap" Name="SearchText" Text=""/>
                </StackPanel>

                <Border Grid.Row="1" Style="{DynamicResource DataGridMainHolder}">
                    <controls:GridBox4 Grid.Row="1" x:Name="MachineGridBox" />
                </Border>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="2" HorizontalAlignment="Stretch"  Style="{DynamicResource GridControlPanel}">
                <TabControl x:Name="VariablePattern">
                    <TabItem Header="Еженедельный">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                                <Label Content="Начало простоя в: "/>
                                <TextBox PreviewTextInput="TextBox_PreviewTextInput" Name="StartDowntimeHourWeek" Width="40" Style="{DynamicResource FormField}"/>
                                <Label Content=" час"/>
                                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                                <TextBox PreviewTextInput="TextBox_PreviewTextInput" Name="StartDowntimeMinutWeek" Width="40" Style="{DynamicResource FormField}"/>
                                <Label Content=" минут"/>

                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                                <Label Content="Продолжительность минут: "/>
                                <TextBox PreviewTextInput="TextBox_PreviewTextInput" Name="DowntimeWeek" Width="40" Style="{DynamicResource FormField}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <Label Content="Номер дня: "/>
                                <TextBox PreviewTextInput="TextBox_PreviewTextInput" Name="NumberDayWeek" Width="40" Style="{DynamicResource FormField}"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Ежемесячный">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="277*"/>
                                <ColumnDefinition Width="262*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5" Grid.ColumnSpan="2">
                                <Label Content="Начало простоя в: "/>
                                <TextBox PreviewTextInput="TextBox_PreviewTextInput" Name="StartDowntimeHourMonth" Width="40" Style="{DynamicResource FormField}"/>
                                <Label Content=" час"/>
                                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                                <TextBox PreviewTextInput="TextBox_PreviewTextInput" Name="StartDowntimeMinutMonth" Width="40" Style="{DynamicResource FormField}"/>
                                <Label Content=" минут"/>

                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5" Grid.ColumnSpan="2">
                                <Label Content="Продолжительность минут: "/>
                                <TextBox PreviewTextInput="TextBox_PreviewTextInput" Name="DowntimeMonth" Width="40" Style="{DynamicResource FormField}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" Grid.ColumnSpan="2">
                                <Label Content="Номер дня: "/>
                                <TextBox PreviewTextInput="TextBox_PreviewTextInput" Name="NumberDayMonth" Width="40" Style="{DynamicResource FormField}"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Произвольный интервал">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                                <Label Content="Начало простоя в: "/>
                                <TextBox PreviewTextInput="TextBox_PreviewTextInput" Name="StartDowntimeHourInterval" Width="40" Style="{DynamicResource FormField}"/>
                                <Label Content=" час"/>
                                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                                <TextBox PreviewTextInput="TextBox_PreviewTextInput" Name="StartDowntimeMinutInterval" Width="40" Style="{DynamicResource FormField}"/>
                                <Label Content=" минут"/>

                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                                <Label Content="Продолжительность минут: "/>
                                <TextBox PreviewTextInput="TextBox_PreviewTextInput" Name="DowntimeInterval" Width="40" Style="{DynamicResource FormField}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <Label Content="Начать с: "/>
                                <controls:DatePicker x:Name="StartDateDowntimeInterval" Style="{DynamicResource DateEditStyle}"/>
                                <Label Content="Каждые: "/>
                                <TextBox PreviewTextInput="TextBox_PreviewTextInput" Name="StartEveryHourDowntimeInterval" Width="40" Style="{DynamicResource FormField}"/>
                                <Label Content=" часа"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>

            <Grid Grid.Row="3" Grid.Column="2" Style="{DynamicResource DataGridContainer}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Вид простоя"  Style="{DynamicResource TopLabel}"/>

                <Border Grid.Row="1" Style="{DynamicResource DataGridMainHolder}">
                    <controls:GridBox4  x:Name="ReasonGridBox" />
                </Border>
            </Grid>
        </Grid>
    </Border>

</controls:ControlBase>
