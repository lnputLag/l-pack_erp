<controls:ControlBase x:Class="Client.Interfaces.Preproduction.PlannedDowntime.Elements.DowntimeEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Interfaces.Preproduction.PlannedDowntime.Elements"
        xmlns:controls="clr-namespace:Client.Interfaces.Main"
        mc:Ignorable="d"
        d:DesignHeight="135" d:DesignWidth="270" Style="{DynamicResource UserControlCanvas}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" Padding="0, 10, 0, 0">
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Начало простоя: *"/>
            <controls:DateTimePicker Grid.Row="0" Grid.Column="1"  x:Name="StartDowntime"  MaxLength="10"   Style="{DynamicResource DateEditStyle}" Width="130" />

            <Label Grid.Row="1" Grid.Column="0" Content="Конец простоя: *"/>
            <controls:DateTimePicker Grid.Row="1" Grid.Column="1" x:Name="EndDowntime"  MaxLength="10"   Style="{DynamicResource DateEditStyle}" Width="130" />

            <TextBlock Name="Status" Visibility="Hidden" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Ошибка" Foreground="Red" Margin="5, 5"/>

            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"  Name="Toolbar" Style="{DynamicResource FormHeaderButtonsPanel}" VerticalAlignment="Bottom" HorizontalAlignment="Right"  >
                <Button Name="SaveButton"  Content="ОК"  Style="{DynamicResource FButtonPrimary}"    />
                <Button Name="CancelButton" Content="Отмена"     Style="{DynamicResource FButtonCancel}"    />
            </StackPanel>
        </Grid>
    </Border>
</controls:ControlBase>
