<controls:ControlBase 
    x:Class="Client.Interfaces.Preproduction.WebTechnologicalMapForm"
    xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
    xmlns:lib="clr-namespace:Client.Common"
    xmlns:controls="clr-namespace:Client.Interfaces.Main"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
    
    mc:Ignorable="d"
    
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    
    d:DesignHeight="800" d:DesignWidth="1200"
    Style="{DynamicResource UserControlCanvas}"    
    >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Style="{DynamicResource FormControlPanel}" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Name="FormToolbar" Style="{DynamicResource FormHeaderButtonsPanel}">
                <Button Name="SaveButton" Content="Сохранить"  Style="{DynamicResource FButtonPrimary}"/>
                <Button Name="CancelButton" Content="Отмена" Style="{DynamicResource Button}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                <Button Name="HelpButton" ToolTip="Документация" Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Click="HelpButtonClick"  Margin="0,0,0,0" />
            </StackPanel>
        </Grid>
        <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}" Grid.ColumnSpan="2" Margin="0,5,0,5"></Border>
        <Grid Grid.Row="2" Style="{DynamicResource DataGridContainer}" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Style="{DynamicResource DataGridContainer}" Grid.ColumnSpan="2" Margin="0,0,11,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Grid.Row="0" >
                    <Label Content="Номер заявки :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="0" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="Number" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Style="{DynamicResource FormField}"/>
                </Border>

                <Border Grid.Column="0" Grid.Row="1" >
                    <Label Content="Покупатель :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  x:Name="PokupatelSelectBox" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                </Border>

                <Border Grid.Column="0" Grid.Row="2" >
                    <Label Content="Площадка :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="2" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  x:Name="FactIdSelectBox" Style="{DynamicResource CustomFormField}" ListBoxMinHeight="50" Autocomplete="True" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                </Border>
                
                <Border Grid.Column="0" Grid.Row="3" >
                    <Label Content="Вид изделия :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="3" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  x:Name="TypeProductSelectBox" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                </Border>

                <Border Grid.Row="4" Grid.ColumnSpan="2" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"/>

                <Border Grid.Column="0" Grid.Row="5" >
                    <Label Content="Длина :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="5" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="Length" Width="120" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}"/>
                </Border>

                <Border Grid.Column="0" Grid.Row="6" >
                    <Label Content="Ширина :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="6" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="Width" Width="120" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}"/>
                </Border>

                <Border Grid.Column="0" Grid.Row="7" >
                    <Label Content="Высота :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="7" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="Height" Width="120" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}"/>
                </Border>

                <Border Grid.Column="0" Grid.Row="8">
                    <Label Content="Кол-во в партии :" Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="8">
                    <TextBox Name="OrderQty" Width="120" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}"/>
                </Border>
            </Grid>

            <Border Grid.Column="1" Grid.Row="0" Width="1" BorderBrush="#ffcccccc" Padding="0,0,0,0" Margin="5,0,5,16" BorderThickness="1,0,1,0"/>

            <Grid Grid.Column="2" Style="{DynamicResource DataGridContainer}" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Column="0" Grid.Row="0" >
                    <Label Content="Профиль :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="0" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  x:Name="ProfilSelectBox" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                </Border>

                <Border Grid.Column="0" Grid.Row="1" >
                    <Label Content="Композиция :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  x:Name="CartonSelectBox" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                </Border>

                <Border Grid.Column="1" Grid.Row="2" Style="{DynamicResource FormFieldContainer}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <CheckBox Name="PrintFlag" Style="{DynamicResource FormCheckBox}" />
                        <Label Content="Печать" HorizontalAlignment="Left" Style="{DynamicResource FormLabel}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="0" Grid.Row="3" >
                    <Label Content="Цвет печати 1 :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="3" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  
                        x:Name="Color1" 
                        ListBoxMinWidth="290"
                        ListBoxMinHeight="200"                            
                        ToolTip="" 
                        Style="{DynamicResource CustomFormField}" 
                        Autocomplete="True" 
                        DataType="Grid"
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Top"
                    />
                </Border>

                <Border Grid.Column="0" Grid.Row="4" >
                    <Label Content="Цвет печати 2 :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="4" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  
                        x:Name="Color2" 
                        ListBoxMinWidth="290"
                        ListBoxMinHeight="200"                            
                        ToolTip="" 
                        Style="{DynamicResource CustomFormField}" 
                        Autocomplete="True" 
                        DataType="Grid"
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Top"
                    />
                </Border>

                <Border Grid.Column="0" Grid.Row="5" >
                    <Label Content="Цвет печати 3 :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="5" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  
                        x:Name="Color3" 
                        ListBoxMinWidth="290"
                        ListBoxMinHeight="200"                            
                        ToolTip="" 
                        Style="{DynamicResource CustomFormField}" 
                        Autocomplete="True" 
                        DataType="Grid"
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Top"
                    />
                </Border>

                <Border Grid.Column="0" Grid.Row="6" >
                    <Label Content="Цвет печати 4 :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="6" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  
                        x:Name="Color4" 
                        ListBoxMinWidth="290"
                        ListBoxMinHeight="200"                            
                        ToolTip="" 
                        Style="{DynamicResource CustomFormField}" 
                        Autocomplete="True" 
                        DataType="Grid"
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Top"
                    />
                </Border>

                <Border Grid.Column="0" Grid.Row="7" >
                    <Label Content="Цвет печати 5 :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="7" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  
                        x:Name="Color5" 
                        ListBoxMinWidth="290"
                        ListBoxMinHeight="200"                            
                        ToolTip="" 
                        Style="{DynamicResource CustomFormField}" 
                        Autocomplete="True" 
                        DataType="Grid"
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Top"
                    />
                </Border>
            </Grid>

            <Border Grid.Column="3" Grid.Row="0" Width="1" BorderBrush="#ffcccccc" Padding="0,0,0,0" Margin="6,0,6,16" BorderThickness="1,0,1,0"/>

            <Grid Grid.Column="4" Style="{DynamicResource DataGridContainer}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                    <RowDefinition Height="Auto" MinHeight="30"></RowDefinition>
                </Grid.RowDefinitions>

                <Border Grid.Column="1" Grid.Row="0" Style="{DynamicResource FormFieldContainer}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <CheckBox Name="PackingFlag" Style="{DynamicResource FormCheckBox}" />
                        <Label Content="Упаковка" HorizontalAlignment="Left" Style="{DynamicResource FormLabel}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <CheckBox Name="AutoAssemblyFlag" Style="{DynamicResource FormCheckBox}" />
                        <Label Content="Автоматическая сборка" HorizontalAlignment="Left" Style="{DynamicResource FormLabel}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.6*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Grid.Row="0">
                            <Label Content="Макс. высота ТП :" Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Border>
                        <Border Grid.Column="1" Grid.Row="0">
                            <TextBox Name="LimitHeight" HorizontalAlignment="Stretch" VerticalAlignment="Center" IsEnabled="False" TextWrapping="NoWrap" Style="{DynamicResource FormField}"/>
                        </Border>

                    </Grid>
                </Border>

                <Border Grid.Column="0" Grid.Row="3" >
                    <Label Content="Примечание :"  Style="{DynamicResource FormLabel}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="3" Grid.RowSpan="3" Style="{DynamicResource FormFieldContainer}" VerticalAlignment="Center">
                    <TextBox Name="NoteTextBox" VerticalAlignment="Center" Height="110"  TextWrapping="Wrap" Style="{DynamicResource FormField}" />
                </Border>

            </Grid>

            <Border Grid.Column="5" Grid.Row="0" Width="1" BorderBrush="#ffcccccc" Padding="0,0,0,0" Margin="5,0,5,16" BorderThickness="1,0,1,0"/>

        </Grid>


    </Grid>


</controls:ControlBase>