<controls:ControlBase x:Class="Client.Interfaces.Preproduction.ManagerWebTechnologicalMapTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200"
                      
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                      
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>


                        <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Name="GridToolbar">
                            <Label Content="С:"  Style="{DynamicResource TopLabel}"/>
                            <Grid Style="{DynamicResource FormFieldDateHolder}">
                                <controls:DatePicker x:Name="DtFrom" Style="{DynamicResource DateEditStyle}">
                                </controls:DatePicker>
                            </Grid>
                            <Label Content="По:"  Style="{DynamicResource TopLabel}"/>
                            <Grid Style="{DynamicResource FormFieldDateHolder}">
                                <controls:DatePicker x:Name="DtTo" Style="{DynamicResource DateEditStyle}">
                                </controls:DatePicker>
                            </Grid>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Label Content="Менеджер:"  Style="{DynamicResource TopLabel}" />
                            <controls:SelectBox x:Name="ManagerSelectBox" Style="{DynamicResource CustomFormField}" ListBoxMinHeight="170" ListBoxMinWidth="230" Width="200" Autocomplete="True" CompareMode="Contains" SelectedItemChanged="ManagerSelectBox_SelectedItemChanged"/>

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Label Content="Фильтр:"  Style="{DynamicResource TopLabel}" />
                            <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="130" TextWrapping="NoWrap" Name="SearchTextBox" Text="" TextChanged="TextBoxSearch_TextChanged"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Label Content="Размеры:"  Style="{DynamicResource TopLabel}" />
                            <dxe:TextEdit Name="MaskedTextBox" Width="150" Mask="([0-9]{0,4})  x  ([0-9]{0,4})  x  ([0-9]{0,4})" 
                                MaskType="RegEx" MaskUseAsDisplayFormat="True" PreviewKeyDown="MaskedTextBox_PreviewKeyDown" GotFocus="MaskedTextBox_GotFocus" KeyDown="MaskedTextBox_KeyDown"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>


                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <CheckBox Name="ShowAllCheckBox" Content="Показать все"  Style="{DynamicResource CheckBoxTopPanel}" Click="ShowAllCheckBox_Click"/>

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button Name="ShowButton"     Content="Показать"    Style="{DynamicResource Button}" />

                            <TextBox Name="SizeLength" Visibility="Collapsed"/>
                            <TextBox Name="SizeWidth" Visibility="Collapsed"/>
                            <TextBox Name="SizeHeigth" Visibility="Collapsed"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}"  Margin="0 5 0 0">
                            <Button Name="AddButton"      Content="Добавить"     Style="{DynamicResource Button}" />
                            <Button Name="EditButton"        Content="Изменить"    Style="{DynamicResource Button}" />
                            <Button Name="DeleteButton"      Content="Удалить"     Style="{DynamicResource Button}" Margin="0 0 16 0"/>

                            <Button Name="ApproveButton"      Content="Согласовать"     Style="{DynamicResource Button}" />

                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>

                            <Button Name="ShowFileTkButton"  Content="Показать ТК"  Style="{DynamicResource Button}" />
                            <Button Name="PrintButton"      Content="Печать"     Style="{DynamicResource Button}" />

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            
                            <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                            <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="120" TextWrapping="NoWrap" Name="GridSearch" Text=""  />

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Label Content="Статус:"  Style="{DynamicResource TopLabel}" />
                            <controls:SelectBox x:Name="StatusSelectBox" Style="{DynamicResource CustomFormField}" ListBoxMinHeight="170" ListBoxMinWidth="230" Width="200" Autocomplete="True" CompareMode="Contains" SelectedItemChanged="ManagerSelectBox_SelectedItemChanged"/>

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button Name="ExportToExcelButton"      Content="В Excel"     Style="{DynamicResource Button}" />
                            



                        </StackPanel>
                        
                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                            <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}"   />
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="1"  Grid.Column="0" >
                <Border Style="{DynamicResource DataGridMainHolder}" >
                    <controls:GridBox4 x:Name="Grid" />
                </Border>
            </Grid>
        </Grid>
        
    </Border>
</controls:ControlBase>
