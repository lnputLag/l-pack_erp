<controls:ControlBase x:Class="Client.Interfaces.Preproduction.EngineerWebTechnologicalMapTestTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:elements="clr-namespace:Client.Interfaces.Main.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <elements:ComparisonConverter x:Key="ComparisonConverter"/>
            
            <Style TargetType="dxg:GridColumn">
                <Setter Property="ReadOnly" Value="True"/>
            </Style>
            
            <Style x:Key="RowStyle" TargetType="{x:Type dxg:RowControl}">
                <Setter Property="Height" Value="22"/>
                <Setter Property="MinHeight" Value="22"/>
                <Setter Property="MaxHeight" Value="22"/>

                <Style.Triggers>
                    
                    <DataTrigger Value="True">
                        <DataTrigger.Binding>
                            <Binding Path="Row.Status" Converter="{StaticResource ComparisonConverter}" ConverterParameter="ContainsIn|0,5"/>
                        </DataTrigger.Binding>
                        <Setter Property="Background" Value="#a9d4ff"/>
                    </DataTrigger>
                    <DataTrigger Value="True">
                        <DataTrigger.Binding>
                            <Binding Path="Row.Status" Converter="{StaticResource ComparisonConverter}" ConverterParameter="ContainsIn|1,3,7"/>
                        </DataTrigger.Binding>
                        <Setter Property="Background" Value="#FFFFFF"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Row.Status}" Value="2">
                        <Setter Property="Background" Value="#FFA0A0"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Row.Status}" Value="4">
                        <Setter Property="Background" Value="#C5FBC5"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Row.Status}" Value="6">
                        <Setter Property="Background" Value="#FFC182"/>
                    </DataTrigger>

                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding Row.HiddenFlag}" Value="1"/>
                            <Condition Binding="{Binding Row.Status, Converter={StaticResource ComparisonConverter}, ConverterParameter='ContainsIn|0,1,5,3,7'}" Value="True"/>
                        </MultiDataTrigger.Conditions>
                        <Setter Property="Background" Value="#FFFF99"/>
                    </MultiDataTrigger>

                    <DataTrigger Binding="{Binding Row.Status}" Value="5">
                        <Setter Property="Foreground" Value="#0000FF"/>
                    </DataTrigger>

                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding Row.Status, Converter={StaticResource ComparisonConverter}, ConverterParameter='ContainsIn|3,7'}" Value="True"/>
                            <Condition Binding="{Binding Row.Art, Converter={StaticResource ComparisonConverter}, ConverterParameter='IsEmpty'}" Value="True"/>
                        </MultiDataTrigger.Conditions>
                        <Setter Property="Foreground" Value="#0000FF"/>
                    </MultiDataTrigger>

                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding Row.Status, Converter={StaticResource ComparisonConverter}, ConverterParameter='ContainsIn|3,7'}" Value="True"/>
                            <Condition Binding="{Binding Row.Art, Converter={StaticResource ComparisonConverter}, ConverterParameter='IsEmpty'}" Value="False"/>
                        </MultiDataTrigger.Conditions>
                        <Setter Property="Foreground" Value="#00AB46"/>
                    </MultiDataTrigger>

                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>


                        <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" >
                            <Label Content="С:"  Style="{DynamicResource TopLabel}"/>
                            <Grid Style="{DynamicResource FormFieldDateHolder}">
                                <controls:DatePicker x:Name="DtFrom" Style="{DynamicResource DateEditStyle}" EditValueChanging="DtFrom_EditValueChanging"> 
                                </controls:DatePicker>
                            </Grid>
                            <Label Content="По:"  Style="{DynamicResource TopLabel}"/>
                            <Grid Style="{DynamicResource FormFieldDateHolder}">
                                <controls:DatePicker x:Name="DtTo" Style="{DynamicResource DateEditStyle}" EditValueChanging="DtTo_EditValueChanging">
                                </controls:DatePicker>
                            </Grid>
                            
                            <Label Content="Инженер:"  Style="{DynamicResource TopLabel}" />
                            <controls:SelectBox x:Name="EngineerSelectBox" Style="{DynamicResource CustomFormField}" ListBoxMinHeight="210" ListBoxMinWidth="180" Width="180" Autocomplete="True" CompareMode="Contains" SelectedItemChanged="EngineerSelectBox_SelectedItemChanged"/>

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Label Content="Фильтр:"  Style="{DynamicResource TopLabel}" />
                            <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="130" TextWrapping="NoWrap" Name="SearchTextBox" Text=""/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Label Content="Размеры:"  Style="{DynamicResource TopLabel}" />
                            <dxe:TextEdit Name="MaskedTextBox" Width="150" Mask="([0-9]{0,4})  x  ([0-9]{0,4})  x  ([0-9]{0,4})" 
                                 MaskType="RegEx" MaskUseAsDisplayFormat="True" PreviewKeyDown="MaskedTextBox_PreviewKeyDown" GotFocus="MaskedTextBox_GotFocus"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            

                            
                            <CheckBox Name="ShowAllCheckBox" Content="Показать все"  Style="{DynamicResource CheckBoxTopPanel}" Click="ShowAllCheckBox_Click"/>
                            
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            
                            <Button Name="ShowButton"     Content="Показать"    Style="{DynamicResource Button}" />
                            
                            <TextBox Name="SizeLength" Visibility="Collapsed"/>
                            <TextBox Name="SizeWidth" Visibility="Collapsed"/>
                            <TextBox Name="SizeHeigth" Visibility="Collapsed"/>

                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}"  Margin="0 5 0 0" Name="GridToolbar">
                            <Button Name="AcceptButton" MinWidth="80" Content="Принять"  Style="{DynamicResource Button}"   />
                            <Button Name="RejectButton" MinWidth="80" Content="Отменить"  Style="{DynamicResource Button}"   />
                           
                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>

                            <Button Name="ShowFileTkButton"  Content="Показать ТК"  Style="{DynamicResource Button}" />
                            <Button Name="PrintButton"      Content="Печать"     Style="{DynamicResource Button}" />
                            
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            
                            <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                            <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="120" TextWrapping="NoWrap" Name="GridSearch" Text=""  />

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Label Content="Покупатель:"  Style="{DynamicResource TopLabel}" />
                            <controls:SelectBox x:Name="PokupatelSelectBox" Style="{DynamicResource CustomFormField}"  Width="180" Autocomplete="True" CompareMode="Contains" SelectedItemChanged="UpdateGridItems"/>

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Label Content="Статус:"  Style="{DynamicResource TopLabel}" />
                            <controls:SelectBox x:Name="StatusSelectBox" Style="{DynamicResource CustomFormField}" ListBoxMinHeight="190" ListBoxMinWidth="230" Width="150" Autocomplete="True" CompareMode="Contains" SelectedItemChanged="UpdateGridItems"/>

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button Name="ExportToExcelButton"      Content="В Excel"     Style="{DynamicResource Button}" />
                        </StackPanel>
                        
                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                            <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}"   />
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="1"  Grid.Column="0" >
                <dxg:GridControl x:Name="gridControl"
                         FontFamily="Segoe UI"
                         ItemsSource="{Binding Orders}"
                         AutoGenerateColumns="None"
                         EnableSmartColumnsGeneration="False"
                         SelectionMode="MultipleRow"
                         CurrentItemChanged="GridControl_CurrentItemChanged">
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn FieldName="IdTk" Header="Ид" Width="25"/>
                        <dxg:GridColumn FieldName="Dttm" Header="Дата создания" Width="75">
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings DisplayFormat="dd.MM.yyyy"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="Num" Header="Номер" Width="60"/>
                        <dxg:GridColumn FieldName="Art" Header="Артикул" Width="60"/>
                        <dxg:GridColumn FieldName="Factory" Header="Площадка" Width="40"/>
                        <dxg:GridColumn FieldName="FlagPculcBool" Header="РЦ" Width="25">
                            <dxg:GridColumn.EditSettings>
                                <dxe:CheckEditSettings/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="NamePok" Header="Покупатель" Width="170"/>
                        <dxg:GridColumn FieldName="NamePclass" Header="Вид изделия" Width="90"/>
                        <dxg:GridColumn FieldName="TkSize" Header="Размер" Width="90"/>
                        <dxg:GridColumn FieldName="ProductName" Header="Наименование" Width="100"/>
                        <dxg:GridColumn FieldName="Note" Header="Примечание" Width="100"/>
                        <dxg:GridColumn FieldName="Cardboard" Header="Картон" Width="100"/>
                        <dxg:GridColumn FieldName="CustomerCarton" Header="Марка для артикула" Width="50"/>
                        <dxg:GridColumn FieldName="SpecialRawBool" Header="Спецкартон" Width="25">
                            <dxg:GridColumn.EditSettings>
                                <dxe:CheckEditSettings/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="PrintingBool" Header="Печать" Width="25">
                            <dxg:GridColumn.EditSettings>
                                <dxe:CheckEditSettings/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="Colors" Header="Цвета" Width="50"/>
                        <dxg:GridColumn FieldName="IdOtgrBool" Header="Упаковка" Width="25">
                            <dxg:GridColumn.EditSettings>
                                <dxe:CheckEditSettings/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="AutomaticBool" Header="Автосборка" Width="25">
                            <dxg:GridColumn.EditSettings>
                                <dxe:CheckEditSettings/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="Design" Header="Дизайн" Width="60"/>
                        <dxg:GridColumn FieldName="Drawing" Header="Чертеж" Width="60"/>
                        <dxg:GridColumn FieldName="NotReadClient" Header="Чат с клиентом" Width="40"/>
                        <dxg:GridColumn FieldName="NotReadInner" Header="Чат с коллегами" Width="40"/>
                        <dxg:GridColumn FieldName="WebFileClientBool" Header="Файлы клиента" Width="25">
                            <dxg:GridColumn.EditSettings>
                                <dxe:CheckEditSettings/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="WebFileOurBool" Header="Файлы наши" Width="25">
                            <dxg:GridColumn.EditSettings>
                                <dxe:CheckEditSettings/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="AgreedFlagBool" Header="Согласовано клиентом" Width="25">
                            <dxg:GridColumn.EditSettings>
                                <dxe:CheckEditSettings/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="FileSignedFlagBool" Header="Подписанная ТК" Width="25">
                            <dxg:GridColumn.EditSettings>
                                <dxe:CheckEditSettings/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="DesignComplexity" Header="Сложность дизайнера" Width="40"/>
                        <dxg:GridColumn FieldName="DrawingComplexity" Header="Сложность конструктора" Width="40"/>
                        <dxg:GridColumn FieldName="Comments" Header="Комментарий клиента" Width="150"/>
                        <dxg:GridColumn FieldName="EngName" Header="Инженер" Width="90"/>
                        <dxg:GridColumn FieldName="DesName" Header="Дизайнер" Width="90"/>
                        <dxg:GridColumn FieldName="ConName" Header="Конструктор" Width="90"/>
                        <dxg:GridColumn FieldName="DesignerNote" Header="Примечание для дизайнера" Width="150"/>
                        <dxg:GridColumn FieldName="DrawerNote" Header="Примечание для конструктора" Width="50"/>
                        <dxg:GridColumn FieldName="PrCalName" Header="Менеджер РЦ" Width="70"/>
                        <dxg:GridColumn FieldName="ManName" Header="Менеджер ОРК" Width="70"/>
                        <dxg:GridColumn FieldName="SalesName" Header="Менеджер ОП" Width="70"/>
                        <dxg:GridColumn FieldName="TypeCustomer" Header="Канал продаж" Width="70"/>
                        <dxg:GridColumn FieldName="AcceptanceDttm" Header="Дт/вр принятия" Width="100">
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings DisplayFormat="dd.MM.yyyy HH:mm:ss"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="WorkingDttm" Header="Дт/вр разработки (плановое)" Width="100">
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings DisplayFormat="dd.MM.yyyy HH:mm:ss"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="SendingForApprovalDttm" Header="Дт/вр отправки на согласование" Width="100">
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings DisplayFormat="dd.MM.yyyy HH:mm:ss"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="ReworkCnt" Header="Доработок" Width="80"/>
                        <dxg:GridColumn FieldName="ReworkReason" Header="Причина доработки" Width="130"/>
                        <dxg:GridColumn FieldName="HeadConfirmFlagBool" Header="Согласование руководителя" Visible="True">
                            <dxg:GridColumn.EditSettings>
                                <dxe:CheckEditSettings/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="DttmTodoDes" Header="Дт/вр отправки дизайнеру" Width="180">
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings DisplayFormat="dd.MM.yyyy HH:mm:ss"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="DttmAccepDes" Header="Дт/вр принятия дизайнером" Width="180">
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings DisplayFormat="dd.MM.yyyy HH:mm:ss"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="DttmDoneDes" Header="Дт/вр завершения дизайнером" Width="200">
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings DisplayFormat="dd.MM.yyyy HH:mm:ss"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="DttmTodoCons" Header="Дт/вр отправки конструктору" Width="200">
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings DisplayFormat="dd.MM.yyyy HH:mm:ss"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="DttmAccepCons" Header="Дт/вр принятия конструктором" Width="200">
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings DisplayFormat="dd.MM.yyyy HH:mm:ss"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="DttmDoneCons" Header="Дт/вр завершения конструктором" Width="220">
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings DisplayFormat="dd.MM.yyyy HH:mm:ss"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="DttmWaitingAsnwer" Header="Дт/вр ожидания ответа" Width="160">
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings DisplayFormat="dd.MM.yyyy HH:mm:ss"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="TkOrderStatus" Header="Статус" Width="100"/>
                        <dxg:GridColumn FieldName="Status" Header="ИД Статуса" Width="80" Visible="False"/>
                        <dxg:GridColumn FieldName="Pathtk" Header="Файл ТК" Visible="False"/>
                        <dxg:GridColumn FieldName="PathtkWork" Header="Путь к рабочей" Visible="False"/>
                        <dxg:GridColumn FieldName="PathtkNew" Header="Путь к новой" Visible="False"/>
                        <dxg:GridColumn FieldName="PathtkArchive" Header="Путь к архивной" Visible="False"/>
                        <dxg:GridColumn FieldName="HiddenFlag" Header="Скрытая" Visible="False"/>
                        <dxg:GridColumn FieldName="Duplicate" Header="Количество похожих" Visible="False"/>
                        <dxg:GridColumn FieldName="DrawingFile" Header="Файл чертежа" Visible="False"/>
                        <dxg:GridColumn FieldName="FileSigned" Header="Подписанная ТК" Visible="False"/>
                        <dxg:GridColumn FieldName="DesignStatus" Header="Статус дизайна" Visible="False"/>
                        <dxg:GridColumn FieldName="DrawingStatus" Header="Статус чертежа" Visible="False"/>
                        <dxg:GridColumn FieldName="ChatId" Header="Чат" Visible="False"/>
                        <dxg:GridColumn FieldName="ScorerPrint" Header="Печать по рилевке" Visible="False"/>
                        <dxg:GridColumn FieldName="ManagerCreatorFlag" Header="Создано менеджером" Visible="False">
                            <dxg:GridColumn.EditSettings>
                                <dxe:CheckEditSettings/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="IdPok" Header="ИД покупателя" Visible="False"/>
                        <dxg:GridColumn FieldName="FlagChatClient" Header="Флаг чата с клиентом" Visible="False"/>
                        <dxg:GridColumn FieldName="FlagChatInner" Header="Флаг чата с коллегами" Visible="False"/>
                    </dxg:GridControl.Columns>
                    <dxg:GridControl.View>
                        <dxg:TableView x:Name="tableView"
                                    AutoWidth="False"
                                    ShowGroupPanel="False"
                                    AllowEditing="True"
                                    ShowAutoFilterRow="True"
                                    EditorShowMode="MouseDown"
                                    ShowFilterPanelMode="Default"
                                    NavigationStyle="Cell"
                                    AllowSorting="False"
                                    AllowGrouping="False"
                                    ShowTotalSummary="False"
                                    BestFitMode="Smart"
                                    ShowCheckBoxSelectorColumn="True"
                                    RetainSelectionOnClickOutsideCheckBoxSelector="True"
                                    CheckBoxSelectorColumnWidth="20"
                                    RowStyle="{StaticResource RowStyle}"
                                    AllowColumnMoving="True"
                                    AllowColumnFiltering="False"
                                    CustomCellAppearance="tableView_CustomCellAppearance">

                            <dxg:TableView.FormatConditions>
                                <dxg:FormatCondition FieldName="Design" 
                                                     Expression="[ScorerPrint] = 1 And [Design] != 'Разрабатывается' And [Design] != 'Выполнен'">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Background="#FFA0A0"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="Design" 
                                                     Expression="[Design] = 'Разрабатывается'">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Background="#FFFF99"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="Design" 
                                                     Expression="[Design] = 'Выполнен'">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Background="#C5FBC5"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="Design" 
                                                     Expression="([Design] = 'Разрабатывается' Or [Design] = 'Выполнен') And [ScorerPrint] = 2">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Foreground="#FC0D0D"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="Drawing" 
                                                     Expression="[Drawing] = 'Разрабатывается'">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Background="#FFFF99"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="Drawing" 
                                                     Expression="[Drawing] = 'Выполнен'">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Background="#C5FBC5"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="TkSize" 
                                                     Expression="([Status] In (0, 1, 5, 6)) And ([Duplicate] In (1, 2))">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Foreground="#fc0d0d"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="TkSize" 
                                                     Expression="[Status] = 0 And [Duplicate] >= 2">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format FontWeight="Bold"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="NamePok" 
                                                     Expression="[ManagerCreatorFlag] = 1">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format FontWeight="Bold"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="NotReadClient" 
                                                     Expression="[FlagChatClient] > 0">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Background="#FFFF99"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="NotReadClient" 
                                                     Expression="[NotReadClient] > 0">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Background="#FFA0A0"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="NotReadInner" 
                                                     Expression="[FlagChatInner] > 0">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Background="#FFFF99"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="NotReadInner" 
                                                     Expression="[NotReadInner] > 0">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Background="#FFC182"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="AgreedFlagBool" 
                                                     Expression="[AgreedFlag] = 1">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Background="#C5FBC5"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="FileSignedFlagBool" 
                                                     Expression="[FileSignedFlag] = 1">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Background="#C5FBC5"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>

                                <dxg:FormatCondition FieldName="WorkingDttm" 
                                                     Expression="[WorkingDttm] > Now()">
                                    <dxg:FormatCondition.Format>
                                        <dxg:Format Background="#FFA0A0"/>
                                    </dxg:FormatCondition.Format>
                                </dxg:FormatCondition>
                            </dxg:TableView.FormatConditions>
                        </dxg:TableView>
                    </dxg:GridControl.View>
                </dxg:GridControl>
            </Grid>
        </Grid>
        
    </Border>
</controls:ControlBase>
