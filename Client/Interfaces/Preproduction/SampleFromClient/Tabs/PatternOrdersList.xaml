<controls:ControlBase x:Class="Client.Interfaces.Preproduction.PatternOrdersList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1500"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="360"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
            <Border>
                <StackPanel Grid.Row="0" Grid.Column="0" Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left" >
                    <Label Content="С:"  Style="{DynamicResource TopLabel}"/>
                    <Grid Style="{DynamicResource FormFieldDateHolder}">
                        <controls:DatePicker x:Name="FromDate" Style="{DynamicResource DateEditStyle}" TextChanged="FromDate_TextChanged">
                        </controls:DatePicker>

                    </Grid>

                    <Label Content="по:"  Style="{DynamicResource TopLabel}"/>
                    <Grid Style="{DynamicResource FormFieldDateHolder}">

                        <controls:DatePicker x:Name="ToDate" Style="{DynamicResource DateEditStyle}" TextChanged="ToDate_TextChanged">
                        </controls:DatePicker>

                    </Grid>
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    <Button Name="RefreshButton"    Content="Показать" Tag="Refresh" Style="{DynamicResource Button}"  />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    <Button Name="AddButton"    Content="Добавить" Tag="Add;access_mode_full_access"  Style="{DynamicResource Button}"  />
                    <Button Name="EditButton"    Content="Изменить" Tag="Edit;access_mode_full_access"  Style="{DynamicResource Button}"  />
                    <Button Name="DeleteButton"    Content="Удалить" Tag="Delete;access_mode_full_access"  Style="{DynamicResource Button}" />
                    <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                    <Button Name="PurposeButton"    Content="Изменить данные" Tag="PurposeButton;access_mode_full_access"  Style="{DynamicResource Button}"  />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                    <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="SearchText" Text=""  />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                    <Label Content="Менеджер:"  Style="{DynamicResource TopLabel}" />
                    <controls:SelectBox x:Name="ManagerName" Style="{DynamicResource CustomFormField}" Width="140" ListBoxMinHeight="220" Autocomplete="False" SelectedItemChanged="ManagerName_SelectedItemChanged" />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    <Label Content="Тип работ:"  Style="{DynamicResource TopLabel}" />
                    <controls:SelectBox x:Name="WorkTypeSelect" Style="{DynamicResource CustomFormField}" Width="140" Autocomplete="False" ListBoxMinHeight="240" ListBoxMinWidth="260" SelectedItemChanged="WorkTypeSelect_SelectedItemChanged" />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                    <CheckBox Name="IncompletedCheckBox" Content="Не выполнено"  Style="{DynamicResource CheckBoxTopPanel}" Click="IncompletedCheckBox_Click" IsChecked="True"/>
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    <Button Name="ToExcelButton"    Content="В Excel"  Style="{DynamicResource Button}"  />
                </StackPanel>

            </Border>
        </Grid>

        <Grid Grid.Row="0"  Grid.Column="2" Style="{DynamicResource GridControlPanel}">
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="PurposeToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left" >
                        <Button Name="PurposeCompleteButton"  Tag="PurposeCompleteButton;access_mode_full_access"   Content="Отметить выполнение"  Style="{DynamicResource Button}" VerticalAlignment="Top"  />
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right" >
                        <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?" Tag="Help" Style="{DynamicResource Button}" Margin="0" />
                    </StackPanel>

                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1"  Grid.Column="0">
            <Border Style="{DynamicResource DataGridMainHolder}">
                <controls:GridBox4 x:Name="Grid" />
            </Border>
        </Grid>

        <Grid Grid.Row="1"  Grid.Column="2">
            <Border Style="{DynamicResource DataGridMainHolder}">
                <controls:GridBox4 x:Name="PurposeGrid" />
            </Border>
        </Grid>

    </Grid>
</controls:ControlBase>
