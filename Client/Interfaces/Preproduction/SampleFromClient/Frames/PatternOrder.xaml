<controls:ControlBase x:Class="Client.Interfaces.Preproduction.PatternOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800"
             HorizontalAlignment="Left"
             Style="{DynamicResource UserControlCanvas}"
             Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource FromGrid}" Width="520" HorizontalAlignment="Left" VerticalAlignment="Stretch">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                <Button Name="SaveButton"   Tag="Save"  Click="ButtonOnClick"  Content="Сохранить" Style="{DynamicResource FButtonPrimary}" />
                <Button Name="CancelButton" Tag="Close" Click="ButtonOnClick"  Content="Отмена"    Style="{DynamicResource FButtonCancel}" />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <TextBlock  Name="FormStatus" Text="Не все поля заполнены верно" TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />

            </StackPanel>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="300"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Покупатель:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" Grid.ColumnSpan="3">
                        <controls:SelectBox  x:Name="Pokupatel" Style="{DynamicResource CustomFormField}" Autocomplete="True" CompareMode="Contains"  />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Конечный потребитель:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1"  Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="ClientCustomer" Text="Кондитерская фабрика" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Производитель:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2"  Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="Manufacturer" Text="Бумажная фабрика" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                    </Border>
                    
                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Контактное лицо:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="3"  Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="ContactPerson" Text="Иванов А.А." TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                    </Border>

                    <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Менеджер: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="4"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" Grid.ColumnSpan="3">
                        <controls:SelectBox  x:Name="Manager" Style="{DynamicResource CustomFormField}" Autocomplete="True"   />
                    </Border>

                    <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Наименование: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="5"  Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="PatternName" Text="Короб" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                    </Border>

                    <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Объем продаж конкурента:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="6"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="CompetitorSales" Text="100" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="10"  />
                    </Border>

                    <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Цена конкурента:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="7"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="CompetitorPrice" Text="100" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="10"  />
                    </Border>

                    <Border Grid.Row="8" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Заявленная марка:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="8"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="SourceMarka"  Style="{DynamicResource CustomFormField}" Autocomplete="True" />
                    </Border>

                    <Border Grid.Row="9" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Наличие внутренних трещин:  " Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="9" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="InternalCrack" Style="{DynamicResource CustomFormField}"/>
                    </Border>

                    <Border Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource DataGridMainHolder}" >
                        <controls:GridBox4 x:Name="Grid" />
                    </Border>

                </Grid>
                
            </Border>
        </Grid>
    </Border>
</controls:ControlBase>
