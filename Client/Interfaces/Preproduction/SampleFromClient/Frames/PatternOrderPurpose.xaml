<controls:ControlBase x:Class="Client.Interfaces.Preproduction.PatternOrderPurpose"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="800"
             Style="{DynamicResource UserControlCanvas}"
             Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource FromGrid}"  HorizontalAlignment="Left" VerticalAlignment="Stretch">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                <Button Name="SaveButton" Content="Сохранить"  Style="{DynamicResource FButtonPrimary}"  Tag="Save"  Click="ButtonOnClick"   />
                <Button Name="CancelButton" Content="Отмена"     Style="{DynamicResource FButtonCancel}"   Tag="Close"  Click="ButtonOnClick"  />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <TextBlock  Name="FormStatus" Text="Не все поля заполнены верно" TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />

            </StackPanel>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Grid.Column="0" Header="Марка картона" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="400">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Профиль:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
                                <controls:SelectBox  x:Name="ProfileName" Style="{DynamicResource CustomFormField}" Autocomplete="True" Padding="0" Margin="0,0,0,3" SelectedItemChanged="ProfileName_SelectedItemChanged" />
                            </Border>

                            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Коэффициент гофрирования:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox  Name="CorrugatedCoefficient" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64" Margin="0,0,5,0"  />
                            </Border>
                            <Border Grid.Row="1"  Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                                <TextBox  Name="CorrugatedCoefficient2" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                            </Border>

                            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource FormLabelContainer}" HorizontalAlignment="Left">
                                <Label Content="Показатель торцевого сжатия (ECT):  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="2"  Grid.Column="1" Grid.ColumnSpan="2" Style="{DynamicResource FormFieldContainer}">
                                <TextBox  Name="EdgeCrashTest" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                            </Border>

                            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Марка картона:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="PurposeMarka" Style="{DynamicResource CustomFormField}" Autocomplete="True"  />
                            </Border>

                            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Цвет картона:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="ColorOuter" Style="{DynamicResource CustomFormField}" Autocomplete="True" />
                            </Border>

                            <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Толщина, мм:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="5"  Grid.Column="1" Grid.ColumnSpan="2" Style="{DynamicResource FormFieldContainer}">
                                <TextBox  Name="Thickness" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                            </Border>
                        </Grid>
                    </GroupBox>

                    <Border Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Height="220" VerticalAlignment="Top" Width="395" Margin="3,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <GroupBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Header="Внутренние размеры"  >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Длина:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox  Name="PatternLength" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                                    </Border>

                                    <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Ширина:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="0"  Grid.Column="3" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox  Name="PatternWidth" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                                    </Border>

                                    <Border Grid.Row="0" Grid.Column="4" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Высота:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="0"  Grid.Column="5" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox  Name="PatternHeight" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                                    </Border>
                                </Grid>
                            </GroupBox>

                            <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Header="Габариты развертки" Margin="0,0,0,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Длина:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox  Name="BlankLength" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                                    </Border>

                                    <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource FormLabelContainer}">
                                        <Label Content="Ширина:  " Style="{DynamicResource FormLabel}" />
                                    </Border>
                                    <Border Grid.Row="0"  Grid.Column="3" Style="{DynamicResource FormFieldContainer}">
                                        <TextBox  Name="BlankWidth" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                                    </Border>
                                </Grid>

                            </GroupBox>

                            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Нагрузка штабеля (BCT):  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="2"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox  Name="BurstingStrengthTest" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64" Margin="0,0,6,0"  />
                            </Border>
                            
                            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Сопротивление расслаиванию, кН/м:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="3"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox  Name="DelaminationResistance" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64" Margin="0,0,6,0"  />
                            </Border>

                            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Вес, г:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="4"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox  Name="PatternWeight" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64" Margin="0,0,6,0"  />
                            </Border>
                        </Grid>
                        

                    </Border>

                    <GroupBox Grid.Row="1" Grid.Column="0" Header="Состав сырья" HorizontalAlignment="Left" Height="176" VerticalAlignment="Top" Width="400">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Слой 1 (внутр):  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox  Name="RawGroup1" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="10" Margin="0" Padding="3,3,0,0"  />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="PaperRaw1" Style="{DynamicResource CustomFormField}" Autocomplete="True" Margin="5,0,0,0" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="3" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="ColorRaw1" Style="{DynamicResource CustomFormField}" Autocomplete="True" Margin="5,0,0,0" />
                            </Border>

                            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Слой 2:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox  Name="RawGroup2" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="10" Margin="0"  />
                            </Border>
                            <Border Grid.Row="1" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="PaperRaw2" Style="{DynamicResource CustomFormField}" Autocomplete="True" Margin="5,0,0,0" />
                            </Border>
                            <Border Grid.Row="1" Grid.Column="3" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="ColorRaw2" Style="{DynamicResource CustomFormField}" Autocomplete="True" Margin="5,0,0,0" />
                            </Border>

                            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Слой 3:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="2"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox  Name="RawGroup3" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="10" Margin="0"  />
                            </Border>
                            <Border Grid.Row="2" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="PaperRaw3" Style="{DynamicResource CustomFormField}" Autocomplete="True" Margin="5,0,0,0" />
                            </Border>
                            <Border Grid.Row="2" Grid.Column="3" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="ColorRaw3" Style="{DynamicResource CustomFormField}" Autocomplete="True" Margin="5,0,0,0" />
                            </Border>

                            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Слой 4:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="3"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox  Name="RawGroup4" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="10" Margin="0"  />
                            </Border>
                            <Border Grid.Row="3" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="PaperRaw4" Style="{DynamicResource CustomFormField}" Autocomplete="True" Margin="5,0,0,0" />
                            </Border>
                            <Border Grid.Row="3" Grid.Column="3" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="ColorRaw4" Style="{DynamicResource CustomFormField}" Autocomplete="True" Margin="5,0,0,0" />
                            </Border>

                            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Слой 5:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="4"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox  Name="RawGroup5" Text="1" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="10" Margin="0"  />
                            </Border>
                            <Border Grid.Row="4" Grid.Column="2" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="PaperRaw5" Style="{DynamicResource CustomFormField}" Autocomplete="True" Margin="5,0,0,0" />
                            </Border>
                            <Border Grid.Row="4" Grid.Column="3" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="ColorRaw5" Style="{DynamicResource CustomFormField}" Autocomplete="True" Margin="5,0,0,0" />
                            </Border>

                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Grid.Column="1" Header="Цвет" HorizontalAlignment="Left" Height="176" VerticalAlignment="Top" Width="395" Margin="3,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="1 цвет:" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="Color1" Style="{DynamicResource CustomFormField}" Autocomplete="True" />
                            </Border>

                            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="2 цвет:" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="Color2" Style="{DynamicResource CustomFormField}" Autocomplete="True"  />
                            </Border>

                            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="3 цвет:" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="Color3" Style="{DynamicResource CustomFormField}" Autocomplete="True" />
                            </Border>

                            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="4 цвет:" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="Color4" Style="{DynamicResource CustomFormField}" Autocomplete="True" />
                            </Border>

                            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="5 цвет:" Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="4" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <controls:SelectBox  x:Name="Color5" Style="{DynamicResource CustomFormField}" Autocomplete="True"  />
                            </Border>
                        </Grid>
                    </GroupBox>

                    <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="800">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Примечание:  " Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox  Name="Comment" Text="" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  Height="72" Margin="0,5,0,0" MaxLength="256" />
                            </Border>
                        </Grid>
                    </Border>

                </Grid>
            </Border>
        </Grid>
    </Border>
</controls:ControlBase>
