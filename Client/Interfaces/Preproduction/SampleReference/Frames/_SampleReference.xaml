<controls:ControlBase x:Class="Client.Interfaces.Preproduction.SampleReference"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600"
             Style="{DynamicResource UserControlCanvas}"
                      Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource FormContainerHolder}" Margin="1" >
        <Grid Style="{DynamicResource FormContainer}" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0">
                <StackPanel Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Name="FormToolbar" >

                    <Button Content="Сохранить" Name="SaveButton" Tag="Save" Click="ButtonOnClick" Style="{DynamicResource FButtonPrimary}" />
                    <Button Content="Отмена"    Name="CancelButton" Tag="Close" Click="ButtonOnClick" Style="{DynamicResource Button}" />

                    <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                    <TextBlock  Name="FormStatus" Text="Не все обязательные поля заполнены верно"  TextAlignment="Left" HorizontalAlignment="Stretch" Style="{DynamicResource FStatusBar2}" />
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Grid.Row="2" Grid.Column="0" Width="600" HorizontalAlignment="Left">
                <Grid Grid.Row="2"  Grid.Column="0" Style="{DynamicResource FromGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="50" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Дата производства:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:DatePicker x:Name="CreatedDate" Style="{DynamicResource DateEditStyle}" Width="145" />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Место хранения:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="RackNum"  TextWrapping="NoWrap"  />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Номер образца:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="CellNum"  TextWrapping="NoWrap"  />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Станок:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Machine" Style="{DynamicResource CustomFormField}" Autocomplete="True" HorizontalAlignment="Stretch" SelectedItemChanged="UpdateAvailableFields" />
                    </Border>

                    <Border Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Дуктор" Style="{DynamicResource FormLabel}" HorizontalAlignment="Left" />
                    </Border>

                    <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Краска 1:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="5" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Color1" Style="{DynamicResource CustomFormField}" SelectedItemChanged="UpdateAvailableFields" />
                    </Border>
                    <Border Grid.Row="5" Grid.Column="4" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="Ductor1"  Style="{DynamicResource CustomFormField}" Click="Ducktor_Click" />
                    </Border>

                    <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Краска 2:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="6" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Color2" Style="{DynamicResource CustomFormField}" SelectedItemChanged="UpdateAvailableFields" />
                    </Border>
                    <Border Grid.Row="6" Grid.Column="4" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="Ductor2"  Style="{DynamicResource CustomFormField}" Click="Ducktor_Click"/>
                    </Border>

                    <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Краска 3:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="7" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Color3" Style="{DynamicResource CustomFormField}" SelectedItemChanged="UpdateAvailableFields" />
                    </Border>
                    <Border Grid.Row="7" Grid.Column="4" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="Ductor3"  Style="{DynamicResource CustomFormField}" Click="Ducktor_Click"/>
                    </Border>

                    <Border Grid.Row="8" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Краска 4:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="8" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Color4" Style="{DynamicResource CustomFormField}" SelectedItemChanged="UpdateAvailableFields" />
                    </Border>
                    <Border Grid.Row="8" Grid.Column="4" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="Ductor4"  Style="{DynamicResource CustomFormField}" Click="Ducktor_Click"/>
                    </Border>

                    <Border Grid.Row="9" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Краска 5:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="9" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Color5" Style="{DynamicResource CustomFormField}" SelectedItemChanged="UpdateAvailableFields" />
                    </Border>
                    <Border Grid.Row="9" Grid.Column="4" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="Ductor5"  Style="{DynamicResource CustomFormField}" Click="Ducktor_Click"/>
                    </Border>

                    <Border Grid.Row="10" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Краска внутри 1:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="10" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="ColorIn1" Style="{DynamicResource CustomFormField}" SelectedItemChanged="UpdateAvailableFields" />
                    </Border>

                    <Border Grid.Row="11" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Краска внутри 2:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="11" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="ColorIn2" Style="{DynamicResource CustomFormField}" SelectedItemChanged="UpdateAvailableFields" />
                    </Border>

                </Grid>
            </Border>
        </Grid>
    </Border>
</controls:ControlBase>
