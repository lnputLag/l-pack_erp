<UserControl x:Class="Client.Interfaces.Preproduction.Color"
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
    
            mc:Ignorable="d"
    
            d:DesignWidth="500" d:DesignHeight="450" 
            Width="640" Height="550"
            Style="{DynamicResource UserControlCanvas}"
            HorizontalAlignment="Left" VerticalAlignment="Top" Loaded="UserControl_Loaded"    
            >

            <UserControl.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </UserControl.Resources>
    <Border Style="{DynamicResource FormContainerHolder}" Margin="1" >
        <Grid Style="{DynamicResource FormContainer}" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FormControlPanel}" >
                <Grid ShowGridLines="false">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" >
                        <TextBlock Grid.Row="0" Grid.Column="0"  Name="FormTitle"  TextAlignment="Left" Style="{DynamicResource FormHeaderTitleBar}"  />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" BorderBrush="#ff00cccc" BorderThickness="0" >
                        <StackPanel Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Name="FormToolbar" >

                            <Button Content="Сохранить" Name="SaveButton"  Click="SaveButton_Click" Style="{DynamicResource FButtonPrimary}" VerticalAlignment="Top" />
                            <Button Content="Отмена"    Name="CancelButton" Click="CancelButton_Click" Style="{DynamicResource Button}" />

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <TextBlock  Name="Status" Text="Не все обязательные поля заполнены верно"  TextAlignment="Left" Style="{DynamicResource FStatusBar2}" HorizontalAlignment="Stretch" />

                        </StackPanel>
                    </Border>

                </Grid>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Grid.Row="2" Grid.Column="0" >

                <Grid ShowGridLines="false" Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FromGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205*"/>
                        <ColumnDefinition Width="433*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Наименование: *"    Style="{DynamicResource FormLabel}"  />
                    </Border>

                    <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="Name" MaxLength="32" Text="" 
                                  Style="{DynamicResource FormField}" HorizontalAlignment="Stretch"  />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" >
                        <Label Content="Цвет:  "    Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="TextColor" MaxLength="50" Text="" 
                                  Style="{DynamicResource FormField}" HorizontalAlignment="Stretch" />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Цвет сокращенный:  "    Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="TextColorShort" MaxLength="12" Text="" 
                                  Style="{DynamicResource FormField}" HorizontalAlignment="Stretch" />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Цвет по Pantone:  "    Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="3"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="TextColorPanton" MaxLength="32" Text="" 
                                  Style="{DynamicResource FormField}" HorizontalAlignment="Stretch" />
                    </Border>

                    <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Цвет картона:  "    Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="4"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <!--<ComboBox Name ="TypeComponent" Style="{DynamicResource FormField}" HorizontalAlignment="Stretch" />-->
                        <controls:SelectBox x:Name="TypeComponent" Style="{DynamicResource CustomFormField}"  HorizontalAlignment="Stretch" />
                    </Border>

                    <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="HEX цвета:  "    Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="5"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="TextHex" MaxLength="6" Text="" TextChanged="TextHex_TextChanged"
                                  Style="{DynamicResource FormField}" HorizontalAlignment="Stretch" />
                    </Border>

                    <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="В архив:  "    Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="6" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="CheckArchive" Content="" Style="{DynamicResource FormField}" HorizontalAlignment="Left" VerticalContentAlignment="Center" />
                    </Border>

                    <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Редкая краска:  "    Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="7" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="CheckRare" Content="" Style="{DynamicResource FormField}" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                    </Border>

                    <Border Grid.Row="8" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Новая краска:  "    Style="{DynamicResource FormLabel}" />
                    </Border>

                    <Border Grid.Row="8" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="CheckNew" Content="" Style="{DynamicResource FormField}" HorizontalAlignment="Left" VerticalContentAlignment="Center" IsEnabled="False"/>
                    </Border>



                    <Border Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

                    <Border Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource DataGridMainHolder}" Margin="0,0,0,10">
                        <Grid Style="{DynamicResource DataGridContainer}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Style="{DynamicResource FormHeaderButtonsPanel}" Margin="0,5">
                                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                                <Label Content="Компоненты" Style="{DynamicResource TopLabel}"/>
                                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                                <Button Content="Добавить" Name="AddButton" Style="{DynamicResource Button}" IsEnabled="False" Click="AddButton_Click"  />
                                <Button Content="Удалить" Name="DeleteButton" Style="{DynamicResource Button}" IsEnabled="False" Click="DeleteButton_Click"/>
                            </StackPanel>

                            <Grid Grid.Row="1" Grid.Column="0">
                                <Border Style="{DynamicResource DataGridMainHolder}" >
                                    <controls:GridBox x:Name="GridComposition" />
                                </Border>
                            </Grid>

                        </Grid>
                    </Border>
                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>
