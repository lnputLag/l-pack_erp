<controls:ControlBase x:Class="Client.Interfaces.Preproduction.ColorOffset"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Name="FormToolbar">
                        <Button Content="Сохранить" Name="SaveButton"   Tag="Save"  Click="ButtonOnClick" Style="{DynamicResource FButtonPrimary}" ToolTip="Сохранить/пересохранить и закрыть"/>
                        <Button Content="Закрыть"   Name="CloseButton"  Tag="Close" Click="ButtonOnClick" Style="{DynamicResource Button}" ToolTip="Закрывает окно без сохранения"/>

                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right" >
                        <Button Name="HelpButton" Width="24" MinWidth="24" Content="?" Tag="Help" Style="{DynamicResource Button}" ToolTip="Вызов справки" Click="ButtonOnClick"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"/>

        <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}" Width="420" HorizontalAlignment="Left">
            <Grid ShowGridLines="false" Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FromGrid}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Цвет по Pantone: *"    Style="{DynamicResource FormLabel}"  />
                </Border>

                <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                    <TextBox  Name="Pantone" MaxLength="32" Text="" 
                                  Style="{DynamicResource FormField}" HorizontalAlignment="Stretch"  />
                </Border>

                <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" >
                    <Label Content="Цвет:  "    Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                    <TextBox  Name="TextColor" MaxLength="32" Text="" 
                                  Style="{DynamicResource FormField}" HorizontalAlignment="Stretch" />
                </Border>

                <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="HEX цвета:  "    Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Row="2"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                    <TextBox  Name="TextHex" MaxLength="6" Text="" TextChanged="TextHex_TextChanged"
                                  Style="{DynamicResource FormField}" HorizontalAlignment="Stretch" />
                </Border>

                <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="В архив:  "    Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                    <CheckBox Name="CheckArchive" Content="" Style="{DynamicResource FormField}" HorizontalAlignment="Left" VerticalContentAlignment="Center" />
                </Border>

                <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" >
                    <Label Content="GUID:  "    Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Row="4"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                    <TextBox  Name="ColorGuid" MaxLength="36" Text="" 
                                  Style="{DynamicResource FormField}" HorizontalAlignment="Stretch" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</controls:ControlBase>
