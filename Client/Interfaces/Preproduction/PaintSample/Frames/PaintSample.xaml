<controls:ControlBase x:Class="Client.Interfaces.Preproduction.PaintSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"

             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="650"
             Style="{DynamicResource UserControlCanvas}" Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="650">
        <Grid Style="{DynamicResource FromGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                <Button Name="SaveButton"   Tag="Save" Content="Сохранить"  Style="{DynamicResource FButtonPrimary}"    Click="ButtonOnClick"  />
                <Button Name="CancelButton" Tag="Close" Content="Отмена"     Style="{DynamicResource FButtonCancel}" Click="ButtonOnClick"   />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
            </StackPanel>

            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}">
                <Grid  Name="TaskBlock">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Name="DemandTypeLabel" Content="Тип заявки: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="DemandType" Style="{DynamicResource CustomFormField}" />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Name="CustomerLabel" Content="Покупатель: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="CustomerName" Style="{DynamicResource CustomFormField}" Autocomplete="True" CompareMode="Contains"/>
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label  Content="Менеджер: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="ManagerName" Style="{DynamicResource CustomFormField}" Autocomplete="True" />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Примечание:  " Style="{DynamicResource FormLabel}"  />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2">
                        <TextBox Name="Note" Style="{DynamicResource FormField}" MaxLength="250" Height="64" TextWrapping="Wrap"/>
                    </Border>

                </Grid>
            </Border>

            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource DataGridMainHolder}" Margin="0,10,0,10">
                <Grid Style="{DynamicResource DataGridContainer}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" Margin="0,5" >
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Label Content="Выкрасы" Style="{DynamicResource TopLabel}"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="CreateButton"  Tag="Create"  Content="Добавить"  Style="{DynamicResource Button}" Click="ButtonOnClick"  />
                        <Button Name="EditButton"    Tag="Edit"    Content="Изменить"  Style="{DynamicResource Button}" Click="ButtonOnClick"  />
                        <Button Name="DeleteButton"  Tag="Delete"  Content="Удалить"   Style="{DynamicResource Button}" Click="ButtonOnClick"  />
                    </StackPanel>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}" >
                        <controls:GridBox4 x:Name="PaintGrid" />
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</controls:ControlBase>
