<controls:ControlBase x:Class="Client.Interfaces.Preproduction.PlanningOrderLt.Tabs.PlanningOrderTab"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:controls="clr-namespace:Client.Interfaces.Main"
                      mc:Ignorable="d"
                      d:DesignHeight="800" d:DesignWidth="1600"
                      Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" BorderThickness="1">
        <Grid Style="{DynamicResource DataGridContainer}" x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" x:Name="FirstMachine">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <!-- Панель инструментов -->
                <Grid Grid.Row="0" Style="{DynamicResource GridControlPanel}">
                    <Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="70" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Name="PanelToolbar"
                                        HorizontalAlignment="Stretch"
                                        Style="{DynamicResource FormHeaderButtonsPanel}">
                                <Label Content="Станок:" Style="{DynamicResource TopLabel}" />
                                <controls:SelectBox MinWidth="170" ListBoxMinHeight="50" x:Name="SelectMachine"
                                                    Style="{DynamicResource CustomFormField}" />
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />

                                <Button Name="RefreshButton" Content="Обновить" Style="{DynamicResource Button}" />
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />

                                <Button Name="SaveButton" Content="Сохранить" Style="{DynamicResource Button}" />
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />

                                <Button Name="DeleteButton" Content="Удалить" Style="{DynamicResource Button}" />
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />

                                <Button Name="UpButton" Content="Выше" Style="{DynamicResource Button}" />
                                <Button Name="DownButton" Content="Ниже" Style="{DynamicResource Button}" />
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />
                                
                                <Button Name="ReturnToPlan" Content="Вернуть в план" Style="{DynamicResource Button}" />
                                <Button Name="MoveToTwoMachine" Visibility="Collapsed" Content="Перенести на" Style="{DynamicResource Button}" />
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />
                                
                                <Button Name="ShowTechMap" Content="Показать ТК" Style="{DynamicResource Button}" />

                                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                                <Label Content="КПД:"  Style="{DynamicResource TopLabel}" />
                                <TextBox Name="EfficiencyUp" Text="" MaxWidth="30" Width="30" IsReadOnly="True"  />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Name="SettingsButton"    ToolTip="Настройка"   Style="{DynamicResource ButtonGlyph}" Click="SettingsButton_Click"  Margin="0,0,0,0"  >
                                    <Image Style="{DynamicResource SettingsImage}" />
                                </Button>
                                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                                <Button x:Name="HelpButton" Tag="help" Width="24" MinWidth="24" Content="?"
                                        Style="{DynamicResource Button}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                </Grid>

                <!-- Таблицы заказов для станков -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Border Style="{DynamicResource DataGridMainHolder}">
                            <controls:GridBox4 x:Name="FirstGrid"></controls:GridBox4>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
            
            <Grid Grid.Row="1" Grid.Column="0" x:Name="TwoMachine">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <!-- Панель инструментов -->
                <Grid Grid.Row="0" Style="{DynamicResource GridControlPanel}">
                    <Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Name="PanelToolbar2"
                                        HorizontalAlignment="Stretch"
                                        Style="{DynamicResource FormHeaderButtonsPanel}">
                                <Label Content="Станок:" Style="{DynamicResource TopLabel}" />
                                <controls:SelectBox MinWidth="170" ListBoxMinHeight="50" x:Name="SelectMachine2"
                                                    Style="{DynamicResource CustomFormField}" />
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />

                                <Button Name="RefreshButton2" Content="Обновить" Style="{DynamicResource Button}" />
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />

                                <Button Name="SaveButton2" Content="Сохранить" Style="{DynamicResource Button}" />
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />

                                <Button Name="DeleteButton2" Content="Удалить" Style="{DynamicResource Button}" />
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />

                                <Button Name="UpButton2" Content="Выше" Style="{DynamicResource Button}" />
                                <Button Name="DownButton2" Content="Ниже" Style="{DynamicResource Button}" />
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />
                                
                                <Button Name="ReturnToPlan2" Content="Вернуть в план" Style="{DynamicResource Button}" />
                                <Button Name="MoveToFirstMachine" Visibility="Collapsed" Content="Перенести на" Style="{DynamicResource Button}" />
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />
                                
                                <Button Name="ShowTechMap2" Content="Показать ТК" Style="{DynamicResource Button}" />

                                <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                                <Label Content="КПД:"  Style="{DynamicResource TopLabel}" />
                                <TextBox Name="EfficiencyDown" Text="" MaxWidth="30" Width="30" IsReadOnly="True"  />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Таблицы заказов для станков -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Border Style="{DynamicResource DataGridMainHolder}">
                            <controls:GridBox4 x:Name="ThreeGrid"></controls:GridBox4>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Style="{DynamicResource GridControlPanel}">
                    <Border>
                        <Grid>
                            <StackPanel HorizontalAlignment="Stretch" Name="SecondGridToolbar"
                                        Style="{DynamicResource FormHeaderButtonsPanel}">
                                <TextBlock Height="24" Padding="0,4,0,0">ПЗ</TextBlock>
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />
                                <Button Name="RefreshButtonProductOrder" Content="Обновить" Style="{DynamicResource Button}" />
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />
                                <Button Name="MoveToPlan" Content="Добавить на BST[СPH]-1" Style="{DynamicResource Button}" />
                                <Button Name="MoveToPlan2" Content="Добавить на AAEI[301P]" Style="{DynamicResource Button}" />
                                <Button Name="MoveToPlan3" Content="Добавить на BST[TBH]-1" Style="{DynamicResource Button}" />
                                <Button Name="MoveToPlan4" Content="Добавить на AAEI[301L]" Style="{DynamicResource Button}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Row="1">
                    <Border Style="{DynamicResource DataGridMainHolder}">
                        <controls:GridBox4 x:Name="SecondGrid"></controls:GridBox4>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>

</controls:ControlBase>