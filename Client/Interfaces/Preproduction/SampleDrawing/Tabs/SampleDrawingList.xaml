<controls:ControlBase x:Class="Client.Interfaces.Preproduction.SampleDrawingList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction.SampleDrawing"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200"
             Style="{DynamicResource UserControlCanvas}">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11.5*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left" >
                        
                        <Label Content="Дата изготовления:"  Style="{DynamicResource TopLabel}"/>
                        <Grid Style="{DynamicResource FormFieldDateHolder}">

                            <controls:DatePicker x:Name="FromDate" Style="{DynamicResource DateEditStyle}" TextChanged="FromDateTextChanged">
                            </controls:DatePicker>
                        </Grid>

                        <Label Content="-"  Style="{DynamicResource TopLabel}"/>
                        <Grid Style="{DynamicResource FormFieldDateHolder}">
                            <controls:DatePicker x:Name="ToDate" Style="{DynamicResource DateEditStyle}" TextChanged="ToDateTextChanged">
                            </controls:DatePicker>

                        </Grid>
                        <Button Name="ShowButton" Content="Показать" Tag="Refresh" Style="{DynamicResource Button}" Click="ButtonOnClick" />
                        <Button Name="ShowSampleButton" Content="Открыть" Tag="Open" Style="{DynamicResource Button}" Click="ButtonOnClick" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <Button Name="ConstructorConfirmationButton"    Content="Принять" Tag="ConstructorConfirmationDrawing"    Style="{DynamicResource Button}" Click="ButtonOnClick" />
                        <Button Name="StartButton"    Content="Начать" Tag="StartDrawing"    Style="{DynamicResource Button}" Click="ButtonOnClick" />
                        <Button Name="EndButton"  Content="Завершить"  Tag="EndDrawing" Style="{DynamicResource Button}" Click="ButtonOnClick" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="ShowSimilarButton"  Content="Похожие" Tag="ShowSimilar" Style="{DynamicResource Button}" Click="ButtonOnClick" />
                        <Button Name="ToExcelButton"  Content="В Excel" Tag="ToExcel" Style="{DynamicResource Button}" Click="ButtonOnClick" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="SearchText" Text=""  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                        <CheckBox Name="HaveCompletedCheckBox" Content="Выполненные"  Style="{DynamicResource CheckBoxTopPanel}" Click="HaveCompletedCheckBox_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right" >
                        <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?" Tag="Help" Style="{DynamicResource Button}" Click="ButtonOnClick" Margin="0" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1"  Grid.Column="0">
            <Border Style="{DynamicResource DataGridMainHolder}">
                <controls:GridBox4 x:Name="Grid" />
            </Border>
        </Grid>

    </Grid>
</controls:ControlBase>
