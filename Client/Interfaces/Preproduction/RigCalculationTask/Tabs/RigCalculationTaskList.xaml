<controls:ControlBase x:Class="Client.Interfaces.Preproduction.RigCalculationTaskList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Style="{DynamicResource DataGridContainer}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11.5*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                        <Label Content="С:"  Style="{DynamicResource TopLabel}"/>
                        <Grid Style="{DynamicResource FormFieldDateHolder}">

                            <controls:DatePicker x:Name="FromDate" Style="{DynamicResource DateEditStyle}" Text="20.10.2023" TextChanged="FromDate_TextChanged">
                            </controls:DatePicker>

                        </Grid>

                        <Label Content="по:"  Style="{DynamicResource TopLabel}"/>
                        <Grid Style="{DynamicResource FormFieldDateHolder}">
                            <controls:DatePicker x:Name="ToDate" Style="{DynamicResource DateEditStyle}" Text="20.10.2023" TextChanged="ToDate_TextChanged">
                            </controls:DatePicker>

                        </Grid>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <Button Name="RefreshButton"    Content="Показать" Tag="Refresh" Style="{DynamicResource Button}"   />
                        
                        <Button Name="AddButton"    Content="Добавить" Tag="Add" Style="{DynamicResource Button}" Visibility="Collapsed" />
                        <Button Name="EditButton"    Content="Изменить" Tag="Edit" Style="{DynamicResource Button}"  />
                        <Button Name="DeleteButton"    Content="Удалить" Tag="Delete" Style="{DynamicResource Button}"  />
                        <Button Name="RejectButton"    Content="Отменить" Tag="Reject" Style="{DynamicResource Button}"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="WorkButton"    Content="В работу" Tag="Work" Style="{DynamicResource Button}"  />
                        <Button Name="ToExcelButton"    Content="В Excel" Tag="ToExcel" Style="{DynamicResource Button}"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="SearchText" Text=""  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <Label Content="Менеджер:"  Style="{DynamicResource TopLabel}" />
                        <controls:SelectBox x:Name="ManagerName" Style="{DynamicResource CustomFormField}" Width="140" ListBoxMinHeight="220" Autocomplete="False" SelectedItemChanged="ManagerName_SelectedItemChanged" />

                        <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                        <CheckBox Name="CompletedCheckBox" Content="Показать скрытые"  Style="{DynamicResource CheckBoxTopPanel}" Click="CompletedCheckBox_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                        <Button Name="HelpButton"  Width="24" MinWidth="24" Tag="Help" Content="?"  Style="{DynamicResource Button}"  />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1"  Grid.Column="0" >
            <Border Style="{DynamicResource DataGridMainHolder}" >
                <controls:GridBox4 x:Name="Grid" />
            </Border>
        </Grid>
    </Grid>
</controls:ControlBase>
