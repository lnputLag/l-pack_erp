<controls:ControlBase x:Class="Client.Interfaces.Preproduction.RigCalculationTaskSimilar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Preproduction"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="800">
        <Grid  Style="{DynamicResource FromGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                <Button Name="CloseButton" Tag="Close" Content="Закрыть"     Style="{DynamicResource FButtonCancel}" Click="ButtonOnClick"   />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
            </StackPanel>

            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>
            <Border Grid.Row="2" Grid.Column="0" Name="SimilarBlock" Style="{DynamicResource DataGridContainerHolder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Label Content="Похожие изделия для " Style="{DynamicResource FormLabel}" VerticalAlignment="Center" />
                            <TextBox Name="ProductName" Text="Изделие Фабрика ИСВ" Style="{DynamicResource FormInfoField}" IsReadOnly="True" />
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                        <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                            <Button Name="RefreshButton" Tag="Refresh" Content="Обновить"     Style="{DynamicResource FButtonCancel}" Click="ButtonOnClick"   />
                            <Button Name="ShowButton" Tag="Show" Content="Показать"     Style="{DynamicResource FButtonCancel}" Click="ButtonOnClick"   />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}" />
                            <Label Content="Отклонение:"  Style="{DynamicResource TopLabel}"  />
                            <TextBox Name="Deviation" Style="{DynamicResource FormFieldTopPanel}" Width="10"  />
                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}" />
                            <Label Content="Поиск:"  Style="{DynamicResource TopLabel}"  />
                            <TextBox Name="SearchText" Style="{DynamicResource FormFieldTopPanel}" Width="10"  />
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="2"  Grid.Column="0" Style="{DynamicResource DataGridMainHolder}" >
                        <controls:GridBox3 x:Name="Grid" />
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</controls:ControlBase>
