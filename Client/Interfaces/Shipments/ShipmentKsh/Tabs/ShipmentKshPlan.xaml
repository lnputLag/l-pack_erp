<UserControl 
    x:Class="Client.Interfaces.Shipments.ShipmentKshPlan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:controls="clr-namespace:Client.Interfaces.Main"
    mc:Ignorable="d" 
    d:DesignWidth="1600" d:DesignHeight="800" 
    Style="{DynamicResource UserControlCanvas}"    
>
    <!--d:DesignHeight="200" -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource DataGridContainer}"  >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <!-- 0 кнопки управления -->
                <RowDefinition Height="35"></RowDefinition>
                <!-- 1 заголовки таблиц (Опоздавшие) -->
                <RowDefinition Height="25"></RowDefinition>
                <!-- 2 таблицы данных (Опоздавшие) -->
                <RowDefinition Height="61" ></RowDefinition>
                <!-- 3 скроллеры -->
                <RowDefinition Height="20"></RowDefinition>
                <!-- 4 отступ -->
                <RowDefinition Height="10"></RowDefinition>
                <!-- 5 заголовки таблиц -->
                <RowDefinition Height="25"></RowDefinition>
                <!-- 6 таблицы данных -->
                <RowDefinition Height="*" ></RowDefinition>
                <!-- 7 скроллеры -->
                <RowDefinition Height="20"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}" >
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Name="ShipmentsToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" >
                            <Label Content="Дата:"  Style="{DynamicResource TopLabel}"/>
                            <Grid Style="{DynamicResource FormFieldDateHolder}">
                                 <controls:DatePicker x:Name="Today" Style="{DynamicResource DateEditStyle}" >
                                </controls:DatePicker>
                            </Grid>
                            <Button Name="RefreshButton" Content="Показать"   Style="{DynamicResource Button}"   Click="RefreshButton_Click"   />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <CheckBox Name="HideCompleteCheckbox" Content="Скрыть отгруженные" Click="HideCompleteCheckbox_Click" Style="{DynamicResource CheckBoxTopPanel}"  />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <CheckBox Name="HideInCompleteCheckbox" Click="HideInCompleteCheckbox_Click" Content="Скрыть неразрешенные" Style="{DynamicResource CheckBoxTopPanel}"  />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <CheckBox Name="HidePackagingCheckbox" Content="Скрыть c упаковкой" Click="HidePackagingCheckbox_Click"  Style="{DynamicResource CheckBoxTopPanel}"  />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <CheckBox Name="HidePlacerCheckbox" Content="Скрыть без упаковки" Click="HidePlacerCheckbox_Click"  Style="{DynamicResource CheckBoxTopPanel}"  />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                            <Button Name="ShipmentCountToPrintButton" ToolTip="Количество закрытых отгрузок, для которых нужно распечатать документы" Click="ShipmentCountToPrintButton_Click"  Style="{DynamicResource NotificationItemLinkIsEnabled}"/>
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="0"  Grid.Column="1" Style="{DynamicResource GridControlPanel}" >
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Name="DriversToolbar" Style="{DynamicResource FormHeaderButtonsPanel}">
                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                            <Button Name="ReloadDrivers" Content="Обновить"  Style="{DynamicResource Button}" Click="ReloadDrivers_Click"  />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Button Name="ActiveForkliftDrivers" Tag="access_mode_full_access" Content="Активные водители"  Style="{DynamicResource Button}" Click="ActiveForkliftDrivers_Click"  />
                            <Button Content="Отправить сообщение"  Tag="access_mode_full_access" Style="{DynamicResource Button}"   Click="SendMessageButton_Click"   />
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                            <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Click="HelpButton_Click" Margin="0" />
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="5*" MinWidth="100" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="5*" MinWidth="100" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <!-- 0 кнопки управления -->
                    <RowDefinition Height="0"></RowDefinition>
                    <!-- 1 заголовки таблиц (Опоздавшие) -->
                    <RowDefinition Height="25"></RowDefinition>
                    <!-- 2 таблицы данных (Опоздавшие) -->
                    <RowDefinition Height="61" ></RowDefinition>
                    <!-- 3 скроллеры -->
                    <RowDefinition Height="20"></RowDefinition>

                </Grid.RowDefinitions>

                <Border Name="BorderLate" Grid.Column="1" Grid.Row="0" Grid.RowSpan="4">
                    <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="4">
                        <Grid.RowDefinitions>
                            <!-- 0 кнопки управления -->
                            <RowDefinition Height="0"></RowDefinition>
                            <!-- 1 заголовки таблиц (Опоздавшие) -->
                            <RowDefinition Height="25"></RowDefinition>
                            <!-- 2 таблицы данных (Опоздавшие) -->
                            <RowDefinition Height="61" ></RowDefinition>
                            <!-- 3 скроллеры -->
                            <RowDefinition Height="20"></RowDefinition>
                        </Grid.RowDefinitions>

                        <!-- 1 заголовки таблиц (Опоздавшие) -->
                        <Grid Grid.Row="1" Grid.Column="0">
                            <ScrollViewer Style="{DynamicResource SHMonContainerVScroll}" VerticalScrollBarVisibility="Hidden" >
                                <Grid>
                                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource SHMonContainerHeader}">
                                        <ScrollViewer   Style="{DynamicResource SHMonContainerHScroll}" Width="{Binding Path=ActualWidth, ElementName=BorderLate}"   >
                                            <Grid Style="{DynamicResource SHMonContainer}">
                                                <Label x:Name="LateComerPackedHeader" Content="Опоздавшие"  Style="{DynamicResource SHMonContainerHeaderLabel}"/>
                                            </Grid>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </ScrollViewer>
                        </Grid>

                        <!-- 2 таблицы данных  (Опоздавшие) -->
                        <Grid Grid.Row="2" Grid.Column="0">
                            <ScrollViewer  x:Name="MonitorContainer11Scroll" BorderThickness="1,0,1,0" VerticalScrollBarVisibility="Disabled" Style="{DynamicResource SHMonContainerHScroll}" Width="{Binding Path=ActualWidth, ElementName=BorderLate}" >
                                <Grid  x:Name="MonitorContainer11" Style="{DynamicResource SHMonContainer}" VerticalAlignment="Top">
                                </Grid>
                            </ScrollViewer>
                        </Grid>


                        <!-- 3 скроллеры  (Опоздавшие) -->
                        <Grid Grid.Row="3" Grid.Column="0" ShowGridLines="false" >
                                <ScrollViewer HorizontalScrollBarVisibility="Visible" ScrollChanged="MonitorScrollChanged"  x:Name="MonitorArea11Scroll" Style="{DynamicResource SHMonContainerHScroll}"  Width="{Binding Path=ActualWidth, ElementName=BorderLate}">
                                            <Grid   Width="{Binding Path=ActualWidth, ElementName=MonitorContainer11, Mode = OneWay, UpdateSourceTrigger = PropertyChanged}">
                                            </Grid>
                                </ScrollViewer>
                        </Grid>

                    </Grid>
                </Border>

                <GridSplitter Grid.Column="2" ShowsPreview="False" Width="3"
        HorizontalAlignment="Center" VerticalAlignment="Stretch" />
                
                <Border Name="BorderTommorow" Grid.Column="3" Grid.Row="0" Grid.RowSpan="4">
                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="4">
                        <Grid.RowDefinitions>
                            <!-- 0 кнопки управления -->
                            <RowDefinition Height="0"></RowDefinition>
                            <!-- 1 заголовки таблиц (Опоздавшие) -->
                            <RowDefinition Height="25"></RowDefinition>
                            <!-- 2 таблицы данных (Опоздавшие) -->
                            <RowDefinition Height="61" ></RowDefinition>
                            <!-- 3 скроллеры -->
                            <RowDefinition Height="20"></RowDefinition>
                        </Grid.RowDefinitions>

                        <!-- 1 заголовки таблиц (Опоздавшие) -->
                        <Grid Grid.Row="1" Grid.Column="0">
                            <ScrollViewer Style="{DynamicResource SHMonContainerVScroll}" VerticalScrollBarVisibility="Hidden" >
                                <Grid>
                                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource SHMonContainerHeader}">
                                        <ScrollViewer   Style="{DynamicResource SHMonContainerHScroll}"  >
                                            <Grid Style="{DynamicResource SHMonContainer}">
                                                <Label Name="LabelTomorrow"  Content="Завтрашний день"  Style="{DynamicResource SHMonContainerHeaderLabel}"/>
                                            </Grid>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </ScrollViewer>
                        </Grid>

                        <!-- 2 таблицы данных  (Опоздавшие) -->
                        <Grid Grid.Row="2" Grid.Column="0">

                            <ScrollViewer Style="{DynamicResource SHMonContainerVScroll}" VerticalScrollBarVisibility="Hidden" x:Name="ScrollViewer12" Height="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UIElement}}" Width="{Binding Path=ActualWidth, ElementName=BorderTommorow}" >
                                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource SHMonContainerBody}">
                                        <ScrollViewer Name="TomorrowGrid"  Style="{DynamicResource SHMonContainerHScroll}" Width="{Binding Path=ActualWidth, ElementName=BorderTommorow}">

                                        </ScrollViewer>
                                    </Border>
                            </ScrollViewer>

                        </Grid>

                        <!-- 3 скроллеры  (Опоздавшие) -->
                        <Grid Grid.Row="3" Grid.Column="0" ShowGridLines="false" >
                           
                                        <ScrollViewer  HorizontalScrollBarVisibility="Visible" x:Name="TomorrowGridScroll" ScrollChanged="MonitorScrollChanged" Style="{DynamicResource SHMonContainerHScroll}"  Width="{Binding Path=ActualWidth, ElementName=BorderTommorow}">
                                            <Grid Name="GridScrollTomorow"  >
                                            </Grid>
                                        </ScrollViewer>
                              
                        </Grid>

                    </Grid>

                </Border>


            </Grid>

            <!-- 4 отступ  -->
            <Grid Grid.Row="4" Grid.Column="0"/>

            <!-- 5 заголовки таблиц -->
            <Grid Grid.Row="5" Grid.Column="0">

                <ScrollViewer Style="{DynamicResource SHMonContainerVScroll}" VerticalScrollBarVisibility="Hidden" Margin="0,0,17,0" >
                    <Grid x:Name="MonitorTitleGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="6*" />
                            <ColumnDefinition Width="0" />
                            <ColumnDefinition Width="0" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource SHMonContainerHeader}">
                            <ScrollViewer  Style="{DynamicResource SHMonContainerHScroll}"  >
                                <Grid Style="{DynamicResource SHMonContainer}"/>
                            </ScrollViewer>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource SHMonContainerSpacer}">
                        </Border>

                        <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource SHMonContainerHeader}">
                            <ScrollViewer   Style="{DynamicResource SHMonContainerHScroll}"  x:Name="MonitorTitle1Scroll" >
                                <Grid Style="{DynamicResource SHMonContainer}">
                                    <Label Content="Изделия" Style="{DynamicResource SHMonContainerHeaderLabel}"></Label>
                                </Grid>
                            </ScrollViewer>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="3" Style="{DynamicResource SHMonContainerSpacer}">
                        </Border>

                        <Border Grid.Row="0" Grid.Column="4" Style="{DynamicResource SHMonContainerHeader}">
                            <ScrollViewer   Style="{DynamicResource SHMonContainerHScroll}"  x:Name="MonitorTitle2Scroll" >
                                <Grid Style="{DynamicResource SHMonContainer}">
                                    <Label Content="Отгрузки без упаковки" Style="{DynamicResource SHMonContainerHeaderLabel}"></Label>
                                </Grid>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </ScrollViewer>

            </Grid>

            <!-- 6 таблицы данных -->
            <Grid Grid.Row="6" Grid.Column="0">

                <ScrollViewer Style="{DynamicResource SHMonContainerVScroll}" VerticalScrollBarVisibility="Visible" x:Name="ScrollViewer2" Height="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UIElement}}">
                    <Grid x:Name="MonitorContainerGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="6*" />
                            <ColumnDefinition Width="0" />
                            <ColumnDefinition Width="0" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"  />
                            <RowDefinition Height="*"  />
                        </Grid.RowDefinitions>

                        <!-- колонка с временными метками -->
                        <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource SHMonContainerBody}">
                            <ScrollViewer   Style="{DynamicResource SHMonContainerHScroll}"  >
                                <Grid x:Name="MonitorTimeLabels" Style="{DynamicResource SHMonContainer}" VerticalAlignment="Top">
                                </Grid>
                            </ScrollViewer>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource SHMonContainerSpacer}">
                        </Border>

                        <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource SHMonContainerBody}">
                            <ScrollViewer  x:Name="MonitorContainer21Scroll"  Style="{DynamicResource SHMonContainerHScroll}" Width="{Binding Path=ActualWidth, ElementName=MonitorTitle1Scroll}"  >
                                <Grid  x:Name="MonitorContainer21" Style="{DynamicResource SHMonContainer}" VerticalAlignment="Top" >

                                </Grid>
                            </ScrollViewer>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="3" Style="{DynamicResource SHMonContainerSpacer}">
                        </Border>

                        <Border Grid.Row="0" Grid.Column="4" Style="{DynamicResource SHMonContainerBody}">
                            <ScrollViewer  x:Name="MonitorContainer22Scroll" Style="{DynamicResource SHMonContainerHScroll}" Width="{Binding Path=ActualWidth, ElementName=MonitorTitle2Scroll}">
                                <Grid  x:Name="MonitorContainer22" Style="{DynamicResource SHMonContainer}" VerticalAlignment="Top" >
                                </Grid>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </ScrollViewer>

            </Grid>

            <!-- 7 скроллеры -->
            <Grid Grid.Row="7" Grid.Column="0" ShowGridLines="false">

                <ScrollViewer Style="{DynamicResource SHMonContainerVScrollM}"  >
                    <Grid x:Name="MonitorAreaGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="9"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="6*" />
                            <ColumnDefinition Width="0" />
                            <ColumnDefinition Width="0" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource SHMonContainerFooter}" Grid.ColumnSpan="4">
                        </Border>

                        <Border Grid.Row="0" Grid.Column="4" Style="{DynamicResource SHMonContainerSpacer}">
                        </Border>

                        <Border Grid.Row="0" Grid.Column="5" Style="{DynamicResource SHMonContainerFooter}" >
                            <ScrollViewer HorizontalScrollBarVisibility="Visible" ScrollChanged="MonitorScrollChanged"  x:Name="MonitorArea21Scroll" Style="{DynamicResource SHMonContainerHScroll}" Width="{Binding Path=ActualWidth, ElementName=MonitorTitle1Scroll}" >
                                <Grid Width="{Binding Path=ActualWidth, ElementName=MonitorContainer21, Mode = OneWay, UpdateSourceTrigger = PropertyChanged}">
                                </Grid>
                            </ScrollViewer>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="6" Style="{DynamicResource SHMonContainerSpacer}">
                        </Border>

                        <Border Grid.Row="0" Grid.Column="7" Style="{DynamicResource SHMonContainerFooter}">
                            <ScrollViewer HorizontalScrollBarVisibility="Visible" ScrollChanged="MonitorScrollChanged"  x:Name="MonitorArea22Scroll" Style="{DynamicResource SHMonContainerHScroll}" Width="{Binding Path=ActualWidth, ElementName=MonitorTitle2Scroll}" >
                                <Grid   Width="{Binding Path=ActualWidth, ElementName=MonitorContainer22, Mode = OneWay, UpdateSourceTrigger = PropertyChanged}">
                                </Grid>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </ScrollViewer>

            </Grid>

            <Grid Name="x1" Grid.Row="1" Grid.Column="1" Grid.RowSpan="7" >
                <Grid.ColumnDefinitions>
                    <!-- отступ -->
                    <ColumnDefinition Width="10" />
                    <!-- фио погрузчиков 
                    <ColumnDefinition Width="100" />
                    -->
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- данные по погрузчикам -->
                <Grid Grid.Column="2" Grid.Row="0" Margin="0,0,0,4">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="0"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource SHMonContainerHeader}">
                        <ScrollViewer   Style="{DynamicResource SHMonContainerHScroll}">
                            <Grid Style="{DynamicResource SHMonContainer}">
                                <Label Content="" Style="{DynamicResource SHMonContainerHeaderLabel}" />
                            </Grid>
                        </ScrollViewer>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource SHMonContainerBody}" BorderThickness="1,0,0,1" >
                        <ScrollViewer Name="ScrollHeader" Style="{DynamicResource SHMonContainerHScroll}" VerticalAlignment="Stretch" Margin="0,0,0,0" Width="{Binding Path=ActualHeight, ElementName=DriverContainerScroll}" ScrollChanged="OnDriverContainerScroll"    >
                            <Grid  x:Name="DriversHeaderContainer" Margin="0,0,0,25" Style="{DynamicResource SHMonContainer}"  HorizontalAlignment="Left"  />
                        </ScrollViewer>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource SHMonContainerSpacer}"/>

                    <!-- заголовок -->
                    <Border Grid.Row="0" Grid.Column="2" Style="{DynamicResource SHMonContainerHeader}">
                        <ScrollViewer   Style="{DynamicResource SHMonContainerHScroll}">
                            <Grid Style="{DynamicResource SHMonContainer}">
                                <Label Content="Занятые погрузчики" Style="{DynamicResource SHMonContainerHeaderLabel}" />
                            </Grid>
                        </ScrollViewer>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="2" Style="{DynamicResource SHMonContainerBody}" BorderThickness="1,0,1,1" >
                        <ScrollViewer HorizontalScrollBarVisibility="Visible"  VerticalScrollBarVisibility="Visible" BorderBrush="#ffcc0000" BorderThickness="0" x:Name="DriverContainerScroll" ScrollChanged="OnDriverContainerScroll" Style="{DynamicResource SHMonContainerHScroll}"  VerticalAlignment="Stretch" >
                            <Grid x:Name="DriversTaskContainer" Style="{DynamicResource SHMonContainer}" Height="800" MinWidth="200" HorizontalAlignment="Left" />
                        </ScrollViewer>
                    </Border>

                </Grid>

            </Grid>

            <Grid Grid.Row="1" Grid.RowSpan="8" Grid.Column="0" Grid.ColumnSpan="1" Name="ShipmentsSplash" Visibility="Collapsed">
                <Border Background="#55ffffff">
                </Border>
            </Grid>

            <Grid Grid.Row="0" Grid.RowSpan="8" Grid.Column="1" Grid.ColumnSpan="1" Name="DriversSplash" Visibility="Collapsed">
                <Border Background="#55ffffff">
                </Border>
            </Grid>

        </Grid>
    </Border>

</UserControl>
