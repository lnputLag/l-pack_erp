<UserControl x:Class="Client.Interfaces.Shipments.PalletConsumption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:main="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="449" d:DesignWidth="550"
             Height="449" Width="550"
             Style="{DynamicResource UserControlCanvas}"
             >



    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1"  Grid.Column="0">
                <Border Style="{DynamicResource DataGridMainHolder}" >
                    <main:GridBox x:Name="OperationsGrid" Margin="4,4,5,4"/>
                </Border>
            </Grid>


            <Grid Grid.Row="2"  Grid.Column="0">
                <Border Style="{DynamicResource DataGridMainHolder}" >
                    <main:GridBox x:Name="PositionsGrid" Margin="4,4,5,4"/>
                </Border>
            </Grid>

            <Grid Grid.Row="3" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="262"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel   Style="{DynamicResource FormHeaderButtonsPanel}">
                    <Label Content="Количество в отгрузке:" Width="140" Margin="0,-2,0,0"/>
                    <TextBox Name="AmountTextBox" MaxLength="8" Style="{DynamicResource FormFieldTopPanel}" MinWidth="60" Width="60" TextChanged="AmountTextBox_TextChanged" PreviewTextInput="AmountTextBox_OnPreviewTextInput" />
                    <Label Content="шт" Width="135" Margin="-5,-2,0,0"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="4" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="262"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}" Margin="5,0,0,4" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <Button x:Name="PrintButton" Content="Провести и напечатать накладную"  Click="PrintButton_OnClick" Style="{DynamicResource FButtonPrimary}" />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                    <Button Content="Закрыть" Click="CloseButton_OnClick"  Style="{DynamicResource Button}"  HorizontalAlignment="Right" IsCancel="True" />
                </StackPanel>

            </Grid>





        </Grid>
    </Border>


</UserControl>
