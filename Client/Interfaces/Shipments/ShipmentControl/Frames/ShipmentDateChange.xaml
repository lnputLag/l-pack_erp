<controls:ControlBase
    x:Class="Client.Interfaces.Shipments.ShipmentDateChange"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:controls="clr-namespace:Client.Interfaces.Main"
    xmlns:local="clr-namespace:Client.Interfaces.Shipments"
    xmlns:main="clr-namespace:Client.Interfaces.Main"
    mc:Ignorable="d" 
   
    Width="575" Height="675"
    >

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>


    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource DataGridContainer}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" >
                <Grid ShowGridLines="false" Style="{DynamicResource FromGrid2Top}" >
                    <StackPanel Style="{DynamicResource FormHeaderButtonsPanelR}" >
                        <Button Name="HelpButton" ToolTip="Документация" Click="HelpButton_Click" Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" />
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" Margin="0,5,0,5" Style="{DynamicResource FormVerticalPanelSpacer}"/>

            <Border Grid.Row="2" Grid.Column="0">
                <Grid Style="{DynamicResource FromGrid2}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Дата: " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:DatePicker x:Name="ShipmentDate" Style="{DynamicResource DateEditStyle}" TextChanged="ShipmentDate_TextChanged" >
                        </controls:DatePicker>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Время: " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch"  Style="{DynamicResource FormFieldContainer}" >
                        <main:GridBox4 x:Name="TimeGrid"  />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Причина переноса отгрузки: " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="2"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="ReasonId" Tag="access_mode_full_access" Style="{DynamicResource CustomFormField}" Autocomplete="True" SelectedItemChanged="ReasonId_SelectedItemChanged"  ListBoxMinHeight="200" />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Комментарий: " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="3"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox x:Name="Note"  Height="50" MaxHeight="200" VerticalAlignment="Stretch" MaxLength="256" TextWrapping="Wrap" AcceptsReturn="True" Style="{DynamicResource FormField}" VerticalScrollBarVisibility="Auto" />
                    </Border>
                    
                </Grid>
            </Border>

            <Border Grid.Row="3" Grid.Column="0" Margin="0,5,0,5" Style="{DynamicResource FormVerticalPanelSpacer}"/>

            <Border Grid.Row="4" Grid.Column="0">
                <Grid Style="{DynamicResource GridControlPanel}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="Toolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right"  >
                        <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="SaveButton" Click="SaveButton_Click"  Content="ОК"  Style="{DynamicResource FButtonPrimary}"    />
                        <Button Name="CancelButton" Click="CancelButton_Click" Content="Отмена"     Style="{DynamicResource FButtonCancel}"    />
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </Border>
</controls:ControlBase>
