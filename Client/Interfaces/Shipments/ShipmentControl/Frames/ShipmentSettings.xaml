                            </Border>
                            <Border Grid.Row="3" Grid.Column="3" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="часов до отгрузки" Style="{DynamicResource FormLabelNote}" />
                            </Border>

                            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
