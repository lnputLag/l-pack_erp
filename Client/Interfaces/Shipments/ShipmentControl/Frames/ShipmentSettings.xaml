                                <TextBox Name="CountPalletNotExists" Text="" MaxLength="8" HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}" Width="60" TextWrapping="NoWrap"  VerticalAlignment="Center" />
                            </Border>
                            <Border Grid.Row="12" Grid.Column="3" Style="{DynamicResource FormLabelContainer}" >
                                <Label Content="для формирования ячейки под фуру" Style="{DynamicResource FormLabelNote}" />
                            </Border>

                            <Border Grid.Row="13" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <StackPanel>
                                    <Label Content="Максимальное время увеличения "  ToolTip="Максимальное время увеличения кондиционирования в буфере"  Style="{DynamicResource FormLabel}"/>
                                    <Label Content="кондиционирования в буфере:"  ToolTip="Максимальное время увеличения кондиционирования в буфере" Style="{DynamicResource FormLabel}"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="13"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" VerticalAlignment="Bottom">
                                <StackPanel>
                                    <TextBox Name="SgpQtyMinuteDiffCond" Text="" MaxLength="8" HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}" Width="60" TextWrapping="NoWrap"  VerticalAlignment="Center"  />
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="13" Grid.Column="3" Style="{DynamicResource FormLabelContainer}" VerticalAlignment="Center">
                                <StackPanel>
                                    <Label Content="мин." Style="{DynamicResource FormLabelNote}" />
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="14" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <StackPanel>
                                    <Label Content="Размещение на стеллажном"    Style="{DynamicResource FormLabel}"/>
                                    <Label Content="складе:"   Style="{DynamicResource FormLabel}"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="14"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" VerticalAlignment="Bottom">
                                <StackPanel>
                                    <TextBox Name="InRackShipmentHour" Text="" MaxLength="8" HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}" Width="60" TextWrapping="NoWrap"  VerticalAlignment="Center"  />
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="14" Grid.Column="3" Style="{DynamicResource FormLabelContainer}" VerticalAlignment="Center">
                                <StackPanel>
                                    <Label Content="часов до отгрузки" Style="{DynamicResource FormLabelNote}" />
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="15" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <StackPanel>
                                    <Label Content="Запрет перемещения продукции в"    Style="{DynamicResource FormLabel}"/>
                                    <Label Content="стеллажный склад с отгрузкой менее:"   Style="{DynamicResource FormLabel}"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="15"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" VerticalAlignment="Bottom">
                                <StackPanel>
                                    <TextBox Name="BanInRackShipmentHour" Text="" MaxLength="8" HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}" Width="60" TextWrapping="NoWrap"  VerticalAlignment="Center"  />
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="15" Grid.Column="3" Style="{DynamicResource FormLabelContainer}" VerticalAlignment="Center">
                                <StackPanel>
                                    <Label Content="часов" Style="{DynamicResource FormLabelNote}" />
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="16" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <StackPanel>
                                    <Label Content="Максимальная длина транспортного"    Style="{DynamicResource FormLabel}"/>
                                    <Label Content="пакета для стеллажного склада:"   Style="{DynamicResource FormLabel}"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="16"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" VerticalAlignment="Bottom">
                                <StackPanel>
                                    <TextBox Name="MaxLengthPalletInRack" Text="" MaxLength="8" HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}" Width="60" TextWrapping="NoWrap"  VerticalAlignment="Center"  />
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="16" Grid.Column="3" Style="{DynamicResource FormLabelContainer}" VerticalAlignment="Center">
                                <StackPanel>
                                    <Label Content="мм." Style="{DynamicResource FormLabelNote}" />
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="17" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <StackPanel>
                                    <Label Content="Максимальная ширина транспортного"    Style="{DynamicResource FormLabel}"/>
                                    <Label Content="пакета для стеллажного склада:"   Style="{DynamicResource FormLabel}"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="17"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" VerticalAlignment="Bottom">
                                <StackPanel>
                                    <TextBox Name="MaxWidthPalletInRack" Text="" MaxLength="8" HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}" Width="60" TextWrapping="NoWrap"  VerticalAlignment="Center"  />
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="17" Grid.Column="3" Style="{DynamicResource FormLabelContainer}" VerticalAlignment="Center"> 
                                <StackPanel>
                                    <Label Content="мм." Style="{DynamicResource FormLabelNote}" />
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="18" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <StackPanel>
                                    <Label Content="Максимальная длина транспортного"    Style="{DynamicResource FormLabel}"/>
                                    <Label Content="пакета стандартного паллета:"   Style="{DynamicResource FormLabel}"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="18"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" VerticalAlignment="Bottom">
                                <StackPanel>
                                    <TextBox Name="MaxLengthStandartPallet" Text="" MaxLength="8" HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}" Width="60" TextWrapping="NoWrap"  VerticalAlignment="Center"  />
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="18" Grid.Column="3" Style="{DynamicResource FormLabelContainer}" VerticalAlignment="Center">
                                <StackPanel>
                                    <Label Content="мм." Style="{DynamicResource FormLabelNote}" />
                                </StackPanel>
                            </Border>

