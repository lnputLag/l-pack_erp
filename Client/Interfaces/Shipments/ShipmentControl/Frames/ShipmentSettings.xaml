<UserControl x:Class="Client.Interfaces.Shipments.ShipmentSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Shipments"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" d:Background="White" HorizontalAlignment="Stretch">
        <Grid Style="{DynamicResource FromGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                <Button Name="SaveButton"   Content="Сохранить"  Style="{DynamicResource FButtonPrimary}" Click="SaveButton_Click"   />
                <Button Name="CancelButton" Content="Закрыть"     Style="{DynamicResource FButtonCancel}" Click="CancelButton_Click"   />
                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
            </StackPanel>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Grid.Row="2" Grid.Column="0">
                <Grid ShowGridLines="false" Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FromGrid}" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Column="0" Grid.Row="0" Name="ShipmentSettingFields">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="0"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="0"  Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}">
                                <StackPanel Orientation="Horizontal" Style="{DynamicResource FormCheckBoxContainer}">
                                    <CheckBox Name="AllowPalletPlacing" Style="{DynamicResource FormCheckBox}"  />
                                    <Label Content="Отключить алгоритм расстановки поддонов"    Style="{DynamicResource FormLabel}" />
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="1"  Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}">
                                <StackPanel Orientation="Horizontal" Style="{DynamicResource FormCheckBoxContainer}">
                                    <CheckBox Name="BanBlankAndGoodsToOneCellCheckBox" Style="{DynamicResource FormCheckBox}" VerticalAlignment="Center" />
                                    <StackPanel Orientation="Vertical">
                                        <Label Content="Запрет на постановку в одну ячейку буфера" HorizontalAlignment="Left"   Style="{DynamicResource FormLabel}" />
                                        <Label Content="заготовок и готовой продукции" HorizontalAlignment="Left"   Style="{DynamicResource FormLabel}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="2"  Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}">
                                <StackPanel Orientation="Horizontal" Style="{DynamicResource FormCheckBoxContainer}">
                                    <CheckBox Name="BanStandardPalletToNonStandardCellCheckBox" Style="{DynamicResource FormCheckBox}" VerticalAlignment="Center" />
                                    <StackPanel Orientation="Vertical">
                                        <Label Content="Запрет на установку станадартных поддонов" HorizontalAlignment="Left"   Style="{DynamicResource FormLabel}" />
                                        <Label Content="в нестандартные ячейки" HorizontalAlignment="Left"   Style="{DynamicResource FormLabel}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
