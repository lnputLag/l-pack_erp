                                <TextBox Name="DifCarWidth" Text="" MaxLength="8" HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}" Width="60" TextWrapping="NoWrap"  VerticalAlignment="Center"  />
                            </Border>
                            <Border Grid.Row="9" Grid.Column="3" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="мм." Style="{DynamicResource FormLabelNote}" />
