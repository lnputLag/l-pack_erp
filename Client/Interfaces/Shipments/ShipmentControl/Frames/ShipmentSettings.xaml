                            </Border>
                            <Border Grid.Row="4"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="BufferSizeFirst" Text="" MaxLength="8" HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}" Width="60" TextWrapping="NoWrap"  VerticalAlignment="Center"/>
                            </Border>
                            <Border Grid.Row="4" Grid.Column="3" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="кв.м." Style="{DynamicResource FormLabelNote}"/>
                            </Border>

                            <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
