                                <Label Content="мм." Style="{DynamicResource FormLabelNote}" />
                            </Border>

                            <Border Grid.Row="9" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Отклонение ширины кузова/прицепа:"  ToolTip="Допустимое отклонение ширины кузова/прицепа от заданных размеров"  Style="{DynamicResource FormLabel}" />
                            </Border>
