                                <StackPanel>
                                    <Label Content="Максимальная ширина транспортного"    Style="{DynamicResource FormLabel}"/>
                                    <Label Content="пакета стандартного паллета:"   Style="{DynamicResource FormLabel}"/>
                                </StackPanel>
