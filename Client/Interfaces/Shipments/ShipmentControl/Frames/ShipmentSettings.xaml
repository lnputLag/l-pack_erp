                            </Border>
                            <Border Grid.Row="11" Grid.Column="3" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="для формирования ячейки под фуру" Style="{DynamicResource FormLabelNote}" />
                            </Border>

                            <Border Grid.Row="12" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Количество поддонов вне склада:"  ToolTip="Допустимое отклонение высоты кузова/прицепа от заданных размеров"  Style="{DynamicResource FormLabel}" />
                            </Border>
