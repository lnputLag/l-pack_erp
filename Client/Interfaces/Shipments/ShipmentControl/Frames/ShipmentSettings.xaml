                            </Border>
                            <Border Grid.Row="5"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="BufferSizeSecond" Text="" MaxLength="8" HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}" Width="60" TextWrapping="NoWrap"  VerticalAlignment="Center"/>
                            </Border>
                            <Border Grid.Row="5" Grid.Column="3" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="кв.м." Style="{DynamicResource FormLabelNote}"/>
                            </Border>

                            <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="Размер СГП:"  ToolTip="Размер СГП, кв.м. (в пересчете на 3-х слойные изделия)"  Style="{DynamicResource FormLabel}" />
                            </Border>
                            <Border Grid.Row="6"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="StockSize" Text="" MaxLength="8" HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}" Width="60" TextWrapping="NoWrap"  VerticalAlignment="Center" />
                            </Border>
                            <Border Grid.Row="6" Grid.Column="3" Style="{DynamicResource FormLabelContainer}">
                                <Label Content="кв.м." Style="{DynamicResource FormLabelNote}" />
                            </Border>

