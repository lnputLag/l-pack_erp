                            <Border Grid.Row="2"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                                <TextBox Name="PaperLeftoverAllowable" Text="" MaxLength="8" HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}" Width="60" TextWrapping="NoWrap"  VerticalAlignment="Center" />
