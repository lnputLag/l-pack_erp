                            <Border Grid.Row="19"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" VerticalAlignment="Bottom">
                                <StackPanel>
                                    <TextBox Name="MaxWidthStandartPallet" Text="" MaxLength="8" HorizontalAlignment="Left" Style="{DynamicResource FormFieldDigit}" Width="60" TextWrapping="NoWrap"  VerticalAlignment="Center"  />
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="19" Grid.Column="3" Style="{DynamicResource FormLabelContainer}" VerticalAlignment="Center">
                                <StackPanel>
                                    <Label Content="мм." Style="{DynamicResource FormLabelNote}" />
                                </StackPanel>
                            </Border>
