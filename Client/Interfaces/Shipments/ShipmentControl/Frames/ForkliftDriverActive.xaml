<UserControl
    x:Class="Client.Interfaces.Shipments.ForkliftDriverActive"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Client.Interfaces.Shipments"
    xmlns:lib="clr-namespace:Client.Common"
    xmlns:controls="clr-namespace:Client.Interfaces.Main"
    mc:Ignorable="d" 
    Width="640" Height="400"
    Style="{DynamicResource UserControlCanvas}"
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource DataGridContainer}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Margin="0,0,0,5">
                <Grid  Style="{DynamicResource FromGrid2}" >
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Grid.Column="0" Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}">
                        <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                        <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="120" TextWrapping="NoWrap" Name="SearchText" Text=""  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <CheckBox Name="ActiveOnly" Content="Только в смене" Click="ActiveOnly_Click" Style="{DynamicResource CheckBoxTopPanel}"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <Label Content="Отдел:" Style="{DynamicResource TopLabel}" />
                        <controls:SelectBox x:Name="Department"   Style="{DynamicResource CustomFormField}"  Width="120" ListBoxMinWidth="120" ListBoxMinHeight="120"  Autocomplete="True" VerticalAlignment="Bottom" />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanelR}" HorizontalAlignment="Right" >
                        <Button Name="HelpButton" ToolTip="Документация" Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Click="HelpButton_OnClick" Margin="0,0,0,0" />
                    </StackPanel>
                    
                </Grid>
            </Border>
            
            <Border Grid.Row="1" Grid.Column="0"  >
                <Grid Style="{DynamicResource FromGrid2}">
                    <Border Style="{DynamicResource DataGridMainHolder}" >
                        <controls:GridBox x:Name="Grid" />
                    </Border>
                </Grid>
            </Border>

            <Grid Grid.Row="2"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Name="FormToolbar"  Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right"  >
                            <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <Button Name="SaveButton"   Click="SaveButton_Click" Content="Сохранить"  Style="{DynamicResource FButtonPrimary}"    />
                            <Button Name="CancelButton" Click="CancelButton_Click"  Content="Закрыть" Style="{DynamicResource FButtonCancel}"    />
                        </StackPanel>
                        
                    </Grid>
                </Border>
            </Grid>

        </Grid>
    </Border>
</UserControl>
