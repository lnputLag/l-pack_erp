<UserControl 
    x:Class="Client.Interfaces.Shipments.ShipmentDateTime"
    xmlns:local="clr-namespace:Client.Interfaces.Shipments"
    xmlns:lib="clr-namespace:Client.Common"
    xmlns:controls="clr-namespace:Client.Interfaces.Main"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
    
    mc:Ignorable="d"
    
    d:DesignWidth="280" d:DesignHeight="575" 
    Width="315" Height="575"
    Style="{DynamicResource UserControlCanvas}"
    HorizontalAlignment="Left" VerticalAlignment="Top"    
    >

    <!--DataContext="{Binding RelativeSource={RelativeSource Self}}"-->

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!--
        форма
        1 строка: блок кнопок, 30 пикс.
        2 строка: горизонтальный разделитель
        3 строка: блок с полями формы, 
    
    -->
    <Border Style="{DynamicResource FormContainerHolder}" Margin="1" >
        <Grid Style="{DynamicResource FormContainer}" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>


            <Border Grid.Row="0" Grid.Column="0" >
                <Grid ShowGridLines="false" Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FromGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="9*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Дата: *"    Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <Grid Name="ShipmentDateGroup" Style="{DynamicResource FormFieldDateHolder}"  HorizontalAlignment="Left">
                            <!--<TextBox Name="ShipmentDate" Width="95" TextChanged="ShipmentDate_TextChanged" MaxLength="19"  Style="{DynamicResource FormFieldDateActive}" IsReadOnly="False" />
                            <DatePicker  SelectedDate="{Binding Path=Text, Mode=OneWayToSource, ElementName=ShipmentDate, Converter={StaticResource DateDate}}"  Style="{DynamicResource FormFieldDP}"  Margin="0,1,0,0">
                            </DatePicker>-->

                            <controls:DatePicker x:Name="ShipmentDate" Style="{DynamicResource DateEditStyle}" TextChanged="ShipmentDate_TextChanged">
                            </controls:DatePicker>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Время: *"    Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <Border Style="{DynamicResource DataGridMainHolder}" HorizontalAlignment="Left" >
                            <controls:GridBox x:Name="Grid" Height="507"  />
                        </Border>
                    </Border>

                    <Border Grid.Row="2" Grid.Column="1">
                        
                    </Border>
                </Grid>
            </Border>

            <Grid Grid.Row="1"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Margin="0,0,4,0" Grid.Row="0" Grid.Column="0" Name="Toolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Right"   >
                            <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch"/>
                            <Button Content="ОК" Name="SaveButton"  Click="SaveButton_Click" Style="{DynamicResource FButtonPrimary}" />
                            <Button Content="Отмена" Margin="0"   Name="CancelButton" Click="CancelButton_Click" Style="{DynamicResource Button}" />
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>

        </Grid>
    </Border>

</UserControl>
