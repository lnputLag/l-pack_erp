<controls:ControlBase x:Class="Client.Interfaces.Supply.ArrivalInvoice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Supply"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             
             mc:Ignorable="d" 
             d:DesignWidth="1600" d:DesignHeight="800"  
            Style="{DynamicResource UserControlCanvas}"  >

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}">
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Name="FormToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                            <Button Name="SaveButton"  Content="Сохранить"  Style="{DynamicResource Button}"  />
                            <Button Name="CancelButton"  Content="Отмена" Style="{DynamicResource Button}" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                            <Button Name="SettingsButton"    ToolTip="Настройка"   Style="{DynamicResource ButtonGlyph}" Click="SettingsButton_Click"  Margin="0,0,5,0"  >
                                <Image Style="{DynamicResource SettingsImage}" />
                                <Button.ContextMenu>
                                    <ContextMenu Name="BurgerMenu">
                                        <MenuItem Header="Настройка печати" Name="BurgerPrintSettings" Click="BurgerPrintSettings_Click"  Background="#ffffff" />
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>

                            <Button Name="HelpButton" ToolTip="Документация" Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Margin="0,0,0,0" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" Margin="0,5,0,5" Style="{DynamicResource FormVerticalPanelSpacer}"/>
            
            <Grid Grid.Row="2" Grid.Column="0" Name="MainForm">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Накладная:" ToolTip="Дата накладной прихода" Padding="0" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,7,0" />
                </Border>
                <Border Grid.Row="0" Grid.Column="1">
                    <Grid Style="{DynamicResource FormFieldDateHolder}">
                        <controls:DatePicker x:Name="InvoiceDateTextBox" Style="{DynamicResource DateEditStyle}" Text="20.10.2023">
                        </controls:DatePicker>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Счёт-фактура:" ToolTip="Дата счёт-фактуры, т.е. фактическая дата поступления сырья (другого товара)." Padding="0" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,7,0" />
                </Border>
                <Border Grid.Row="1" Grid.Column="1">
                    <Grid Style="{DynamicResource FormFieldDateHolder}">
                        <controls:DatePicker x:Name="DatasfTextBox" Style="{DynamicResource DateEditStyle}" Text="20.10.2023">
                        </controls:DatePicker>
                    </Grid>
                </Border>

                <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Поступление СФ:" ToolTip="Дата поступления счет-фактуры" Padding="0" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,7,0" />
                </Border>
                <Border Grid.Row="2" Grid.Column="1">
                    <Grid Style="{DynamicResource FormFieldDateHolder}">
                        <controls:DatePicker x:Name="DatapsfTextBox" Style="{DynamicResource DateEditStyle}" Text="20.10.2023">
                        </controls:DatePicker>
                    </Grid>
                </Border>

                <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Оприходование СФ:" ToolTip="Дата оприходования счет-фактуры" Padding="0" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,7,0" />
                </Border>
                <Border Grid.Row="3" Grid.Column="1">
                    <Grid Style="{DynamicResource FormFieldDateHolder}">
                        <controls:DatePicker x:Name="DataoprsfTextBox" Style="{DynamicResource DateEditStyle}" Text="20.10.2023">
                        </controls:DatePicker>
                    </Grid>
                </Border>


                
                <Border Grid.Column="2" Grid.Row="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Накладная:" ToolTip="Внешний номер накладной" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Column="3" Grid.Row="0" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="NameNaklTextBox" MaxLength="20" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="100"/>
                </Border>

                <Border Grid.Column="2" Grid.Row="1" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Счёт-фактура:" ToolTip="Номер счет - фактуры с внешнего документа" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Column="3" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="NamesfTextBox" MaxLength="20" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="100"/>
                </Border>

                <Border Grid.Column="2" Grid.Row="2" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Транспорт:" ToolTip="№ машины или вагона в котором привезли сырье или макулатуру." Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Column="3" Grid.Row="2" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="TransportNumberTextBox" MaxLength="20" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="100"/>
                </Border>

                <Border Grid.Column="2" Grid.Row="3" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Отгрузка:" ToolTip="Номер отгрузки" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Column="3" Grid.Row="3" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="ShipmentNumberTextBox" MaxLength="16" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="100"/>
                </Border>


                
                <Border Grid.Column="4" Grid.Row="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Покупатель:" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Column="5" Grid.Row="0" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  x:Name="CustomerSelectBox" Style="{DynamicResource CustomFormField}" SelectedItemChanged="CustomerSelectBox_SelectedItemChanged" Width="324" Autocomplete="True" HorizontalAlignment="Left" />
                </Border>

                <Border Grid.Column="4" Grid.Row="1" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Поставщик:" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Column="5" Grid.Row="1" Style="{DynamicResource FormFieldContainer}">
                    <StackPanel Orientation="Horizontal">
                        <TextBox Name="SellerNameTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" Width="300"/>
                        <Button Name="SelectSellerButton" ToolTip="Выбрать поставщика" Style="{DynamicResource ButtonGlyph}"  Margin="0,0,0,0"  >
                            <Image Style="{DynamicResource SelectImage}" />
                        </Button>
                        <TextBox Name="SellerIdTextBox" TextChanged="SellerIdTextBox_TextChanged" TextWrapping="NoWrap" Visibility="Collapsed" Style="{DynamicResource FormField}" Width="60"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Grid.Row="2" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Договор:" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Column="5" Grid.Row="2" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  x:Name="ContractSelectBox" Style="{DynamicResource CustomFormField}" Width="324" Autocomplete="True" HorizontalAlignment="Left" />
                </Border>

                <Border Grid.Column="4" Grid.Row="3" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Условие поставки:" ToolTip="Условие поставки сырья и пр. материалов" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Column="5" Grid.Row="3" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  x:Name="DeliverySelectBox" Style="{DynamicResource CustomFormField}" Width="324" Autocomplete="True" HorizontalAlignment="Left" />
                </Border>



                <Border Grid.Column="6" Grid.Row="0" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Примечание:" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Column="7" Grid.Row="0" Grid.RowSpan="2" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="NoteTextBox" Height="48" Width="300" TextWrapping="Wrap" Style="{DynamicResource FormField}" />
                </Border>

                <Border Grid.Column="6" Grid.Row="2" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Вес нетто:" ToolTip="Вес (всех рулонов бумаги) по внешней приходной накладной" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Column="7" Grid.Row="2" Style="{DynamicResource FormFieldContainer}">
                    <TextBox Name="WeightNettoDocTextBox" Width="140" TextWrapping="Wrap" HorizontalAlignment="Left" Style="{DynamicResource FormField}" />
                </Border>

                <Border Grid.Column="6" Grid.Row="3" Style="{DynamicResource FormLabelContainer}">
                    <Label Content="Площадка:" Style="{DynamicResource FormLabel}" />
                </Border>
                <Border Grid.Column="7" Grid.Row="3" Style="{DynamicResource FormFieldContainer}">
                    <controls:SelectBox  x:Name="FactorySelectBox" Style="{DynamicResource CustomFormField}" Width="140" Autocomplete="True" HorizontalAlignment="Left" />
                </Border>
            </Grid>

            <Border Grid.Row="3" Grid.Column="0" Margin="0,5,0,5" Style="{DynamicResource FormVerticalPanelSpacer}"/>

            <Grid Grid.Row="4"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Name="IncomingGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                            <Button Name="RefreshButton"  Content="Обновить"  Style="{DynamicResource Button}" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Button Name="NewItemButton"  Content="Добавить" Style="{DynamicResource Button}"  />
                            <Button Name="EditItemButton"  Content="Изменить"  Style="{DynamicResource Button}"  />
                            <Button Name="DeleteItemButton"  Content="Удалить" Style="{DynamicResource Button}" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Button Name="ConfirmSelectedIncomingButton" Content="Провести выбранные" ToolTip="Провести выбранные позиции" Style="{DynamicResource Button}"/>
                            <Button Name="UnconfirmSelectedIncomingButton" Content="Отменить проведение выбранных" ToolTip="Отменить проведение выбранных позиций"  Style="{DynamicResource Button}"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Button Name="PrintSelectedLabelButton"    Content="Печать выбранных ярлыков" Style="{DynamicResource Button}" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Button Name="AutoUpdatePriceButton" Content="Подгрузить цены" ToolTip="Автоматически подгрузить цены на все позиции накладной" Style="{DynamicResource Button}"/>
                            <Button Name="UpdatePayDebtSupplierButton" Content="Пересчитать оплату" Style="{DynamicResource Button}"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                            <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="SearchText" Text=""/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="5"  Grid.Column="0">
                <Border Style="{DynamicResource DataGridMainHolder}" >
                    <controls:GridBox4 x:Name="IncomingGrid" />
                </Border>
            </Grid>
        </Grid>
    </Border>
</controls:ControlBase>
