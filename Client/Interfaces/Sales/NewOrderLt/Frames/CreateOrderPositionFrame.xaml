<controls:ControlBase x:Class="Client.Interfaces.Sales.NewOrderLt.Frames.CreateOrderPositionFrame"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:controls="clr-namespace:Client.Interfaces.Main"
                      mc:Ignorable="d"
                      d:DesignHeight="600" d:DesignWidth="850"
                      Style="{DynamicResource UserControlCanvas}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}">
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}"
                                    Name="FormToolbar">
                            <Button Content="Сохранить" Name="SaveButton" Tag="Save"
                                    Style="{DynamicResource FButtonPrimary}" />
                            <Button Content="Отмена" Name="CancelButton" Tag="Close" Style="{DynamicResource Button}" />

                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <TextBlock Name="FormStatus" TextAlignment="Left" Style="{DynamicResource FStatusBar}"
                                       HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"
                                    HorizontalAlignment="Right">
                            <Button Name="HelpButton" Width="24" MinWidth="24" Content="?" Tag="Help"
                                    Style="{DynamicResource Button}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}" />

            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridContainerHolder}" Width="800"
                    HorizontalAlignment="Left">
                <Grid Style="{DynamicResource FromGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Изделие: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Name="ProductName" Style="{DynamicResource FormField}" Width="607"
                                     IsReadOnly="True" />
                            <TextBox Name="ProductId" Visibility="Collapsed" />
                            <TextBox Name="CategoryId" Visibility="Collapsed" />
                            <Button Name="ProductSelectButton" ToolTip="Выбрать" Style="{DynamicResource ButtonGlyph}"
                                    Margin="-1,0,0,0" IsEnabled="False">
                                <Image Style="{DynamicResource SelectImage}" />
                            </Button>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Адрес доставки: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <controls:SelectBox x:Name="Address" Style="{DynamicResource CustomFormField}"
                                        Autocomplete="True" HorizontalAlignment="Stretch"
                                        SelectedItemChanged="Address_SelectedItemChanged" Width="565" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>
                            <Button Style="{DynamicResource ButtonGlyph}" x:Name="RefreshListAddress">
                                <Image Style="{DynamicResource RefreshImage}" />
                            </Button>
                            <Button Style="{DynamicResource ButtonGlyph}" x:Name="AddNewAddress">
                                <Image Style="{DynamicResource AddImage}" />
                            </Button>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Направление:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="Direction" Style="{DynamicResource FormField}" IsReadOnly="True" />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Номер точки доставки:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Name="ShipmentSequence" HorizontalAlignment="Right"
                                     Style="{DynamicResource FormFieldDigit}" Width="216" TextWrapping="NoWrap" />
                            <StackPanel Orientation="Vertical">
                                <Button Name="ShipmentSequenceInc" Click="ShipmentSequenceInc_Click" Height="12"
                                        ToolTip="Увеличить количество" Style="{DynamicResource ButtonGlyph}"
                                        Margin="-1,0,0,0" BorderThickness="1,1,1,0.5">
                                    <Image Style="{DynamicResource UpImage}" />
                                </Button>
                                <Button Name="ShipmentSequenceDec" Click="ShipmentSequenceDec_Click" Height="12"
                                        ToolTip="Уменьшить количество" Style="{DynamicResource ButtonGlyph}"
                                        Margin="-1,0,0,0" BorderThickness="1,0.5,1,1">
                                    <Image Style="{DynamicResource DownImage}" />
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Количество: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="4" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="Quantity" Style="{DynamicResource FormField}" MaxLength="64" Width="240"
                                 HorizontalAlignment="Left" />
                    </Border>

                    <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Спецификация:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="5" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Name="SpecificationPosition" Style="{DynamicResource FormField}" Width="630"
                                     IsReadOnly="True" />
                            <TextBox Name="SpecificationPositionId" Visibility="Collapsed" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Цена по спец. без НДС:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="6" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="PriceSpecVatExcluded" Style="{DynamicResource FormField}" MaxLength="10"
                                 Width="240" HorizontalAlignment="Left" IsReadOnly="True" />
                    </Border>

                    <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Цена без НДС: *" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="7" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Name="PriceVatExcluded" Style="{DynamicResource FormField}" MaxLength="64"
                                     Width="240" TextChanged="PriceVatExcluded_TextChanged" />
                            <Label Content="Цена c НДС:  " Style="{DynamicResource FormLabel}" Margin="76,4,0,0" />
                            <TextBox Name="PriceWithVat" Style="{DynamicResource FormField}" MaxLength="64" Width="240"
                                     IsReadOnly="True" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="8" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Фиксированная цена:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="8" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="FixedPriceFlag" Style="{DynamicResource FormCheckBox}" />
                    </Border>

                    <Border Grid.Row="9" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Примечание кладовщику:  " Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="9" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="Note" Style="{DynamicResource FormField}" MaxLength="64" Height="48" />
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</controls:ControlBase>