<UserControl x:Class="Client.Interfaces.Stock.ForkliftDriverKshLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:main="clr-namespace:Client.Interfaces.Main"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200"
             Style="{DynamicResource UserControlCanvas}"  
             >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource DataGridContainer}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0"  Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid Name="GridToolbar">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                            <Label Content="С:"  Style="{DynamicResource TopLabel}"/>
                            <Grid Style="{DynamicResource FormFieldDateHolder}">
                                <controls:DateTimePicker x:Name="FromDate" Style="{DynamicResource DateTimeEditStyle}">
                                </controls:DateTimePicker>
                            </Grid>
                            <Label Content="До:"  Style="{DynamicResource TopLabel}"/>
                            <Grid Style="{DynamicResource FormFieldDateHolder}">
                                <controls:DateTimePicker x:Name="ToDate" Style="{DynamicResource DateTimeEditStyle}">
                                </controls:DateTimePicker>
                            </Grid>

                            <Button Name="ResreshButton"    Content="Показать"  Style="{DynamicResource Button}" Click="ShowButton_Click"   />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"/>



                            <Button   Name="DriverExcelButton"  Content="Отчёт по водителям"  Style="{DynamicResource Button}" Click="DriverExcelButton_Click"   />
                            <Button   Name="ExcelButton"  Content="Отчёт по операциям"  Style="{DynamicResource Button}" Click="ExportToExcelButton_Click"   />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" >
                            <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?"  Style="{DynamicResource Button}" Click="HelpButton_Click" Margin="0" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" Margin="0,5,0,5" Style="{DynamicResource FormVerticalPanelSpacer}"/>

            <Border Grid.Row="2"  Style="{DynamicResource DataGridMainHolder}">
                <Grid Style="{DynamicResource DataGridContainer}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="325"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0">
                        <Grid Style="{DynamicResource GridControlPanel}">
                            <StackPanel Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                                <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                                <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="ForkliftDriverSearchText" Text=""  />
                                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                                <controls:SelectBox x:Name="StockSelectBox" SelectedItemChanged="StockSelectBox_SelectedItemChanged"  Style="{DynamicResource CustomFormField}" ListBoxMinHeight="150" Width="135" Autocomplete="False"/>
                                <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="2">
                        <Grid Style="{DynamicResource GridControlPanel}">
                            <StackPanel Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                                <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                                <TextBox Style="{DynamicResource FormFieldTopPanel}" Width="60" TextWrapping="NoWrap" Name="WorkForkliftDriverSearchText" Text=""  />
                                <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource DataGridMainHolder}"  >
                        <main:GridBox x:Name="ForkliftDriverGrid"  />
                    </Border>


                    <Border Grid.Row="1" Grid.Column="2" Style="{DynamicResource DataGridMainHolder}"  >
                        <main:GridBox x:Name="WorkForkliftDriverGrid" />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Style="{DynamicResource DataGridMainHolder}"   >
                        <main:GridBox x:Name="AbsentDriverGrid"/>
                    </Border>

                </Grid>




            </Border>
        </Grid>
    </Border>
</UserControl>
