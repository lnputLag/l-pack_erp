<UserControl x:Class="Client.Interfaces.Stock.PalletExpenditure"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Stock"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource FormContainerHolder}" Width="400" HorizontalAlignment="Left" >
        <Grid Style="{DynamicResource FormContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" >
                <StackPanel Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left" Margin="0,0,0,5"  >

                    <Button Name="SaveButton"   Content="Сохранить"  Style="{DynamicResource FButtonPrimary}" Click="SaveButton_Click"   />
                    <Button Name="CancelButton" Content="Отмена"     Style="{DynamicResource FButtonCancel}" Click="CancelButton_Click"   />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                    <TextBlock  Name="FormStatus"  TextAlignment="Left" Style="{DynamicResource FStatusBar}" HorizontalAlignment="Stretch" />
                </StackPanel>

            </Border>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                <Label Content="Номер" Style="{DynamicResource FormLabel}" />
            </Border>
            <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                <TextBox Name="Num" Style="{DynamicResource FormField}"  />
            </Border>

            <Border Grid.Row="1" Grid.Column="2" Style="{DynamicResource FormLabelContainer}">
                <Label Content="Дата" Style="{DynamicResource FormLabel}" />
            </Border>
            <Border Grid.Row="1" Grid.Column="3" Style="{DynamicResource FormFieldContainer}" Margin="0">
                <Grid Style="{DynamicResource FormFieldDateHolder}" Margin="0" >
                    <!--<TextBox Name="InvoiceDt"  MaxLength="10"  Style="{DynamicResource FormFieldDate}" IsReadOnly="False" IsEnabled="True" Width="Auto"  />
                    <DatePicker  SelectedDate="{Binding Path=Text, Mode=OneWayToSource, ElementName=InvoiceDt, Converter={StaticResource DateDate} }"  Style="{DynamicResource FormFieldDP}"  Margin="0,2,0,0">
                    </DatePicker>-->
                    <controls:DatePicker x:Name="InvoiceDt" Style="{DynamicResource DateEditStyle}" >
                    </controls:DatePicker>
                </Grid>
            </Border>

            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                <Label Content="Завод:"  Style="{DynamicResource FormLabel}" />
            </Border>
            <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Style="{DynamicResource FormFieldContainer}">
                <controls:SelectBox  x:Name="FactIdSelectBox" Style="{DynamicResource CustomFormField}" Autocomplete="True" />
            </Border>

            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                <Label Content="Примечание" Style="{DynamicResource FormLabel}" />
            </Border>
            <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}">
                <TextBox Name="Note" Style="{DynamicResource FormField}" Margin="0" />
            </Border>

            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Style="{DynamicResource FormHeaderButtonsPanel}" Margin="0,5" >
                <Button Name="AddButton"      Content="Добавить"  Style="{DynamicResource Button}" Click="AddButton_Click"  />
                <Button Name="EditButton"     Content="Изменить"  Style="{DynamicResource Button}" Click="EditButton_Click"  />
                <Button Name="DeleteButton"   Content="Удалить"   Style="{DynamicResource Button}" Click="DeleteButton_Click"  />
            </StackPanel>

            <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" Style="{DynamicResource DataGridContainerHolder}" Height="200" >
                <controls:GridBox x:Name="PalletGrid" />
            </Border>
        </Grid>
    </Border>
</UserControl>
