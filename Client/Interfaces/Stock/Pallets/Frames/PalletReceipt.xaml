<UserControl x:Class="Client.Interfaces.Stock.PalletReceipt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Stock"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d"
             Height="650" Width="600"
             VerticalAlignment="Top"
             HorizontalAlignment="Left"
             Style="{DynamicResource UserControlCanvas}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource DataGridContainer}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="11*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Name="Toolbar"  Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                    <Button Name="SaveButton"   Content="Сохранить"  Style="{DynamicResource FButtonPrimary}" Click="SaveButton_Click"   />
                    <Button Name="CancelButton" Content="Отмена"     Style="{DynamicResource FButtonCancel}" Click="CancelButton_Click"   />
                    <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                    <TextBlock  Name="FormStatus" Text="Не все обязательные поля заполнены верно" TextAlignment="Left" Style="{DynamicResource FStatusBar2}" HorizontalAlignment="Stretch" />

                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" Width="273" >

                </StackPanel>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" >
                <Grid ShowGridLines="false" Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FromGrid}" Width="600" HorizontalAlignment="Left" VerticalAlignment="Stretch">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="160"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="200"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Источник поддонов: *"  Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="SourceType" Style="{DynamicResource CustomFormField}" ListBoxMinWidth="180" ListBoxMinHeight="140" Autocomplete="True" SelectedItemChanged="SourceType_SelectedItemChanged" />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Name="BuyerLabel" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Покупатель:"  Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Buyer" Style="{DynamicResource CustomFormField}" Autocomplete="True" />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Name="SupplierLabel" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Поставщик:"  Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Supplier" Style="{DynamicResource CustomFormField}" Autocomplete="True" />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Name="NumLabel" Content="Номер документа:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="Num" Style="{DynamicResource FormField}"  />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="2" Style="{DynamicResource FormLabelContainer}">
                        <Label Name="DateLabel" Content="Дата:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="3" Grid.Column="3" Name="DateBlock" Style="{DynamicResource FormFieldContainer}" Margin="0">
                        <Grid Style="{DynamicResource FormFieldDateHolder}" Margin="0" >
                            <!--<TextBox Name="ReceiptDt"  MaxLength="10"  Style="{DynamicResource FormFieldDate}" IsReadOnly="False" IsEnabled="True" Width="Auto"  />
                            <DatePicker  SelectedDate="{Binding Path=Text, Mode=OneWayToSource, ElementName=ReceiptDt, Converter={StaticResource DateDate} }"  Style="{DynamicResource FormFieldDP}"  Margin="0,2,0,0">
                            </DatePicker>-->
                            <controls:DatePicker x:Name="ReceiptDt" Style="{DynamicResource DateEditStyle}" >
                            </controls:DatePicker>
                        </Grid>
                    </Border>

                    <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Статус:"  Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="4" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="Status" Style="{DynamicResource CustomFormField}" Autocomplete="True" />
                    </Border>

                    <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Завод:"  Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="5" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox  x:Name="FactIdSelectBox" Style="{DynamicResource CustomFormField}" Autocomplete="True" />
                    </Border>

                    <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Примечание" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="Note" Style="{DynamicResource FormField}" MaxLength="255" Margin="0" />
                    </Border>

                    <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="4" Style="{DynamicResource FormHeaderButtonsPanel}" Margin="0,5" HorizontalAlignment="Stretch" >
                        <TextBlock Text="Поддоны" Height="24" Width="70" Padding="4,4,0,0"/>
                        <Button Name="AddButton"      Content="Добавить"  Style="{DynamicResource Button}" Click="AddButton_Click"  />
                        <Button Name="EditButton"     Content="Изменить"  Style="{DynamicResource Button}" Click="EditButton_Click"  />
                        <Button Name="DeleteButton"   Content="Удалить"   Style="{DynamicResource Button}" Click="DeleteButton_Click"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    </StackPanel>

                    <Border Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="4" Style="{DynamicResource DataGridContainerHolder}" Height="160" >
                        <controls:GridBox x:Name="PalletGrid" />
                    </Border>
                    <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="4" Style="{DynamicResource FormHeaderButtonsPanel}" Margin="0,5" HorizontalAlignment="Stretch" >
                        <TextBlock Text="Файлы" Height="24" Width="70" Padding="4,4,0,0"/>
                        <Button Name="AddFileButton"      Content="Добавить"  Style="{DynamicResource Button}" Click="AddFileButton_Click"  />
                        <Button Name="DeleteFileButton"   Content="Удалить"   Style="{DynamicResource Button}" Click="DeleteFileButton_Click"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="OpenFileButton"     Content="Открыть"  Style="{DynamicResource Button}" Click="OpenFileButton_Click"  />
                    </StackPanel>

                    <Border Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="4" Style="{DynamicResource DataGridContainerHolder}" Height="200" >
                        <controls:GridBox x:Name="FileGrid" />
                    </Border>

                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>
