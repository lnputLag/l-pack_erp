<UserControl x:Class="Client.Interfaces.Stock.PalletLocation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Stock"
             mc:Ignorable="d" 
             Width="520"  Height="480" 
             Style="{DynamicResource UserControlCanvas}"
             VerticalAlignment="Top"
             HorizontalAlignment="Left"
>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>



    <Border Style="{DynamicResource DataGridContainerHolder}" >
        <Grid Style="{DynamicResource DataGridContainer}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border >
                    <Grid >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Name="Toolbar"  Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >

                            <Button Name="SaveButton"   Content="Сохранить"  Style="{DynamicResource FButtonPrimary}" Click="SaveButton_Click"   />
                            <Button Name="CancelButton" Content="Отмена"     Style="{DynamicResource FButtonCancel}" Click="CancelButton_Click"   />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <TextBlock  Name="FormStatus" Text="Не все обязательные поля заполнены верно" TextAlignment="Left" Style="{DynamicResource FStatusBar2}" HorizontalAlignment="Stretch" />
                            
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" Width="273" >

                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" Margin="0,10,0,0">
                <Grid ShowGridLines="false" Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FromGrid}" Width="400" HorizontalAlignment="Left" VerticalAlignment="Stretch">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                       
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Место хранения: *"  Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox Name="Location" Text="Склад СГП" MaxLength="32" Style="{DynamicResource FormField}"  />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="В ремонте:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Name="InRepairQty" Text="12555" MaxLength="5" Width="50" HorizontalAlignment="Left" ToolTip="Количество поддонов в ремонте" Style="{DynamicResource FormField}"  />
                            <Label Content="шт" Style="{DynamicResource FormLabelDimension}" />
                        </StackPanel>                        
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Потребности:" Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Name="OwnNeedQty" Text="24555" MaxLength="5" Width="50" HorizontalAlignment="Left" ToolTip="Количество поддонов, требующихся на собственные нужды"  Style="{DynamicResource FormField}"  />
                            <Label Content="шт" Style="{DynamicResource FormLabelDimension}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>


        </Grid>
    </Border>
    
</UserControl>
