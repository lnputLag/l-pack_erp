<controls:ControlBase
        x:Class="Client.Interfaces.Stock.CellVisualizationBuffer2"
        xmlns:local="clr-namespace:Client.Interfaces.Stock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:controls="clr-namespace:Client.Interfaces.Main"

        mc:Ignorable="d" 
        d:DesignWidth="1980"
        d:DesignHeight="768" 
        Style="{DynamicResource UserControlCanvas}">

    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"  Grid.Column="0" >
                <Grid Style="{DynamicResource GridControlPanel}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                        <TextBox x:Name="ZoomTextBox" Width="50"/>
                        <Button x:Name="ZoomPlusButton" Content="Zoom +" Width="100" Click="ZoomPlusButton_Click"/>
                        <Button x:Name="ZoomMinusButton" Content="Zoom -" Width="100" Click="ZoomMinusButton_Click"/>

                        <Slider x:Name="ZoomSlider" Orientation="Horizontal" Width="500" Maximum="2" Minimum="-2" Value="0" SelectionStart="0" TickPlacement="BottomRight" 
                             IsSnapToTickEnabled="True" AutoToolTipPlacement="None" AutoToolTipPrecision="0"  ValueChanged="ZoomSlider_ValueChanged"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Panel.ZIndex="0">
                <ScrollViewer x:Name="BackgroundImageScrollViewer" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                    <Image Source="/Assets/Images/Карта буфера.png" x:Name="BackgroundImage"/>
                </ScrollViewer>
            </Border>

            <Border Grid.Row="1" Panel.ZIndex="1" x:Name="ImgBorder" BorderThickness="1" BorderBrush="red" >
                <ScrollViewer x:Name="imgScrollViewer" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" ScrollChanged="imgScrollViewer_ScrollChanged">
                    <Image x:Name="img" MouseLeftButtonDown="img_MouseLeftButtonDown" />
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>

</controls:ControlBase>
