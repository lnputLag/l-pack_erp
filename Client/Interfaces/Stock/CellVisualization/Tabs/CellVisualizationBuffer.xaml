<controls:ControlBase
        x:Class="Client.Interfaces.Stock.CellVisualizationBuffer"
        xmlns:local="clr-namespace:Client.Interfaces.Stock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:controls="clr-namespace:Client.Interfaces.Main"

        mc:Ignorable="d" 
        d:DesignWidth="1500"
        d:DesignHeight="1000" 
        Style="{DynamicResource UserControlCanvas}">

    <Border Style="{DynamicResource DataGridContainerHolder}" x:Name="MainBorder" >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"  Grid.Column="0" >
                <Grid Style="{DynamicResource GridControlPanel}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Name="GridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left">
                        <Button Name="RefreshButton" Click="RefreshButton_Click"  Content="Обновить" Style="{DynamicResource Button}"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        
                        <Button Name="AddCellButton" Click="AddCellButton_Click" Content="Добавить" Style="{DynamicResource Button}"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                        <CheckBox Name="ShowGridCheckBox" HorizontalAlignment="Right" Checked="ShowGridCheckBox_Checked" Unchecked="ShowGridCheckBox_Unchecked" Style="{DynamicResource FormCheckBox}"/>
                        <Border Style="{DynamicResource FormLabelContainer}" >
                            <Label Content="Сетка" HorizontalAlignment="Left" Style="{DynamicResource FormLabel}" />
                        </Border>

                        <Border Style="{DynamicResource FormLabelContainer}" >
                            <Label Content="Размер" HorizontalAlignment="Left" Style="{DynamicResource FormLabel}" />
                        </Border>
                        <TextBox Name="GridStapTextBox" TextWrapping="NoWrap" Style="{DynamicResource FormField}" IsReadOnly="True" Width="25"/>
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                        <Button Name="MinusButton" Click="MinusButton_Click"  Content="-" Style="{DynamicResource Button}"  />
                        <Button Name="PlusButton" Click="PlusButton_Click"    Content="+" Style="{DynamicResource Button}"  />
                        <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Panel.ZIndex="0" x:Name="BackgorundImgBorder" BorderThickness="1" BorderBrush="red" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ScrollViewer x:Name="BackgorundImgScrollViewer" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                    <Image x:Name="BackgorundImg" Source="/Assets/Images/CellVisualization/bufer_map.png" Stretch="Fill" Opacity="0.4" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </ScrollViewer>
            </Border>

            <Border Grid.Row="1" Panel.ZIndex="1" x:Name="GridImgBorder" BorderThickness="1" BorderBrush="red" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ScrollViewer x:Name="GridImgScrollViewer" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                    <Image x:Name="GridImg" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </ScrollViewer>
            </Border>

            <Border Grid.Row="1" Panel.ZIndex="2" x:Name="ImgBorder" BorderThickness="1" BorderBrush="red" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ScrollViewer x:Name="ImgScrollViewer" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" ScrollChanged="ImgScrollViewer_ScrollChanged">
                    <Image x:Name="Img" MouseLeftButtonDown="img_MouseLeftButtonDown" VerticalAlignment="Top" HorizontalAlignment="Left" />
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>

</controls:ControlBase>
