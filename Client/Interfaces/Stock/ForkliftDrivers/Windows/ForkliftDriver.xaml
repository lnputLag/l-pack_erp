<UserControl x:Class="Client.Interfaces.Stock.ForkliftDrivers.Windows.ForkliftDriver"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:main="clr-namespace:Client.Interfaces.Main"

             mc:Ignorable="d" 
             d:DesignWidth="640" d:DesignHeight="400" 
             Style="{DynamicResource UserControlCanvas}" 
             >
    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>


    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource DataGridContainer}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border >
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Name="Toolbar"  Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                            <Button Name="SaveButton"   Click="SaveButton_Click" Content="Сохранить"  Style="{DynamicResource FButtonPrimary}"    />
                            <Button Name="CancelButton" Click="CancelButton_Click" IsCancel="true" Content="Отмена"     Style="{DynamicResource FButtonCancel}"    />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <TextBlock  Name="FormStatus" Text="Не все обязательные поля заполнены верно" TextAlignment="Left" Style="{DynamicResource FStatusBar2}" Margin="0,0,0,0" HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right" Width="273" >
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" >
                <Grid ShowGridLines="false" Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FromGrid}" Width="640" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2.2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="ФИО водителя: *"    Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="0"  Grid.Column="1" Grid.ColumnSpan="3" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="DriverName" Text="Константинопольский Константин Константинович" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="64"  />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Телефон водителя:"    Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal" >
                            <TextBox  Name="DriverPhone" Text="89202442233" Width="120" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}"  MaxLength="13" />
                            <Label Content="формат: 89202442233" Style="{DynamicResource FormLabelNote}" HorizontalAlignment="Left" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Пароль: *"    Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="2"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="Password" Text="1234567890123456" TextWrapping="NoWrap" Width="120" HorizontalAlignment="Left" Style="{DynamicResource FormField}"  MaxLength="16" />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Бригадир"    Style="{DynamicResource FormLabel}"/>
                    </Border>
                    <Border Grid.Row="3"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <main:SelectBox  x:Name="ForemanTypeListBox"  Style="{DynamicResource CustomFormField}" HorizontalAlignment="Left" ListBoxMinHeight="80" ListBoxMinWidth="140"   Width="140" Autocomplete="False"  IsEnabled="False" />
                    </Border>

                    <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Место работы:"    Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="4" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Name="StockProductCheckBox"  Style="{DynamicResource FormCheckBox}" Click="StockProductCheckBox_OnClick" />
                            <Label Content="Склад готовой продукции."  VerticalAlignment="Center"   Style="{DynamicResource FormLabel}" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">

                    </Border>
                    <Border Grid.Row="5" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Name="StockRollCheckBox" Style="{DynamicResource FormCheckBox}"/>
                            <Label Content="Склад рулонов"  VerticalAlignment="Center"   Style="{DynamicResource FormLabel}" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">

                    </Border>
                    <Border Grid.Row="6" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Name="StockWastepaperCheckBox" Style="{DynamicResource FormCheckBox}"/>
                            <Label Content="Склад макулатуры" VerticalAlignment="Center"    Style="{DynamicResource FormLabel}" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Статус:"    Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="7" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Name="ArchiveCheckBox" Style="{DynamicResource FormCheckBox}" Unchecked="ArchiveCheckBox_OnChecked" Checked="ArchiveCheckBox_OnChecked" />
                            <Label Content="Архивный"  VerticalAlignment="Center"  Style="{DynamicResource FormLabel}"  />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="8" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Площадка:"    Style="{DynamicResource FormLabel}" />
                    </Border>
                    <Border Grid.Row="8" Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <main:SelectBox x:Name="FactorySelectBox" Style="{DynamicResource CustomFormField}" HorizontalAlignment="Left" ListBoxMinHeight="80" Width="120" Autocomplete="False"/>
                    </Border>
                </Grid>
            </Border>


        </Grid>
    </Border>
</UserControl>
