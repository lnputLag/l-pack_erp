<UserControl x:Class="Client.Interfaces.Stock.MaterialGroupElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Stock"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Grid.Row="1">

        <!-- === КАРТОЧКИ === -->
        <ScrollViewer x:Name="CardsView"
               VerticalScrollBarVisibility="Auto">

            <ItemsControl x:Name="CardsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <Border Width="300"
                         Margin="10"
                         Padding="12"
                         Background="White"
                         CornerRadius="12"
                         BorderBrush="#DDD"
                         BorderThickness="1">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Заголовок -->
                                <TextBlock Text="{Binding Name}"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="#222"/>

                                <!-- Форматы -->
                                <ItemsControl Grid.Row="2"
                                       ItemsSource="{Binding Formats}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>

                                            <Grid Margin="0,3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding Format}"
                                                    Foreground="#555"/>

                                                <Border Grid.Column="1"
                                                 Height="8"
                                                 Margin="6,0"
                                                 Background="#EEE"
                                                 CornerRadius="4">

                                                    <Border Height="8"
                                                     Width="{Binding BarWidth}"
                                                     Background="{Binding BarColor}"
                                                     HorizontalAlignment="Left"
                                                     CornerRadius="4"/>
                                                </Border>

                                                <TextBlock Grid.Column="2"
                                                    Text="{Binding QtyStock}"
                                                    FontWeight="SemiBold"
                                                    HorizontalAlignment="Right"/>
                                            </Grid>

                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                            </Grid>
                        </Border>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>

</UserControl>
