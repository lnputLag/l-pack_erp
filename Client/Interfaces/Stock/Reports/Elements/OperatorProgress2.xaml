<UserControl x:Class="Client.Interfaces.Stock.OperatorProgress2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces"
             xmlns:stock="clr-namespace:Client.Interfaces.Stock"
             mc:Ignorable="d" 
                d:DesignHeight="60" d:DesignWidth="200">


    
    <Grid MouseDown="Grid_MouseDown">

        <Grid Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="Buf1ColorRow" Width="1*"/>
                <ColumnDefinition x:Name="Buf1GrayRow" Width="0" />

            </Grid.ColumnDefinitions>

            <Border Background="LightGray" Grid.ColumnSpan="2" Grid.RowSpan="2" >
                
            </Border>

            <TextBlock Name="Description" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12" Grid.Column="0" Text="Иванов И.И." Margin="5,0"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>

                    <RowDefinition Height ="*"/>
                    <RowDefinition Height ="*"/>
                    <RowDefinition Height ="*"/>
                </Grid.RowDefinitions>

                
                <stock:OperatorProgressItem Grid.Row="0"  x:Name="ItemArrival" />
                <stock:OperatorProgressItem Grid.Row="1"  x:Name="ItemMove" />
                <stock:OperatorProgressItem Grid.Row="2"  x:Name="ItemWriteOff" />

            </Grid>
           


        </Grid>

        
    </Grid>

</UserControl>
