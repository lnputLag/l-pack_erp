<UserControl x:Class="Client.Interfaces.Stock.MaterialCompositionElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Stock"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="350">
    
    <Border x:Name="MainBorder"
            Width="350"
            Margin="10, 15, 10, 15"
            Padding="15"
            Background="White"
            CornerRadius="8"
            BorderBrush="#E0E0E0"
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок композиции -->
            <TextBlock x:Name="CartonNameText"
                       Grid.Row="0"
                       Text="Название композиции"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="#333"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"/>

            <!-- Контейнер для слоев -->
            <StackPanel Grid.Row="1" Orientation="Vertical" x:Name="LayersContainer" />

            <!-- Итоговое количество -->
            <Border Grid.Row="2"
                    Background="#F5F5F5"
                    CornerRadius="4"
                    Padding="6,4"
                    Margin="0,10,0,0">
                <TextBlock x:Name="TotalStockText"
                           Text="Всего: 0 кг"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#555"
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
