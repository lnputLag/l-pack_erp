<UserControl x:Class="Client.Interfaces.Stock.MaterialGroupElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Stock"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="300">

    <Border x:Name="MainBorder"
            Width="250"
            Margin="5"
            Padding="10"
            Background="White"
            CornerRadius="8"
            BorderBrush="#E0E0E0"
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок материала -->
            <TextBlock x:Name="MaterialNameText"
                       Grid.Row="0"
                       Text="Название материала"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="#333"
                       />

            <StackPanel Grid.Row="1" Orientation="Vertical" x:Name ="FormatContainer" >
                
            </StackPanel>

            <!-- Итоговое количество -->
            <Border 
                Grid.Row="2"
                    Background="#F5F5F5"
                    CornerRadius="4"
                    Padding="4,2">

                <TextBlock x:Name="TotalQuantityText"
                           Text="Всего: 350 шт"
                           FontSize="11"
                           Foreground="#555"
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</UserControl>