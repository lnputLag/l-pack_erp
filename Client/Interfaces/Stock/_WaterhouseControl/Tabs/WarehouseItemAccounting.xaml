<controls:ControlBase  
             x:Class="Client.Interfaces.Stock.WarehouseItemAccounting"
             xmlns:local="clr-namespace:Client.Interfaces.Stock"
             
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignWidth="1980"
             d:DesignHeight="768" 
             Style="{DynamicResource UserControlCanvas}">
    
    <Border Style="{DynamicResource DataGridContainerHolder}"  >
        <Grid Style="{DynamicResource DataGridContainer}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource GridControlPanel}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Name="ItemGridToolbar" Style="{DynamicResource FormHeaderButtonsPanel}" HorizontalAlignment="Left"  >
                            <Button Name="RefreshItemsButton" Content="Обновить"  Style="{DynamicResource Button}"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Button Name="EditItemButton" Content="Изменить" Style="{DynamicResource Button}" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Button Name="MoveButton" Content="Переместить"  Style="{DynamicResource Button}" />
                            <Button Name="ConsmptnButton" Content="Списать"  Style="{DynamicResource Button}" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Label Content="Поиск:"  Style="{DynamicResource TopLabel}" />
                            <TextBox Style="{DynamicResource FormFieldTopPanel}" MinWidth="100" MaxWidth="150"  TextWrapping="NoWrap" Name="ItemsSearchBox" Text=""  />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <controls:SelectBox x:Name="ZoneFilter" Style="{DynamicResource CustomFormField}" Width="250" ListBoxMinHeight="135" SelectedItemChanged="ZoneFilter_SelectedItemChanged" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <controls:SelectBox  x:Name="ItemTypeSelectBox"  Style="{DynamicResource CustomFormField}" Width="170" Autocomplete="False" SelectedItemChanged="ItemTypeSelectBox_SelectedItemChanged" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <controls:SelectBox x:Name="ShelfLifeStatusSelectBox" Style="{DynamicResource CustomFormField}" Width="145" ListBoxMinHeight="80" SelectedItemChanged="ShelfLifeStatusSelectBox_SelectedItemChanged" />
                            <Border Style="{DynamicResource FormButtonsPanelDoubleSpacer}"></Border>

                            <Button Name="PrintExcel" Content="В Excel"  Style="{DynamicResource Button}" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            
                            <Button Name="PrintButton" Content="Печать ярлыков"  Style="{DynamicResource Button}" />
                            <Label Content="Экземпляров:"  Style="{DynamicResource TopLabel}" />
                            <TextBox  Width="27"  MaxLength="2" Style="{DynamicResource FormFieldTopPanel}" MinWidth="27" TextWrapping="NoWrap" Name="ItemsPrintCount" Text="1" />
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right">
                            <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?" Style="{DynamicResource Button}" Margin="0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="1"  Grid.Column="0" >
                <Border Style="{DynamicResource DataGridMainHolder}" >
                    <controls:GridBox4 x:Name="ItemGrid" />
                </Border>
            </Grid>
            
        </Grid>
    </Border>
</controls:ControlBase>
