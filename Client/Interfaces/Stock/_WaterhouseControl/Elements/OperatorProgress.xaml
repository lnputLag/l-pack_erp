<UserControl x:Class="Client.Interfaces.Stock.OperatorProgress"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Stock"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">


        <Grid MouseDown="Grid_MouseDown">
       
        <Grid Margin="2,0,2,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="Buf1PercentRow" Width="3*" />
                <ColumnDefinition x:Name="Buf1DataRow" Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid x:Name="Buf1PercentGrid" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="Buf1ColorRow" Width="1*"/>
                    <ColumnDefinition x:Name="Buf1GrayRow" Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="ColumnArrivale" Width="1*" />
                        <ColumnDefinition x:Name="ColumnMove" Width="1*" />
                        <ColumnDefinition x:Name="ColumnWriteOff" Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle x:Name="Buf1ColorRectangle" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="LightBlue"/>
                    <Rectangle x:Name="Buf2ColorRectangle" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="LightGreen"/>
                    <Rectangle x:Name="Buf3ColorRectangle" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="Orange"/>
                </Grid>

                <Rectangle x:Name="Buf1GrayRectangle" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="LightGray"/>
            </Grid>
            <TextBlock Name="Description" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12" Grid.Column="0" Text="Иванов И.И." Margin="3,0"/>

            <Grid x:Name="Buf1DataGrid" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Rectangle x:Name="Buf1DataRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="LightCyan"/>
                <TextBlock Name="Description2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Text="100"/>
            </Grid>
        </Grid>
    </Grid>
  

</UserControl>
