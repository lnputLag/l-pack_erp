<UserControl x:Class="Client.Interfaces.Stock.WarehouseCellTypeItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Interfaces.Stock"
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource FormContainerHolder}" Margin="1" >
        <Grid Style="{DynamicResource FormContainer}" d:Background="White">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FormControlPanel}" >
                <Grid ShowGridLines="false">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" BorderBrush="#ff00cccc" BorderThickness="0" >
                        <StackPanel Style="{DynamicResource FormHeaderButtonsPanel}" Name="FormToolbar" >
                            <Button Content="Сохранить" Name="SaveButton" Click="SaveButton_Click"  Style="{DynamicResource FButtonPrimary}" VerticalAlignment="Top" />
                            <Button Content="Отмена"    Name="CancelButton" Click="CancelButton_Click" Style="{DynamicResource Button}" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>
                            <TextBlock  Name="Status" Text="Не все обязательные поля заполнены верно"  TextAlignment="Left" Style="{DynamicResource FStatusBar2}" HorizontalAlignment="Stretch" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Grid.Row="2" Grid.Column="0" >
                <Grid ShowGridLines="false" Grid.Row="0" Grid.Column="0" Style="{DynamicResource FromGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" Height="24">
                        <Label Content="Тип ячейки: *" Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" Height="24">
                        <TextBox  Name="TextName" Text="12345678" MinWidth="65" Width="250" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}"   />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Склад: *" Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox x:Name="Warehouse" Style="{DynamicResource CustomFormField}" MinWidth="110" Width="180" HorizontalAlignment="Left" />
                    </Border>

                    <Border Grid.Row="2"  Grid.Column="0" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="CheckPack"  Style="{DynamicResource FormCheckBox}" HorizontalAlignment="Right" VerticalContentAlignment="Center" />
                    </Border>
                    <Border Grid.Row="2"  Grid.Column="1" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Стеллажная ячейка" HorizontalAlignment="Left" Style="{DynamicResource FormLabel}"/>
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" Height="24">
                        <Label Content="Ширина, мм: " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="3"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" Height="24">
                        <TextBox  Name="TextWidth" MaxLength="8" Text="12345678" MinWidth="65" Width="65" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}"   />
                    </Border>

                    <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" Height="24">
                        <Label Content="Максимальная ширина, мм: " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="4"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" Height="24">
                        <TextBox  Name="TextMaxWidth" MaxLength="8" Text="12345678" MinWidth="65" Width="65" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}"   />
                    </Border>

                    <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" Height="24">
                        <Label Content="Глубина, мм: " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="5"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" Height="24">
                        <TextBox  Name="TextDepth" MaxLength="8" Text="12345678" MinWidth="65" Width="65" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}"   />
                    </Border>

                    <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" Height="24">
                        <Label Content="Высота, мм: " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="6"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" Height="24">
                        <TextBox  Name="TextHeight" MaxLength="8" Text="12345678" MinWidth="65" Width="65" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}"   />
                    </Border>

                    <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}" Height="24">
                        <Label Content="Вес, кг: " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="7"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}" Height="24">
                        <TextBox  Name="TextWeight" MaxLength="8" Text="12345678" MinWidth="65" Width="65" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}"   />
                    </Border>

                    <Border Grid.Row="8"  Grid.Column="0" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="CheckBarcode"  Style="{DynamicResource FormCheckBox}" HorizontalAlignment="Right" VerticalContentAlignment="Center" />
                    </Border>
                    <Border Grid.Row="8"  Grid.Column="1" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Использование штрихкода" HorizontalAlignment="Left" Style="{DynamicResource FormLabel}"/>
                    </Border>
                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>
