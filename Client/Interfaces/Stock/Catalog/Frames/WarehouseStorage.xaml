<controls:ControlBase 
             x:Class="Client.Interfaces.Stock.WarehouseStorage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Client.Interfaces.Main"
             xmlns:local="clr-namespace:Client.Interfaces.Stock"
             mc:Ignorable="d" 
             Style="{DynamicResource UserControlCanvas}"
             HorizontalAlignment="Stretch" VerticalAlignment="Top" >
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/l-pack_erp;component/Assets/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource FormContainerHolder}" Margin="1" >
        <Grid Style="{DynamicResource FormContainer}" d:Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FormControlPanel}" >
                <Grid ShowGridLines="false">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" BorderBrush="#ff00cccc" BorderThickness="0" >
                        <StackPanel Style="{DynamicResource FormHeaderButtonsPanel}" Name="FormToolbar" >
                            <Button Content="Сохранить" Name="SaveButton" Click="SaveButton_Click"  Style="{DynamicResource FButtonPrimary}" VerticalAlignment="Top" />
                            <Button Content="Отмена"    Name="CancelButton" Click="CancelButton_Click" Style="{DynamicResource Button}" />
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <Button Content="Печать" Name="PrintButton" Style="{DynamicResource Button}" Click="PrintButton_Click"  IsEnabled="False"/>
                            <Border Style="{DynamicResource FormButtonsPanelSpacer}"></Border>

                            <TextBlock  Name="Status" Text="Не все обязательные поля заполнены верно"  TextAlignment="Left" Style="{DynamicResource FStatusBar2}" HorizontalAlignment="Stretch" />
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Row="0" Grid.Column="1" Style="{DynamicResource FormHeaderButtonsPanel}"  HorizontalAlignment="Right">
                        <Button Name="SettingsButton" ToolTip="Настройка"   Style="{DynamicResource ButtonGlyph}" Click="SettingsButton_Click" Margin="0,0,5,0">
                            <Image Style="{DynamicResource SettingsImage}" />
                            <Button.ContextMenu>
                                <ContextMenu Name="BurgerMenu">
                                    <MenuItem Header="Настройка печати" Name="BurgerPrintSettings" Click="BurgerPrintSettings_Click"  Background="#ffffff" />
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>

                        <Button Name="HelpButton"  Width="24" MinWidth="24"  Content="?" Style="{DynamicResource Button}" Click="HelpButton_Click"  Margin="0"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormVerticalPanelSpacer}"></Border>

            <Border Grid.Row="2" Grid.Column="0" >
                <Grid ShowGridLines="false" Grid.Row="0"  Grid.Column="0" Style="{DynamicResource FromGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="221"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Наименование: *" Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="0"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="StorageNameTextBox" Text="12345678 1234567" MinWidth="120" Width="210" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}" IsReadOnly="True"  />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Склад: *" Style="{DynamicResource FormLabel}"  />
                    </Border>

                    <Border Grid.Row="1"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox x:Name="WarehouseSelectBox" Style="{DynamicResource CustomFormField}" MinWidth="110" Width="210" HorizontalAlignment="Left" SelectedItemChanged="Warehouse_SelectedItemChanged" />
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Зона: *" Style="{DynamicResource FormLabel}"  />
                    </Border>

                    <Border Grid.Row="2"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox x:Name="ZoneSelectBox" Style="{DynamicResource CustomFormField}" MinWidth="110" Width="210" HorizontalAlignment="Left" />
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Ряд: *" Style="{DynamicResource FormLabel}"  />
                    </Border>

                    <Border Grid.Row="3"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox x:Name="RowSelectBox" Style="{DynamicResource CustomFormField}" MinWidth="110" Width="210" HorizontalAlignment="Left" SelectedItemChanged="GenerateNameFromSelectBox" />
                    </Border>

                    <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Место: *" Style="{DynamicResource FormLabel}"  />
                    </Border>

                    <Border Grid.Row="4"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox x:Name="CellSelectBox" Style="{DynamicResource CustomFormField}" MinWidth="110" Width="210" HorizontalAlignment="Left" SelectedItemChanged="GenerateNameFromSelectBox" />
                    </Border>

                    <Border Grid.Row="5" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Ярус:  " Style="{DynamicResource FormLabel}"  />
                    </Border>

                    <Border Grid.Row="5"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox x:Name="LevelSelectBox" Style="{DynamicResource CustomFormField}" MinWidth="110" Width="210" HorizontalAlignment="Left" SelectedItemChanged="GenerateNameFromSelectBox" />
                    </Border>

                    <Border Grid.Row="6" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Тип ячейки: *" Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="6"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox x:Name="StorageTypeSelectBox" Autocomplete="True" Style="{DynamicResource CustomFormField}" MinWidth="110" Width="320" HorizontalAlignment="Left" />
                    </Border>

                    <Border Grid.Row="7" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Область хранения: *" Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="7"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <controls:SelectBox x:Name="StorageAreaSelectBox" Autocomplete="True" Style="{DynamicResource CustomFormField}" MinWidth="110" Width="320" HorizontalAlignment="Left" />
                    </Border>

                    <Border Grid.Row="8" Grid.Column="0" Style="{DynamicResource FormLabelContainer}">
                        <Label Content="Приоритет:  " Style="{DynamicResource FormLabel}"  />
                    </Border>
                    <Border Grid.Row="8"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <TextBox  Name="StoragePriorityTextBox" MaxLength="8" Text="123" MinWidth="65" Width="65" HorizontalAlignment="Left" TextWrapping="NoWrap" Style="{DynamicResource FormField}"   />
                    </Border>

                    <Border Grid.Row="9"  Grid.Column="1" Style="{DynamicResource FormFieldContainer}">
                        <CheckBox Name="StorageFixedPriorityCheckBox" Content="Фиксированное значение приоритета" Style="{DynamicResource FormField}" HorizontalAlignment="Left" VerticalContentAlignment="Center" />
                    </Border>

                    <Border Name="BarcodeBorder" Grid.Row="10" Grid.Column="0" Margin="0,15,0,0" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="1"> 
                        <FlowDocumentScrollViewer Name ="ScrollViewer" ScrollViewer.VerticalScrollBarVisibility="Auto" >
                            <FlowDocument Name="Document" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                      xmlns:xrd="clr-namespace:CodeReason.Reports.Document;assembly=CodeReason.Reports"
                                      xmlns:xrbc="clr-namespace:CodeReason.Reports.Document.Barcode;assembly=CodeReason.Reports"
                                      PageHeight="15cm" PageWidth="12cm">
                                <Section FontFamily="Arial">
                                    <Paragraph TextAlignment="Left" FontFamily="Arial">
                                        <TextBlock Margin="0,0,0,0" FontSize="127" FontWeight="Bold" FontFamily="Arial" Text="C01-02-1" TextWrapping="NoWrap"/>
                                    </Paragraph>
                                    <Paragraph TextAlignment="Center" >
                                        <xrbc:InlineBarcodeC128 ShowText="false" PropertyName="barcode" Value="%barcode%" Width="14cm" Height="2cm" BarcodeSubType="BC"/>
                                    </Paragraph>
                                </Section>
                            </FlowDocument>
                        </FlowDocumentScrollViewer>
                    </Border>
                    
                </Grid>

            </Border>

        </Grid>
    </Border>
</controls:ControlBase>
