                            <Label>Attempts:</Label>
                            <TextBox  Name="RequestAttempts" Style="{DynamicResource FormField}" Width="55"></TextBox>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource FormLabelContainer}">
