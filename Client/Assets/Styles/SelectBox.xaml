<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <SolidColorBrush x:Key="FlatButton" Color="Green"/>

    <Style x:Key="UserControlCanvas" TargetType="{x:Type UserControl}">
        <Setter Property="Background" Value="#ffffffff"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="False">
                <Setter Property="Background" Value="#ffF0F0F0" />
                <Setter Property="Foreground" Value="#ff000000"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="TopContainer" TargetType="{x:Type Grid}">                
        <Setter Property="Margin" Value="0,0,0,0" />        
    </Style>

    <Style x:Key="ValueTextBox" TargetType="{x:Type TextBox}">
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="Height" Value="23" />

        <Setter Property="Focusable" Value="true" />
        <Setter Property="Padding" Value="3,3,0,0" />
                
        <Setter Property="BorderBrush" Value="#ffcccccc" />
        <Setter Property="BorderThickness" Value="0,0,0,0" />
        
        <Setter Property="Foreground" Value="#ff000000"/>

        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="True">
                <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
            </Trigger>
            <Trigger Property="IsReadOnly" Value="true">
                <Setter Property="Background" Value="#fff0f0f0" />
            </Trigger>
            <!--
            <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Opacity" Value="0.3"/>
            </Trigger>
            -->
            <!--
            <DataTrigger Binding="{Binding IsReadOnly, RelativeSource={RelativeSource Self}}" Value="True">
                <Setter Property="Background" Value="#ffF0F0F0" />
            </DataTrigger>
            -->
            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="False">
                <Setter Property="Background" Value="#ffF0F0F0" />
                <Setter Property="Foreground" Value="#ff000000"/>
            </DataTrigger>
        </Style.Triggers>
        
    </Style>

    <Style x:Key="ShowDropdownButton" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="22" />
        <Setter Property="Height" Value="22" />
        <Setter Property="Padding" Value="0,0,0,0"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
        <Setter Property="Foreground" Value="#FF333333"/>
        <Setter Property="BorderThickness" Value="1,1,1,1"/>
        <Setter Property="BorderBrush" Value="#FFcccccc"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <!--
                    <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    -->
                    <Border Name="border" CornerRadius="0" Background="#ffF0F0F0" BorderBrush="#ffF0F0F0" BorderThickness="1,1,1,1" >
                        <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#ffC0DDEB"></Setter>
                            <Setter TargetName="border" Property="BorderBrush" Value="#ff26A0DA"></Setter>
                        </Trigger>
                        <!--
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Opacity" Value="0.3"/>
                        </Trigger>
                        -->
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DropDownBlock" TargetType="{x:Type Popup}">
        <Setter Property="IsOpen" Value="false" />
        <Setter Property="VerticalOffset" Value="0" />
        <Setter Property="Height" Value="72" />
        <Setter Property="Width" Value="120" />
        <Setter Property="MinWidth" Value="50" />
        <Setter Property="Placement" Value="Bottom" />
        <Setter Property="HorizontalOffset" Value="-1" />        
    </Style>

    <Style x:Key="DropDownBorder" TargetType="{x:Type Border}">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="BorderBrush" Value="#ffcccccc" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Margin" Value="0,0,0,0" />
    </Style>

    <Style x:Key="DropDownListBox" TargetType="{x:Type ListBox}" >
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="BorderBrush" Value="#ffcccccc" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style x:Key="DropDownListItemText" TargetType="{x:Type TextBlock}">

    </Style>

    <Style x:Key="DropDownListItem" TargetType="{x:Type ListBoxItem}">
        <Setter Property="SnapsToDevicePixels" Value="true"/>
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Height" Value="20" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="TextBlock.Padding" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Name="Border"  SnapsToDevicePixels="True" Margin="0" Padding="5,1,0,0"  Background="{TemplateBinding Background}">
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="#ff0C79CA"/>
                            <Setter Property="Foreground" Value="#ffffffff"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="#ffC0DDEB"/>
                            <Setter Property="BorderBrush" Value="#ff26A0DA"/>
                            <Setter Property="Foreground" Value="#ff000000"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DropDownThumb" TargetType="{x:Type Thumb}">
        <Setter Property="BorderBrush" Value="#ffffcccc" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Path x:Name="SortArrow" Visibility="Visible"  Stretch="Fill" 
                            Width="10" Height="10" Fill="#ff999999" Margin="0,0,2,2"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Right">

                        <Path.Data>
                            <StreamGeometry>M0,0 L1,0 1,1 z</StreamGeometry>
                        </Path.Data>
                        <Path.LayoutTransform>
                            <RotateTransform Angle="90"></RotateTransform>
                        </Path.LayoutTransform>
                    </Path>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ChevronDownImage" TargetType="{x:Type Image}">
        <Setter Property="Source"   Value="/l-pack_erp;component/Assets/Icons/appbar.chevron.down.png"/>
        <Setter Property="Opacity"  Value="0.35"/>
        <Setter Property="RenderOptions.BitmapScalingMode" Value="Linear"/>
        <Setter Property="VerticalAlignment"    Value="Center"/>
        <Setter Property="HorizontalAlignment"  Value="Center"/>
        <Setter Property="Width"  Value="23"/>
        <Setter Property="Height"  Value="23"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <Style x:Key="DropDownGrid" TargetType="{x:Type DataGrid}" >
        <Setter Property="BorderThickness" Value="1,1,1,1" />
        <Setter Property="HorizontalGridLinesBrush" Value="#FFCCCCCC"/>
        <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserResizeColumns" Value="true"/>
        <Setter Property="CanUserResizeRows" Value="False"/>
        <Setter Property="CanUserSortColumns" Value="true"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="ColumnWidth" Value="*"/>
        <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="SelectionUnit" Value="FullRow"/>
        <Setter Property="ColumnHeaderStyle" Value="{DynamicResource DropDownGridColHeader}"/>
        <Setter Property="RowHeaderStyle" Value="{DynamicResource DropDownGridRowHeader}"/>
        <Setter Property="RowStyle" Value="{DynamicResource DropDownGridRow}"/>
        <Setter Property="CellStyle" Value="{DynamicResource DropDownGridCell}"/>
    </Style>

    <Style x:Key="DropDownGridColHeader" TargetType="{x:Type DataGridColumnHeader}" >
        <Setter Property="Height" Value="22"/>
        <Setter Property="Background" Value="#fff0f0f0"/>
        <Setter Property="Foreground" Value="#ff000000"/>
        <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
        <Setter Property="BorderThickness" Value="0,0,1,1" />
        <Setter Property="Padding" Value="5,0,0,0"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#88C0DDEB"/>
                <Setter Property="ToolTip" Value="{Binding}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DropDownGridRowHeader" TargetType="{x:Type DataGridRowHeader}" >
        <Setter Property="Width" Value="25"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="#fff0f0f0"/>
        <Setter Property="Foreground" Value="#ff000000"/>
        <Setter Property="BorderBrush" Value="#FFCCCCCC" />
        <Setter Property="BorderThickness" Value="0,0,1,1" />
    </Style>

    <Style x:Key="DropDownGridRow" TargetType="{x:Type DataGridRow}" >
        <Setter Property="Height"  Value="22"/>
        <Setter Property="BorderBrush" Value="#FF900000"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#ff0C79CA"/>
                <Setter Property="Foreground" Value="#ffffffff"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DropDownGridCell" TargetType="{x:Type DataGridCell}" >
        <Setter Property="BorderBrush" Value="#FF900000"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>


</ResourceDictionary>
    